<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"

	android:versionCode="107"
	android:versionName="2.0.78" package="com.chess" android:installLocation="auto">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.READ_PHONE_STATE"/>

	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!--<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />-->

	<!--GCM Permissions-->
	<uses-permission android:name="android.permission.GET_ACCOUNTS" />
	<uses-permission android:name="android.permission.WAKE_LOCK" />
	<uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

	<permission android:name="com.chess.permission.C2D_MESSAGE" android:protectionLevel="signature" />
	<uses-permission android:name="com.chess.permission.C2D_MESSAGE" />


	<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="16"/>
	<supports-screens android:largeScreens="true" android:xlargeScreens="true" />

	<application android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:logo="@drawable/ic_home"
		android:debuggable="false"
		android:theme="@style/OrangeButtonTheme"
		>
		<activity android:name=".ui.activities.SplashActivity"
			android:label="@string/app_name"
			android:theme="@style/NoTitle"
			>
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity android:name=".ui.activities.HomeScreenActivity"
			android:logo="@drawable/ic_logo_bar"
			android:label=""
			/>

		<activity android:name="com.google.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation"/>

		<activity android:name="com.millennialmedia.android.MMAdViewOverlayActivity"
			android:theme="@android:style/Theme.Translucent.NoTitleBar"
			android:configChanges="keyboardHidden|orientation|keyboard"/>
		<activity android:name="com.millennialmedia.android.VideoPlayer"
			android:configChanges="keyboardHidden|orientation|keyboard"/>

		<activity android:name=".ui.activities.VideoListActivity" android:label="@string/label_video"
			android:configChanges="keyboardHidden|keyboard|orientation"/>

		<activity android:name=".ui.activities.ChatOnlineActivity" android:label="@string/label_chat_online"
			android:configChanges="keyboardHidden|keyboard|orientation"/>

		<activity android:name=".ui.activities.ChatLiveActivity" android:label="@string/label_chat_live"
			android:configChanges="keyboardHidden|keyboard|orientation"/>

		<activity android:name=".ui.activities.LoginScreenActivity"
			android:theme="@style/OrangeButtonNotitle"
			/>

		<activity android:name=".ui.activities.LiveFriendChallengeActivity"
			android:configChanges="keyboardHidden|orientation|keyboard"
			android:label="@string/label_friend_challenge_live"/>

		<activity android:name=".ui.activities.LiveOpenChallengeActivity"
			android:configChanges="keyboardHidden|orientation|keyboard"
			android:label="@string/label_create_challenge_live"/>

		<activity android:name=".ui.activities.OnlineFriendChallengeActivity"
			android:label="@string/label_friend_challenge_online"/>

		<activity android:name=".ui.activities.OnlineOpenChallengeActivity"
			android:label="@string/label_create_challenge_online"/>

		<activity android:name="com.mopub.mobileads.MoPubActivity"
			android:configChanges="keyboardHidden|keyboard|orientation"/>
		<activity android:name="com.mopub.mobileads.MraidActivity"
			android:configChanges="keyboardHidden|keyboard|orientation"/>
		<activity android:name="com.mopub.mobileads.MraidBrowser"
			android:configChanges="keyboardHidden|keyboard|orientation"/>

        <activity android:name="com.inneractive.api.ads.InneractiveFullScreenView" />

		<activity android:name=".ui.activities.OnlineScreenActivity" android:label="@string/label_play_online"

			/>
		<!--android:configChanges="keyboardHidden|keyboard|orientation"-->
		<activity android:name=".ui.activities.OnlineNewGameActivity" android:label="@string/label_online_new_game"
			/>

		<activity android:name=".ui.activities.LiveScreenActivity" android:label="@string/label_play_live"

			/>   <!--android:configChanges="keyboardHidden|orientation|keyboard"-->
		<activity android:name=".ui.activities.LiveNewGameActivity" android:label="@string/label_live_new_game"
			android:configChanges="keyboardHidden|orientation|keyboard"
			/>

		<!--Game Board screens-->
		<activity android:name=".ui.activities.GameTacticsScreenActivity" android:label="@string/label_tactics"
			/>
		<activity android:name=".ui.activities.GameCompScreenActivity" android:label="@string/label_game_comp"
			/>
		<activity android:name=".ui.activities.GameLiveScreenActivity" android:label="@string/label_game_live"
			/>
		<!--android:configChanges="orientation"-->
		<activity android:name=".ui.activities.GameOnlineScreenActivity" android:label="@string/label_game_online"
			/>
		<activity android:name=".ui.activities.GameFinishedScreenActivity" android:label="@string/label_game_finished"
			/>

		<activity android:name=".ui.activities.PreferencesScreenActivity" android:label="@string/label_settings"
			android:configChanges="keyboardHidden|keyboard|orientation" android:theme="@style/GreyButtonTheme"/>

		<activity android:name=".ui.activities.VideoScreenActivity" android:label="@string/label_video"
			android:configChanges="keyboardHidden|keyboard|orientation"
			android:launchMode="singleTop">
			<!-- Receives the search request. -->
			<intent-filter>
				<action android:name="android.intent.action.SEARCH"/>
				<!-- No category needed, because the Intent will specify this class component-->
			</intent-filter>

			<!-- Points to searchable meta data. -->
			<meta-data android:name="android.app.searchable" android:resource="@xml/searchable"/>
		</activity>
		<activity android:name=".ui.activities.ComputerScreenActivity" android:label="@string/label_play_comp"
			/>
		<activity android:name=".ui.activities.SignUpScreenActivity" android:label="@string/label_sign_up"
			android:windowSoftInputMode="stateHidden"/>
		<activity android:name=".ui.activities.WebViewActivity"/>

		<receiver android:name=".backend.AlarmReceiver"/>

		<!--
				  BroadcastReceiver that will receive intents from GCM
				  services and handle them to the custom IntentService.

				  The com.google.android.c2dm.permission.SEND permission is necessary
				  so only GCM services can send data messages for the app.
				-->
		<receiver
			android:name="com.google.android.gcm.GCMBroadcastReceiver"
			android:permission="com.google.android.c2dm.permission.SEND" >
			<intent-filter>
				<!-- Receives the actual messages. -->
				<action android:name="com.google.android.c2dm.intent.RECEIVE" />
				<!-- Receives the registration id. -->
				<action android:name="com.google.android.c2dm.intent.REGISTRATION" />
				<category android:name="com.chess" />
			</intent-filter>
		</receiver>

		<!--
				  Application-specific subclass of GCMBaseIntentService that will
				  handle received messages.

				  By default, it must be named .GCMIntentService, unless the
				  application uses a custom BroadcastReceiver that redefines its name.
				-->
		<service android:name=".GCMIntentService" />

		<meta-data android:name="ADMOB_PUBLISHER_ID" android:value="a14dd6bdf67a607"/>

	</application>

</manifest>
