<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!--Border-->
	<item>
		<shape>
			<corners
				android:topRightRadius="@dimen/button_upgrade_toggle_radius"
				android:bottomRightRadius="@dimen/button_upgrade_toggle_radius" />
			<solid android:color="@color/transparent" />
			<stroke
				android:color="@color/upgrade_toggle_button_border"
				android:width="1dp" />
		</shape>
	</item>

	<!--Button-->
	<item
		android:left="1dp"
		android:right="1dp"
		android:bottom="1dp"
		android:top="1dp">
		<shape>
			<corners
				android:topRightRadius="@dimen/button_upgrade_toggle_radius"
				android:bottomRightRadius="@dimen/button_upgrade_toggle_radius" />
			<solid android:color="@color/upgrade_toggle_button_p" />
		</shape>
	</item>

	<!-- Inner Shadows -->
	<!-- Right -->
	<item
		android:left="1dp"
		android:right="0dp"
		android:bottom="1dp"
		android:top="1dp">
		<shape android:dither="true">
			<corners
				android:topRightRadius="@dimen/button_upgrade_toggle_radius"
				android:bottomRightRadius="@dimen/button_upgrade_toggle_radius" />
			<gradient
				android:angle="0"
				android:startColor="@color/transparent"
				android:centerColor="@color/transparent"
				android:endColor="@color/upgrade_toggle_shadow"
				android:centerY="85%" />
		</shape>
	</item>
	<!-- Top -->
	<item
		android:left="1dp"
		android:right="0dp"
		android:bottom="1dp"
		android:top="1dp">
		<shape android:dither="true">
			<corners
				android:topRightRadius="@dimen/button_upgrade_toggle_radius"
				android:bottomRightRadius="@dimen/button_upgrade_toggle_radius" />
			<gradient
				android:centerColor="@color/transparent"
				android:startColor="@color/transparent"
				android:endColor="@color/upgrade_toggle_shadow"
				android:angle="90"
				android:centerY="75%" />
		</shape>
	</item>


</layer-list>