<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Left Border-->
    <item>
        <shape >
            <solid android:color="@color/dark_spinner_border_left"/>
        </shape>
    </item>

    <!--Right Border-->
    <item
        android:left="1dip">
        <shape >
            <solid android:color="@color/dark_spinner_border_right"/>
        </shape>
    </item>

    <!--Button-->
    <item
        android:left="1dip"
        android:right="1dip"
        >
        <shape >
            <solid android:color="@color/dark_spinner_back" />
            <padding android:left="0dip" />
        </shape>
    </item>


</layer-list>