<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Shadow-->
    <item>
        <shape >
            <corners android:radius="@dimen/button_switch_corners"/>
            <solid android:color="@color/transparent" />
            <stroke android:color="@color/semi_transparent_border" android:width="1px"/>
        </shape>
    </item>

    <!--Border-->
    <item >
        <shape >
            <corners android:radius="@dimen/button_switch_corners"/>
            <solid android:color="@color/switch_white_btn_border" />
        </shape>
    </item>

    <!--Emboss Top Left 1-->
    <item
        android:top="1px"
        android:left="1px"
        android:right="1px"
        android:bottom="1px"
        >
        <shape android:dither="true">
            <corners android:radius="@dimen/button_switch_corners"/>
            <gradient
                android:startColor="@color/switch_white_btn_top_1_p"
                android:endColor="@color/switch_white_btn_bot_2_p"
                android:angle="270"
                />
        </shape>
    </item>

    <!--Emboss Top Left 2-->
    <item
        android:top="2px"
        android:left="2px"
        android:right="2px"
        android:bottom="2px"
        >
        <shape android:dither="true">
            <corners android:radius="@dimen/button_switch_corners"/>
            <gradient
                android:startColor="@color/switch_white_btn_top_2_p"
                android:endColor="@color/switch_white_btn_bot_1_p"
                android:angle="270"
                />
        </shape>
    </item>

    <!--Main-->
    <item
        android:top="3px"
        android:left="3px"
        android:right="3px"
        android:bottom="3px"
        >
        <shape android:dither="true">
            <corners android:radius="@dimen/button_switch_corners"/>
            <gradient
                android:startColor="@color/switch_white_btn_main_p_1"
                android:endColor="@color/switch_white_btn_main_p_2"
                android:angle="270"
                />
        </shape>
    </item>

    <!--Inner-->
<!--    <item
        android:top="@dimen/button_switch_inner_offset"
        android:left="@dimen/button_switch_inner_offset"
        android:right="@dimen/button_switch_inner_offset"
        android:bottom="@dimen/button_switch_inner_offset"
        >
        <shape android:dither="true">
            <corners android:radius="@dimen/button_switch_corners"/>
            <gradient
                android:startColor="@color/switch_white_btn_inner_1"
                android:endColor="@color/switch_white_btn_inner_2"
                android:angle="270"
                />
        </shape>
    </item>-->

</layer-list>