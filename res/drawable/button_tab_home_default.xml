<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Size and Border-->
    <item>
        <shape >
            <solid android:color="@color/transparent"/>
            <size android:height="@dimen/new_tab_button_height"/>
            <stroke android:color="@color/tab_home_button_border" android:width="2px"/>
        </shape>
    </item>

    <!--Button-->
    <item
        android:left="1px"
        android:right="1px"
        android:bottom="2px"
        android:top="1px"
        >
        <shape >
            <solid android:color="@color/tab_home_button" />
        </shape>
    </item>


</layer-list>