<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!--Border-->
	<item>
		<shape>
			<solid android:color="@color/transparent" />
			<stroke
				android:color="@color/upgrade_toggle_button_border"
				android:width="1dp" />
		</shape>
	</item>

	<!--Button-->
	<item
		android:left="1px"
		android:right="1px"
		android:bottom="1dp"
		android:top="1dp">
		<shape>
			<solid android:color="@color/upgrade_toggle_button_c" />
		</shape>
	</item>

	<!-- Inner Shadows -->
	<!-- Top -->
	<item
		android:left="1px"
		android:right="1px"
		android:bottom="1dp"
		android:top="1dp">
		<shape android:dither="true">
			<gradient
				android:centerColor="@color/transparent"
				android:startColor="@color/transparent"
				android:endColor="@color/upgrade_toggle_shadow"
				android:angle="90"
				android:centerY="75%" />
		</shape>
	</item>
	<!-- Left -->
	<item
		android:left="1px"
		android:right="1px"
		android:bottom="1dp"
		android:top="1dp">
		<shape android:dither="true">
			<gradient
				android:angle="180"
				android:startColor="@color/transparent"
				android:centerColor="@color/transparent"
				android:endColor="@color/upgrade_toggle_shadow"
				android:centerX="85%"
				android:centerY="0" />
		</shape>
	</item>
	<!-- Right -->
	<item
		android:left="1px"
		android:right="1px"
		android:bottom="1dp"
		android:top="1dp">
		<shape android:dither="true">
			<gradient
				android:angle="0"
				android:startColor="@color/transparent"
				android:centerColor="@color/transparent"
				android:endColor="@color/upgrade_toggle_shadow"
				android:centerY="85%" />
		</shape>
	</item>


</layer-list>