<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Bottom border-->
    <item >
        <shape >
            <corners android:radius="@dimen/button_upgrade_radius" />
            <solid android:color="@color/upgrade_diamond_button_border_1" />
        </shape>
    </item>

    <!--Bottom border 1-->
    <item
        android:bottom="1px"
        android:right="1px"
        >
        <shape >
            <corners android:radius="@dimen/button_upgrade_radius" />
            <solid android:color="@color/upgrade_diamond_button_border" />
        </shape>
    </item>

    <!--Button-->
    <item
        android:bottom="2px"
        android:right="2px"
        >
        <shape >
            <corners android:radius="@dimen/button_upgrade_radius" />
            <solid android:color="@color/upgrade_diamond_button" />
        </shape>
    </item>

</layer-list>