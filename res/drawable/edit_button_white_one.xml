<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

	<!--Outer border-->
	<item>
		<shape>
			<corners android:radius="2dip" />
			<solid android:color="@android:color/transparent" />
			<stroke
				android:width="@dimen/default_stroke_width"
				android:color="@color/dark_grey_border_for_edit" />
		</shape>
	</item>

	<!--Field-->
	<item
		android:left="2px"
		android:top="2px"
		android:bottom="2px"
		android:right="2px">
		<shape>
			<solid android:color="@color/new_soft_white" />
			<corners android:radius="2dip" />
			<!--<padding
				android:left="@dimen/new_edit_field_padding_left"
				android:right="@dimen/new_edit_field_padding_right"
				android:top="@dimen/new_edit_field_padding_top"
				android:bottom="@dimen/new_edit_field_padding_bottom"
				/>-->
			<!--<size android:height="@dimen/new_edit_field_height"/>-->
		</shape>
	</item>

</layer-list>
