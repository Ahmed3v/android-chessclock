<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Border-->
    <item >
        <shape >
            <corners android:radius="@dimen/new_edit_field_internal_radius" />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/default_stroke_width"
                    android:color="@color/new_grey_border_light"/>
        </shape>
    </item>

    <!--Field-->
    <item
        android:left="2px"
        android:top="2px"
        android:bottom="2px"
        android:right="2px"
        >
        <shape  >
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/new_edit_field_internal_radius" />
            <padding
                android:left="2dip"
                android:right="2dip"
                android:top="2dip"
                android:bottom="4dip"
                />
        </shape>
    </item>

</layer-list>
