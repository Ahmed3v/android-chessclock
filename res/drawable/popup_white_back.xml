<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item>
		<shape
			android:dither="true"
			android:shape="rectangle">
			<solid android:color="@color/transparent" />
			<stroke
				android:width="@dimen/popup_border_width"
				android:color="@color/popup_white_border_grey" />
		</shape>
	</item>

	<item
		android:bottom="@dimen/popup_border_width"
		android:left="@dimen/popup_border_width"
		android:right="@dimen/popup_border_width"
		android:top="@dimen/popup_border_width">
		<shape>
			<solid android:color="@color/popup_back_white" />
		</shape>
	</item>

</layer-list>