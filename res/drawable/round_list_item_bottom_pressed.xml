<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Border-->
    <item >
        <shape >
            <corners
                android:bottomLeftRadius="@dimen/new_round_button_radius"
                android:bottomRightRadius="@dimen/new_round_button_radius"
                />
            <solid android:color="@android:color/transparent" />
            <stroke android:width="@dimen/default_stroke_width"
                    android:color="@color/dark_grey_border"/>
        </shape>
    </item>

    <!--Field-->
    <item
        android:left="2px"
        android:right="2px"
        >
        <shape  >
            <solid android:color="@color/new_square_button_p" />
            <corners
                android:bottomLeftRadius="@dimen/new_edit_field_internal_radius"
                android:bottomRightRadius="@dimen/new_edit_field_internal_radius"
                />
            <padding
                android:left="@dimen/round_list_item_padding_left"
                android:right="@dimen/round_list_item_padding_right"
                android:top="@dimen/round_list_item_padding_top"
                android:bottom="@dimen/round_list_item_padding_bottom"
                />
        </shape>
    </item>

</layer-list>
