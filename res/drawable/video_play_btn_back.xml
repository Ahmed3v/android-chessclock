<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!--Border-->
	<item>
		<shape android:shape="oval">
			<solid android:color="@color/thumbnail_play_border_1" />
			<size
				android:width="@dimen/video_play_btn_back_ring_size"
				android:height="@dimen/video_play_btn_back_ring_size" />

		</shape>
	</item>

	<!--Inner Ring-->
	<item
		android:top="1dp"
		android:left="1dp"
		android:right="1dp"
		android:bottom="1dp">
		<shape android:shape="oval">
			<solid android:color="@color/thumbnail_play_border_2" />
		</shape>
	</item>

	<!--Border + 5px-->
	<item
		android:top="4dp"
		android:left="4dp"
		android:right="4dp"
		android:bottom="4dp">
		<shape android:shape="oval">
			<solid android:color="@color/thumbnail_play_border_1" />

		</shape>
	</item>


	<!--Border + 2px-->
	<item
		android:top="5dp"
		android:left="5dp"
		android:right="5dp"
		android:bottom="5dp">
		<shape android:shape="oval">
			<solid android:color="@color/thumbnail_play_border_inner" />
		</shape>
	</item>

</layer-list>