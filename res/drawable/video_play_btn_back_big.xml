<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Border-->
    <item >
        <shape android:shape="oval">
            <solid android:color="@color/thumbnail_play_border_1"/>
            <size
                android:width="@dimen/video_play_btn_back_ring_size_big"
                android:height="@dimen/video_play_btn_back_ring_size_big"
                />

        </shape>
    </item>

    <!--Inner Ring-->
    <item
        android:top="1dip"
        android:left="1dip"
        android:right="1dip"
        android:bottom="1dip"
        >
        <shape android:shape="oval">
            <solid android:color="@color/thumbnail_play_border_2"/>
        </shape>
    </item>

    <!--Border + 5px-->
    <item
        android:top="5dip"
        android:left="5dip"
        android:right="5dip"
        android:bottom="5dip"
        >
        <shape android:shape="oval">
            <solid android:color="@color/thumbnail_play_border_1"/>

        </shape>
    </item>


    <!--Border + 2px-->
    <item
        android:top="6dip"
        android:left="6dip"
        android:right="6dip"
        android:bottom="6dip"
        >
        <shape android:shape="oval">
            <solid android:color="@color/thumbnail_play_border_inner"/>
            <padding android:left="6dip" />
        </shape>
    </item>

</layer-list>