<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<!--Shadow-->
	<item>
		<shape android:shape="oval">
			<solid android:color="@color/transparent" />
			<size
				android:width="@dimen/video_play_btn_back_ring_size"
				android:height="@dimen/video_play_btn_back_ring_size" />
			<stroke
				android:width="1dp"
				android:color="@color/light_shadow_border" />

		</shape>
	</item>

	<!--Border-->
	<item
		android:top="1dp"
		android:left="1dp"
		android:right="1dp"
		android:bottom="1dp">
		<shape android:shape="oval">
			<solid android:color="@color/thumbnail_play_border_medium" />
			<size
				android:width="@dimen/video_play_btn_back_ring_size"
				android:height="@dimen/video_play_btn_back_ring_size" />

		</shape>
	</item>

	<!--Inner Ring-->
	<item
		android:top="2dp"
		android:left="2dp"
		android:right="2dp"
		android:bottom="2dp">
		<shape android:shape="oval">
			<solid android:color="@color/thumbnail_play_back_medium" />
		</shape>
	</item>


</layer-list>