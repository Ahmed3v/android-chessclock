<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:robo="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/baseView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/game_board_back"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<com.chess.ui.views.ChessBoardLiveView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="visible"
			android:layout_weight="1"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			>
			<RelativeLayout
				android:id="@+id/statusBarLay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>

				<com.chess.RoboTextView
					android:id="@+id/whiteLabelTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingRight="2dip"
					android:paddingLeft="8dip"
					style="@style/GameLabel.Player"
					/>

				<com.chess.RoboTextView
					android:id="@+id/blackLabelTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:paddingLeft="2dip"
					android:paddingRight="8dip"
					style="@style/GameLabel.Player"
					/>

				<com.chess.RoboTextView
					android:id="@+id/analysisTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:visibility="gone"
					android:text="@string/analysis_mode"
					style="@style/GameLabel"
					/>
			</RelativeLayout>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>

				<com.chess.ui.views.GamePanelView
					android:id="@+id/gamePanelView"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					/>

				<LinearLayout
					android:id="@+id/submitButtonsLay"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_alignParentBottom="true"
					android:paddingLeft="@dimen/game_end_layout_padding_side"
					android:paddingRight="@dimen/game_end_layout_padding_side"
					android:paddingBottom="@dimen/game_end_layout_padding_bottom"
					android:visibility="invisible">

					<com.chess.RoboButton
							android:id="@+id/submitBtn"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginRight="10dip"
							android:layout_weight="1"
							style="@style/Text.Button"
							android:text="@string/submit"/>

					<com.chess.RoboButton
							android:id="@+id/cancelBtn"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							style="@style/Text.Button.Grey"
							android:layout_marginLeft="10dip"
							android:layout_weight="1"
							android:text="@string/cancel"
							/>
				</LinearLayout>

			</RelativeLayout>

		</LinearLayout>
	</LinearLayout>

	<!--Fade-->
	<RelativeLayout
		android:id="@+id/fadeLay"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="60dip"
		android:background="@drawable/dashboard_single_fade"
		android:visibility="invisible"
		android:layout_gravity="center"
		>

		<ProgressBar
			android:layout_width="@dimen/pending_progress_bar_size"
			android:layout_height="@dimen/pending_progress_bar_size"
			android:layout_margin="5dip"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/pending_list_item_TextView"
			style="?android:attr/progressBarStyle"
			/>

		<com.chess.RoboTextView
			android:id="@id/pending_list_item_TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/restoring_conntection_to_live"
			android:gravity="center"
			android:textSize="20sp"
			android:textColor="@color/white"
			android:paddingLeft="10dip"
			android:layout_centerInParent="true"
			robo:ttf="Bold"
			style="@style/DarkShadowBottom"
			/>

	</RelativeLayout>
</FrameLayout>
