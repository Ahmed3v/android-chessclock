<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/baseView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/game_board_back"
	>

	<com.chess.ui.views.ChessBoardOnlineView
		android:id="@+id/boardview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:visibility="visible"
		android:layout_weight="1"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:orientation="vertical"
		>
		<RelativeLayout
			android:id="@+id/statusBarLay"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

			<TextView
				android:id="@+id/whiteLabelTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingRight="5dip"
				android:paddingLeft="7dip"
				style="@style/GameLabel.Player"
				/>

			<TextView
				android:id="@+id/thinking"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:visibility="visible"
				style="@style/GameLabel"
				/>

			<TextView
				android:id="@+id/blackLabelTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:paddingLeft="4dip"
				android:paddingRight="7dip"
				style="@style/GameLabel.Player"
				/>

			<com.chess.RoboTextView
				android:id="@+id/analysisTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:visibility="gone"
				android:text="@string/analysis_mode"
				style="@style/GameLabel"
				/>
		</RelativeLayout>

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>

			<com.chess.ui.views.GameControlsView
				android:id="@+id/gameControlsView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>

			<LinearLayout
				android:id="@+id/submitButtonsLay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                android:layout_above="@+id/shareBtn"
				android:paddingLeft="@dimen/game_end_layout_padding_side"
				android:paddingRight="@dimen/game_end_layout_padding_side"
				android:paddingBottom="@dimen/game_end_layout_padding_bottom"
				android:visibility="visible">

				<com.chess.RoboButton
						android:id="@+id/submitBtn"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginRight="10dip"
						android:layout_weight="1"
						style="@style/Text.Button"
						android:text="@string/submit"/>

				<com.chess.RoboButton
						android:id="@+id/cancelBtn"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						style="@style/Text.Button.Grey"
						android:layout_marginLeft="10dip"
						android:layout_weight="1"
						android:text="@string/cancel"
						/>
			</LinearLayout>

            <!--Share-->
            <com.chess.RoboButton
                android:id="@id/shareBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                style="@style/Text.Button.Twitter"
                android:text="@string/share_game"
                android:drawableLeft="@null"
                android:visibility="invisible"
                />
		</RelativeLayout>

	</LinearLayout>
</LinearLayout>
