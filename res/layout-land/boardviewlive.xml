<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/game_board_back"
	android:orientation="vertical">
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		<com.chess.ui.views.ChessBoardView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="visible"
			android:layout_weight="1"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical"
			>
			<RelativeLayout
				android:id="@+id/statusBarLay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>

				<TextView
					android:id="@+id/thinking"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="@string/Thinking"
					android:visibility="gone"/>

				<TextView
					android:id="@+id/white"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawablePadding="5dip"
					android:inputType="textImeMultiLine"
					android:layout_centerVertical="true"
					android:text="@string/Human"
					android:textSize="14sp"
					android:paddingTop="2dip"
					android:paddingLeft="8dip"
					android:paddingBottom="2dip"
					android:paddingRight="2dip"
					android:drawableLeft="@drawable/whitemove"
					/>

				<TextView
					android:id="@+id/black"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"
					android:text="@string/Computer"
					android:textSize="14sp"
					android:paddingTop="2dip"
					android:paddingLeft="2dip"
					android:paddingBottom="2dip"
					android:paddingRight="8dip"
					android:drawableRight="@drawable/blackmove"
					android:drawablePadding="2dip"
					/>

				<TextView
					android:id="@+id/timer"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawablePadding="5dip"
					android:textSize="14sp"
					android:layout_centerInParent="true"
					android:padding="2dip"
					android:visibility="gone"/>

				<!--TODO set theme with text Size-->
				<TextView
					android:id="@+id/analysisTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:drawablePadding="5dip"
					android:textSize="14sp"
					android:layout_centerInParent="true"
					android:padding="2dip"
					android:visibility="gone"
					android:text="@string/analysis_mode"
					/>
			</RelativeLayout>

			<com.chess.ui.views.GamePanelView
				android:id="@+id/gamePanelView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>



			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:paddingBottom="12dip">

					<com.chess.RoboTextView
						android:id="@+id/whiteClockView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentLeft="true"
						android:drawablePadding="5dip"
						android:drawableRight="@drawable/whitemove"
						android:visibility="visible"/>

					<com.chess.RoboTextView
						android:id="@+id/blackClockView"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_alignParentRight="true"
						android:drawablePadding="5dip"
						android:visibility="visible"/>
				</RelativeLayout>

				<LinearLayout
					android:id="@+id/submitButtonsLay"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:paddingBottom="@dimen/game_submit_buttons_lay_bot_padding"
					android:visibility="invisible">

					<com.chess.RoboButton
						android:id="@+id/submit"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_marginRight="10dip"
						android:layout_weight="1"
						android:text="@string/submit"/>

					<com.chess.RoboButton
						android:id="@+id/cancel"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dip"
						android:layout_marginRight="10dip"
						android:layout_weight="1"
						android:text="@string/cancel"
						/>
				</LinearLayout>

			</FrameLayout>



		</LinearLayout>
	</LinearLayout>
</LinearLayout>
