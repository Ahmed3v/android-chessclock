<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:robo="http://schemas.android.com/apk/res/com.chess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    >
    <!--End game title-->
    <com.chess.RoboTextView
        android:id="@+id/endGameTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        robo:ttf="Bold"
        android:textSize="@dimen/game_end_popup_text_size"
        />

    <!--Wins reason-->
    <com.chess.RoboTextView
        android:id="@+id/endGameReasonTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        robo:ttf="Bold"
        />

    <!--Rating-->
    <com.chess.RoboTextView
        android:id="@+id/yourRatingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        robo:ttf="Bold"
        />
    <!--Ads-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        >
        <!-- todo: set app id, set update time -->
        <com.inneractive.api.ads.InneractiveAd
            android:id="@+id/inneractiveRectangleAd"
            xmlns:inneractive="http://schemas.android.com/apk/res/com.chess"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ad_popup_height"
            inneractive:appID="@string/inneractiveAdsAppId"
            inneractive:adType="Banner"
            inneractive:refreshInterval="60"
            inneractive:adAlignment="CENTER"
            inneractive:optionalAdWidth="@integer/ad_optional_width"
            inneractive:optionalAdHeight="50"
            android:visibility="gone"/>

    </FrameLayout>

    <!--New Game | Rematch-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <com.chess.RoboButton
            android:id="@+id/newGamePopupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/new_game"
            style="@style/Text.Button"
            android:paddingLeft="1dip"
            android:paddingRight="1dip"
            />

        <com.chess.RoboButton
            android:id="@+id/rematchPopupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rematch"
            style="@style/Text.Button"
            android:paddingLeft="1dip"
            android:paddingRight="1dip"
            />

        <!--Home | Review-->
        <com.chess.RoboButton
            android:id="@+id/homePopupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home"
            style="@style/Text.Button.Grey"
            />

        <com.chess.RoboButton
            android:id="@+id/reviewPopupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/review"
            style="@style/Text.Button.Grey"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <!--Share-->
    <com.chess.RoboButton
        android:id="@+id/shareBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text.Button.Twitter"
        android:text="@string/share_game"
        android:drawableLeft="@null"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        />


    <!--Upgrade-->
    <com.chess.RoboButton
        android:id="@+id/upgradeBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/Text.Button.Upgrade"
        android:text="@string/removeAds"
        android:paddingTop="0dip"
        android:paddingBottom="0dip"
        android:paddingLeft="5dip"
        android:paddingRight="2dip"
        />
    </LinearLayout>
    <!--Link text-->
    <com.chess.RoboTextView
        android:id="@+id/rulesLinkTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorLink="@color/white"
        android:text="@string/fair_play_policy_link"
        android:gravity="center"
        android:padding="5dip"
        android:visibility="gone"
        />

</LinearLayout>