<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">


	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.chess.widgets.RoboImageButton
			android:id="@+id/centerTabBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/Rect.Top.Middle"
			android:src="@drawable/img_new_logo_bar"
			android:minHeight="@dimen/welcome_tab_button_height" />

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true">

		<com.chess.widgets.RoboButton
			android:id="@+id/leftTabBtn"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="@style/Rect.Bottom.Left"
			android:text="@string/log_in"
			android:textColor="@color/white"
			android:textSize="@dimen/welcome_tab_button_text_size"
			android:minHeight="@dimen/welcome_tab_button_height" />

		<com.chess.widgets.RoboButton
			android:id="@+id/rightTabBtn"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			style="@style/Rect.Bottom.Right"
			android:text="@string/sign_up"
			android:textColor="@color/white"
			android:textSize="@dimen/welcome_tab_button_text_size"
			android:minHeight="@dimen/welcome_tab_button_height" />

	</LinearLayout>

	<RelativeLayout
		android:id="@+id/tab_content_frame"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

</LinearLayout>