<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="false">

	<com.chess.backend.image_load.ProgressImageView
		android:id="@+id/articleImg"
		android:layout_width="@dimen/article_detail_image_width"
		android:layout_height="@dimen/article_detail_image_height"
		android:background="@color/new_common_list_thumb_grey"
		android:contentDescription="@string/image"
		android:layout_margin="@dimen/common_tablet_side_padding" />

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/titleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/articleImg"
		android:layout_toRightOf="@id/articleImg"
		android:paddingTop="15dp"
		android:paddingBottom="9dp"
		android:paddingEnd="@dimen/common_tablet_side_padding"
		android:paddingRight="@dimen/common_tablet_side_padding"
		android:textColor="@color/new_subtitle_dark_grey"
		android:textSize="18sp"
		custom:ttf="Bold" />

	<com.chess.backend.image_load.ProgressImageView
		android:id="@+id/thumbnailAuthorImg"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:background="@color/new_common_list_thumb_grey"
		android:layout_below="@id/titleTxt"
		android:layout_toEndOf="@id/articleImg"
		android:layout_toRightOf="@id/articleImg"
		android:contentDescription="@string/image"
		android:layout_marginBottom="13dp" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/authorTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/thumbnailAuthorImg"
		android:layout_toRightOf="@id/thumbnailAuthorImg"
		android:layout_below="@id/titleTxt"
		android:layout_marginTop="-4dp"
		android:paddingStart="11dp"
		android:paddingLeft="11dp"
		android:paddingBottom="2dp"
		android:textColor="@color/new_subtitle_dark_grey"
		android:textSize="14sp"
		custom:ttf="Bold" />

	<ImageView
		android:id="@+id/countryImg"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:contentDescription="@string/country"
		android:layout_toEndOf="@id/authorTxt"
		android:layout_toRightOf="@id/authorTxt"
		android:layout_below="@id/titleTxt"
		android:layout_marginTop="-6dp"
		android:layout_marginStart="7dp" />

	<!--Date-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/dateTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/thumbnailAuthorImg"
		android:layout_toRightOf="@id/thumbnailAuthorImg"
		android:layout_below="@id/authorTxt"
		android:paddingStart="11dp"
		android:paddingLeft="11dp"
		android:textColor="@color/new_friends_grey_text"
		android:textSize="@dimen/default_text_size_small" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/contentTxt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="fill_horizontal"
		android:paddingStart="@dimen/common_tablet_side_padding"
		android:paddingEnd="@dimen/common_tablet_side_padding"
		android:paddingLeft="@dimen/common_tablet_side_padding"
		android:paddingRight="@dimen/common_tablet_side_padding"
		android:layout_below="@id/articleImg"
		android:textColor="@color/new_subtitle_dark_grey"
		android:paddingBottom="2dp"
		android:textSize="@dimen/content_text_size" />

	<ProgressBar
		android:id="@+id/loadingCommentsView"
		android:layout_width="@dimen/pending_progress_bar_size"
		android:layout_height="@dimen/pending_progress_bar_size"
		android:layout_below="@id/contentTxt"
		android:layout_margin="10dp"
		android:layout_centerInParent="true"
		style="?android:attr/progressBarStyle"
		android:visibility="gone" />

</RelativeLayout>