<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/semitransparent_white_90"
	android:orientation="vertical">

	<com.chess.widgets.RoboTextView
		android:id="@+id/emptyView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:text="@string/no_games"
		android:gravity="center"
		android:layout_centerInParent="true"
		android:textSize="20sp"
		android:textColor="@color/grey_button_1"
		android:paddingStart="10dp"
		android:paddingLeft="10dp"
		custom:ttf="Bold"
		style="@style/DarkShadowBottom"
		android:visibility="gone" />

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:cacheColorHint="@color/white"
		android:divider="@color/new_friends_list_divider"
		android:dividerHeight="1dp"
		android:layout_toStartOf="@+id/optionsFragmentContainerView"
		android:layout_toLeftOf="@+id/optionsFragmentContainerView" />

	<!--Right quick access side panel-->
	<FrameLayout
		android:id="@id/optionsFragmentContainerView"
		android:layout_width="250dp"
		android:layout_height="match_parent"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true">
		<!--Shadow-->
		<ImageView
			android:layout_width="10dp"
			android:layout_height="match_parent"
			android:src="@drawable/defaultshadow_right"
			android:contentDescription="@string/image" />

		<FrameLayout
			android:id="@+id/optionsFragmentContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/sliding_menu_overlay" />

	</FrameLayout>

</RelativeLayout>