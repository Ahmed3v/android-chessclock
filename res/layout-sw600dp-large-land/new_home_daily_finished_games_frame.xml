<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<com.chess.widgets.RoboTextView
		android:id="@+id/emptyView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:text="@string/no_data"
		android:gravity="center"
		android:layout_gravity="center"
		android:textSize="20sp"
		android:textColor="@color/grey_button_1"
		android:paddingLeft="10dip"
		custom:ttf="Bold"
		style="@style/DarkShadowBottom"
		android:visibility="gone"
		/>

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@color/white"
		android:cacheColorHint="@color/white"
		android:divider="@color/new_friends_list_divider"
		android:dividerHeight="1dip"
		android:layout_toLeftOf="@+id/optionsFragmentContainerView"
		/>

	<ProgressBar
		android:id="@+id/loadingView"
		android:layout_margin="5dip"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		style="?android:attr/progressBarStyle"
		android:visibility="gone"
		/>

	<!--Right quick access side panel-->
	<FrameLayout
		android:id="@id/optionsFragmentContainerView"
		android:layout_width="250dp"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true">
		<!--Shadow-->
		<ImageView
			android:layout_width="10dp"
			android:layout_height="match_parent"
			android:src="@drawable/defaultshadow_right"
			android:contentDescription="@string/image" />

		<FrameLayout
			android:id="@+id/optionsFragmentContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/sliding_menu_overlay" />

	</FrameLayout>

</RelativeLayout>