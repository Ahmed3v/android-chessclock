<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/boardFrame"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:animateLayoutChanges="true">

	<com.chess.widgets.RoboTextView
		android:id="@+id/moveResultTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/correct_move_puzzle_height"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:textSize="19sp"
		android:textColor="@color/white"
		custom:ttf="Bold" />

	<com.chess.ui.views.chess_boards.ChessBoardDiagramView
		android:id="@+id/boardview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/moveResultTxt"
		android:layout_marginTop="-1px" />

	<com.chess.ui.views.NotationsView
		android:id="@+id/notationsView"
		android:layout_width="match_parent"
		android:layout_height="@dimen/notations_view_height"
		android:layout_below="@id/boardView"
		style="@style/NotationsDiagramStyle"
		android:visibility="gone" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/notationCommentTxt"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="@dimen/notations_view_height"
		android:ellipsize="end"
		android:layout_below="@id/notationsView"
		android:layout_above="@+id/controlsView"
		android:gravity="center"
		style="@style/ListItem.Header.Notations"
		android:visibility="gone"
		android:padding="2dp"
		android:textColor="@color/controls_icon" />

	<com.chess.ui.views.game_controls.ControlsDiagramView
		android:id="@id/controlsView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true" />

</RelativeLayout>