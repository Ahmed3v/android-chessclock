<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/boardFrame"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:id="@+id/descriptionView"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignBottom="@+id/slidingDrawer"
		android:background="@color/white"
		android:scrollbars="none"
		android:paddingBottom="20dp">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<!--Title-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/lessonTitleTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="21sp"
				android:textColor="@color/new_subtitle_dark_grey"
				android:paddingTop="9dp"
				android:paddingStart="15dp"
				android:paddingEnd="15dp"
				android:paddingLeft="15dp"
				android:paddingRight="15dp"
				android:paddingBottom="8dp"
				custom:ttf="Bold" />

			<!--Goal Commentary-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/goalCommentTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/new_subtitle_dark_grey"
				android:padding="15dp"
				android:textSize="15sp"
				custom:ttf="Italic" />

			<!--Divider-->
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/new_friends_list_divider" />

			<!--Lesson Description-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/descriptionTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/new_subtitle_dark_grey"
				android:textSize="15sp"
				android:padding="15dp"
				android:visibility="gone" />

			<!--Divider-->
			<View
				android:id="@+id/lessonDescriptionDivider"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/new_friends_list_divider"
				android:visibility="gone" />

			<!--Position Description-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/positionDescriptionTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/new_subtitle_dark_grey"
				android:textSize="15sp"
				android:padding="15dp" />

			<!--Divider-->
			<View
				android:id="@+id/hintDivider"
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/new_friends_list_divider"
				android:visibility="gone" />

			<!--Hint-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/hintTxt"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:textColor="@color/new_subtitle_dark_grey"
				android:textSize="15sp"
				android:padding="15dp"
				android:background="@color/header_light"
				android:visibility="gone" />

			<!--Lesson Complete view-->
			<include layout="@layout/lesson_complete_view" />

		</LinearLayout>
	</ScrollView>

	<com.chess.widgets.MultiDirectionSlidingDrawer
		android:id="@id/slidingDrawer"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		custom:direction="bottomToTop"
		custom:handle="@+id/handle"
		custom:content="@+id/content"
		android:layout_above="@+id/controlsView">

		<LinearLayout
			android:id="@id/content"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<com.chess.ui.views.chess_boards.ChessBoardLessonsView
				android:id="@+id/boardview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="0px" />

		</LinearLayout>

		<RelativeLayout
			android:id="@id/handle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white">

			<!--Handle-->
			<com.chess.widgets.RoboTextView
				android:layout_width="match_parent"
				android:layout_height="@dimen/drawer_handler_height"
				android:textColor="@color/white"
				android:text="@string/ic_handler"
				android:padding="0dp"
				android:gravity="center"
				android:layout_centerInParent="true"
				android:textSize="35dp"
				custom:ttf="Icon"
				style="@style/ListItem.Header_2.Light"
				android:shadowColor="@color/switch_white_back_border_bot_1"
				android:shadowRadius="4"
				android:shadowDx="0"
				android:shadowDy="0" />

		</RelativeLayout>

	</com.chess.widgets.MultiDirectionSlidingDrawer>

	<!--Controls View-->
	<com.chess.ui.views.game_controls.ControlsLessonsView
		android:id="@+id/controlsView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		custom:controls_style="rectDark"
		android:layout_alignParentBottom="true" />

</RelativeLayout>