<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chess"
	android:orientation="vertical"
	android:id="@+id/boardFrame"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.chess.widgets.RoboTextView
		android:id="@+id/moveVariationTxt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/ListItem.Header.Dark"
		android:gravity="center"
		android:minHeight="42dip"
		android:textColor="@color/semitransparent_white_65"
		android:textSize="15sp"
		/>

	<com.chess.widgets.LinLayout
		android:id="@+id/boardLinLay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="@dimen/tablet_board_margin_left"
		android:layout_marginLeft="@dimen/tablet_board_margin_left"
		android:layout_marginRight="@dimen/tablet_board_margin_left"
		android:background="@drawable/shadow_back_square">

		<!--BoardView-->
		<com.chess.ui.views.chess_boards.ChessBoardExplorerView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</com.chess.widgets.LinLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/tablet_board_margin_left"
		android:layout_marginRight="@dimen/tablet_board_margin_left"
		>

		<com.chess.widgets.RoboButton
			android:id="@+id/leftBtn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			style="@style/Rect.Bottom.Left"
			android:text="@string/ic_left"
			android:textSize="@dimen/game_controls_icon_size"
			android:textColor="@color/text_controls_icons"
			android:minWidth="@dimen/game_controls_button_height"
			app:ttf="Icon"
			/>

		<com.chess.widgets.RoboListView
			android:id="@+id/listView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/leftBtn"
			android:layout_toLeftOf="@+id/rightBtn"
			style="@style/Rect.Bottom.Middle"
			app:btn_is_clickable="false"
			/>

		<com.chess.widgets.RoboButton
			android:id="@id/rightBtn"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			style="@style/Rect.Bottom.Right"
			android:text="@string/ic_right"
			android:layout_alignParentRight="true"
			android:textSize="@dimen/game_controls_icon_size"
			android:textColor="@color/text_controls_icons"
			android:minWidth="@dimen/game_controls_button_height"
			app:ttf="Icon"
			/>

	</RelativeLayout>


</LinearLayout>