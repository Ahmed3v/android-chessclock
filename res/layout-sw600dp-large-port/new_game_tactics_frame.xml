<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/boardFrame"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true"
	android:orientation="vertical">
	<!--Show animation here for Correct/Incorrect views-->

	<com.chess.widgets.RoboTextView
		android:id="@+id/moveResultTxt"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:layout_gravity="center_horizontal"
		android:gravity="center"
		android:textSize="23sp"
		android:textColor="@color/white"
		app:ttf="Bold"
		android:visibility="invisible"
		app:themeColor="true" />

	<com.chess.widgets.LinLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginLeft="@dimen/tablet_board_margin_left"
		android:layout_marginRight="@dimen/tablet_board_margin_left"
		android:background="@drawable/shadow_back_square">

		<!--BoardView-->
		<com.chess.ui.views.chess_boards.ChessBoardTacticsView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

	</com.chess.widgets.LinLayout>


	<com.chess.ui.views.PanelInfoTacticsView
		android:id="@+id/topPanelView"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:minHeight="@dimen/new_tactics_panel_info_height"
		android:layout_marginLeft="@dimen/common_tablet_side_padding"
		android:layout_marginRight="@dimen/common_tablet_side_padding" />

	<com.chess.ui.views.game_controls.ControlsTacticsView
		android:id="@+id/controlsView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:controls_style="rounded"
		android:layout_marginLeft="@dimen/common_tablet_side_padding"
		android:layout_marginRight="@dimen/common_tablet_side_padding"
		android:layout_marginBottom="@dimen/default_scr_side_padding" />

</LinearLayout>