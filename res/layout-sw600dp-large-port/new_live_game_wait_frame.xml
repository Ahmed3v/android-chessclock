<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:orientation="vertical"
	android:gravity="center_horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<!--Stub view to make the same height-->
	<FrameLayout
		android:id="@+id/stubView"
		android:layout_width="match_parent"
		android:layout_height="@dimen/notations_view_height"
		/>

	<com.chess.widgets.RoboTextView
		android:id="@+id/centerTxt"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:text="@string/waiting_for_opponent"
		android:textSize="19sp"
		android:padding="5dip"
		android:textColor="@color/white"
		custom:ttf="Bold" />


	<com.chess.widgets.RelLayout
		android:id="@+id/boardLinLay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="@dimen/tablet_board_margin_bottom"
		android:layout_marginLeft="@dimen/tablet_board_margin_bottom"
		android:layout_marginRight="@dimen/tablet_board_margin"
		android:layout_marginBottom="@dimen/tablet_board_margin_bottom"
		android:background="@drawable/shadow_back_square">

		<!--BoardView-->
		<com.chess.ui.views.chess_boards.ChessBoardLiveView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<!--Loading view-->
		<ProgressBar
			android:id="@+id/loadingView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			style="?android:attr/progressBarStyle"
			android:visibility="gone" />


	</com.chess.widgets.RelLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<com.chess.widgets.RoboButton
			android:id="@+id/cancelLiveBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/cancel"
			style="@style/Button.Glassy"
			android:layout_marginLeft="15dip"
			android:layout_marginRight="15dip"
			android:layout_marginBottom="15dip"
			android:layout_centerInParent="true"/>

	</RelativeLayout>
</LinearLayout>