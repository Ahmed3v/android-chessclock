<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="@dimen/daily_game_list_item_width"
	android:background="@drawable/transparent_list_item_selector">

	<RelativeLayout
		android:id="@+id/boardPreviewContainer"
		android:layout_width="@dimen/daily_board_preview_size"
		android:layout_height="@dimen/daily_board_preview_size"
		android:layout_centerHorizontal="true">

		<com.chess.backend.image_load.ProgressImageView
			android:id="@+id/boardPreviewFrame"
			android:layout_width="@dimen/daily_board_preview_size"
			android:layout_height="@dimen/daily_board_preview_size"
			android:layout_marginBottom="@dimen/default_scr_bottom_padding" />

		<LinearLayout
			android:id="@+id/timeOptionView"
			android:orientation="vertical"
			android:layout_width="@dimen/daily_board_preview_overlay"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:padding="23dp"
			android:background="@drawable/square_flat_border_white_back"
			android:gravity="fill"
			android:visibility="gone">

			<!--10 days-->
			<com.chess.widgets.RoboButton
				android:id="@+id/timeOptionBtn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:minHeight="@dimen/default_button_height"
				style="@style/Button.Glassy.Small"
				android:textSize="@dimen/default_button_text_size"
				android:textColor="@color/text_controls_icons_white" />

			<!--Play-->
			<com.chess.widgets.RoboButton
				android:id="@+id/playNewGameBtn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/play"
				style="@style/Button.OrangeNoBorder"
				android:minHeight="@dimen/default_button_height"
				android:textSize="@dimen/default_button_text_size" />

		</LinearLayout>

	</RelativeLayout>


	<com.chess.backend.image_load.AvatarView
		android:id="@+id/playerImg"
		android:layout_width="@dimen/daily_list_item_image_size"
		android:layout_height="@dimen/daily_list_item_image_size"
		android:background="@drawable/img_profile_picture_stub"
		android:layout_marginEnd="5dp"
		android:layout_marginRight="5dp"
		android:layout_below="@id/boardPreviewContainer"
		android:layout_alignStart="@id/boardPreviewContainer"
		android:layout_alignLeft="@id/boardPreviewContainer" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/playerNameTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/new_text_blue"
		android:textSize="14sp"
		android:gravity="center_vertical"
		android:layout_below="@id/boardPreviewContainer"
		android:layout_toEndOf="@id/playerImg"
		android:layout_toStartOf="@+id/timeLeftIcon"
		android:paddingEnd="3dp"
		android:layout_toRightOf="@id/playerImg"
		android:layout_toLeftOf="@+id/timeLeftIcon"
		android:paddingRight="3dp"
		android:text="test"
		custom:ttf="Bold"
		android:layout_marginTop="-4dp"
		android:layout_marginBottom="-3dp" />

	<!--Icon-->
	<com.chess.widgets.RoboTextView
		android:id="@id/timeLeftIcon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/red"
		android:layout_below="@id/boardPreviewContainer"
		android:layout_toStartOf="@+id/timeLeftTxt"
		android:layout_toLeftOf="@+id/timeLeftTxt"
		android:textSize="@dimen/daily_games_time_left_icon"
		custom:ttf="Icon"
		android:layout_marginTop="-4dp"
		android:paddingTop="3dp"
		android:paddingStart="0dp"
		android:paddingEnd="5dp"
		android:paddingLeft="0dp"
		android:paddingRight="5dp"
		android:paddingBottom="3dp"
		android:text="@string/ic_clock" />

	<com.chess.widgets.RoboTextView
		android:id="@id/timeLeftTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/red"
		android:textSize="13sp"
		android:gravity="end|right"
		android:layout_below="@id/boardPreviewContainer"
		android:layout_alignEnd="@id/boardPreviewContainer"
		android:layout_alignRight="@id/boardPreviewContainer"
		android:text="8 min"
		android:layout_marginTop="-4dp"
		android:paddingTop="2dp"
		custom:ttf="Bold" />

</RelativeLayout>