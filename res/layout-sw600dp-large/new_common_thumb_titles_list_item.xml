<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="wrap_content"
	android:layout_height="match_parent"
	android:background="@drawable/transparent_list_item_selector"
	android:paddingTop="@dimen/grid_view_spacing"
	android:paddingLeft="22dp"
	android:paddingRight="22dp"
	android:paddingBottom="@dimen/grid_view_spacing">

	<!--Board-->
	<FrameLayout
		android:id="@+id/boardBackView"
		android:layout_width="@dimen/video_thumb_size"
		android:layout_height="@dimen/video_thumb_size"
		android:background="@drawable/img_tactics_board"
		android:layout_marginEnd="15dp"
		android:layout_marginRight="15dp">

		<com.chess.widgets.RoboTextView
			android:id="@+id/completedIconTxt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/ic_lessons"
			style="@style/GlyphIcon.RoundBack" />

	</FrameLayout>

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/titleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/new_text_blue"
		android:textSize="16sp"
		android:layout_marginTop="-4dp"
		android:text="test"
		custom:ttf="Bold" />

</LinearLayout>