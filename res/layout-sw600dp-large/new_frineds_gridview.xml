<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.chess.widgets.LinLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/ListItem.Header.Dark.Small"
		android:gravity="center_vertical">

		<com.chess.widgets.RoboTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="14sp"
			style="@style/PaddingLeftSmall"
			android:textColor="@color/white"
			android:text="@string/friends"
			custom:ttf="Bold" />

	</com.chess.widgets.LinLayout>

	<GridView
		android:id="@+id/gridView"
		android:layout_width="match_parent"
		android:layout_height="@dimen/friends_grid_height"
		android:horizontalSpacing="5dp"
		android:verticalSpacing="5dp"
		android:numColumns="5"
		android:layout_margin="5dp" />

</LinearLayout>