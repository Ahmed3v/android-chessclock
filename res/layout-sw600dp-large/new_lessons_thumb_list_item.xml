<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@drawable/transparent_list_item_selector"
	android:paddingTop="@dimen/grid_view_spacing"
	android:paddingStart="22dp"
	android:paddingEnd="22dp"
	android:paddingLeft="22dp"
	android:paddingRight="22dp"
	android:paddingBottom="@dimen/grid_view_spacing">

	<!--Board-->
	<RelativeLayout
		android:id="@+id/boardBackView"
		android:layout_width="@dimen/video_thumb_size"
		android:layout_height="@dimen/video_thumb_size"
		android:background="@drawable/img_tactics_board"
		android:layout_marginEnd="15dp"
		android:layout_marginRight="15dp">

		<com.chess.widgets.RoboTextView
			android:id="@+id/completedIconTxt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/ic_lessons"
			style="@style/GlyphIcon.RoundBack" />

	</RelativeLayout>

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/titleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/boardBackView"
		android:layout_toRightOf="@id/boardBackView"
		android:textColor="@color/new_text_blue"
		android:paddingBottom="12dp"
		android:layout_marginTop="-3dp"
		android:text="test"
		custom:ttf="Bold" />

	<!-- Score: -->
	<com.chess.widgets.RoboTextView
		android:id="@+id/scoreLabelTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/score_"
		android:layout_toEndOf="@id/boardBackView"
		android:layout_toRightOf="@id/boardBackView"
		android:layout_below="@id/titleTxt"
		android:textColor="@color/stats_label_grey"
		android:textSize="@dimen/default_text_size_small"
		android:layout_marginEnd="7dp"
		android:layout_marginRight="7dp"
		android:layout_marginBottom="3dp"
		android:layout_marginTop="-3dp" />

	<!-- Score value-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/scoreValueTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/scoreLabelTxt"
		android:layout_toRightOf="@id/scoreLabelTxt"
		android:layout_alignBottom="@id/scoreLabelTxt"
		android:textColor="@color/new_subtitle_dark_grey"
		android:textSize="@dimen/default_text_size_small"
		custom:ttf="Bold"
		android:text="1200" />

	<!-- Attempts: -->
	<com.chess.widgets.RoboTextView
		android:id="@+id/attemptsLabelTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/attempts"
		android:layout_toEndOf="@id/boardBackView"
		android:layout_toRightOf="@id/boardBackView"
		android:layout_below="@id/scoreLabelTxt"
		android:textColor="@color/stats_label_grey"
		android:textSize="@dimen/default_text_size_small"
		android:layout_marginEnd="7dp"
		android:layout_marginRight="7dp"
		android:layout_marginBottom="3dp"
		android:layout_marginTop="-3dp" />

	<!-- Attempts value-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/attemptsValueTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/attemptsLabelTxt"
		android:layout_toRightOf="@id/attemptsLabelTxt"
		android:layout_alignBottom="@id/attemptsLabelTxt"
		android:textColor="@color/new_subtitle_dark_grey"
		android:textSize="@dimen/default_text_size_small"
		custom:ttf="Bold"
		android:text="1200" />

	<!-- Rating: -->
	<com.chess.widgets.RoboTextView
		android:id="@+id/ratingLabelTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/rating_"
		android:layout_toEndOf="@id/boardBackView"
		android:layout_toRightOf="@id/boardBackView"
		android:layout_below="@id/attemptsLabelTxt"
		android:textColor="@color/stats_label_grey"
		android:textSize="@dimen/default_text_size_small"
		android:layout_marginEnd="7dp"
		android:layout_marginRight="7dp"
		android:layout_marginBottom="3dp"
		android:layout_marginTop="-3dp" />

	<!-- Rating value-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/ratingValueTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/ratingLabelTxt"
		android:layout_toRightOf="@id/ratingLabelTxt"
		android:layout_alignBottom="@id/ratingLabelTxt"
		android:textColor="@color/new_subtitle_dark_grey"
		android:textSize="@dimen/default_text_size_small"
		android:text="1200"
		custom:ttf="Bold" />

</RelativeLayout>