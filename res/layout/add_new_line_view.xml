<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/addNewLineView"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="8dp">

	<com.chess.widgets.RoboButton
		android:id="@+id/addNewLineBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		style="@style/Button.Glassy"
		app:ttf="Icon"
		android:text="@string/ic_add"
		android:minWidth="48dp"
		android:textSize="@dimen/glyph_icon_big2" />

</LinearLayout>