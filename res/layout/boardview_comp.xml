<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/game_board_back"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/thinking"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:inputType="textImeMultiLine"
			android:text="@string/Thinking"
			android:visibility="gone"/>

		<TextView
			android:id="@+id/white"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:drawablePadding="5dip"
			android:inputType="textImeMultiLine"
			android:gravity="center_vertical"
			android:text="@string/Human"
			android:textSize="14sp"
			android:paddingTop="2dip"
			android:paddingLeft="8dip"
			android:paddingBottom="2dip"
			android:paddingRight="2dip"
			android:drawableLeft="@drawable/whitemove"
			/>

		<TextView
			android:id="@+id/black"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:gravity="right|center_vertical"
			android:inputType="textImeMultiLine"
			android:text="@string/Computer"
			android:textSize="14sp"
			android:paddingTop="2dip"
			android:paddingLeft="2dip"
			android:paddingBottom="2dip"
			android:paddingRight="8dip"
			android:drawableRight="@drawable/blackmove"
			android:drawablePadding="2dip"

			/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<com.chess.views.NewBoardView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:visibility="visible"/>

		<com.chess.views.GamePanelView
			android:id="@+id/gamePanelView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			/>
<!--

		<TextView
			android:id="@+id/movelist"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:ellipsize="start"
			android:gravity="right"
			android:inputType="textImeMultiLine"
			android:padding="2dip"
			android:textColor="#fff"
			android:textSize="12dip"
			android:text="1.e2e4"/>
-->

	</LinearLayout>

</LinearLayout>
