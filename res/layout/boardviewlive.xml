<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/game_board_back"
	android:orientation="vertical">

	<!--Top Bar-->
	<RelativeLayout
		android:id="@+id/statusBarLay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>

		<com.chess.RoboTextView
			android:id="@+id/thinking"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:text="@string/Thinking"
			android:visibility="gone"
			style="@style/GameLabel"
			/>

		<com.chess.RoboTextView
			android:id="@+id/white"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingRight="2dip"
			android:paddingLeft="8dip"
			android:drawableLeft="@drawable/player_indicator_white"
			style="@style/GameLabel.Player"
			/>

		<com.chess.RoboTextView
			android:id="@+id/black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:paddingLeft="2dip"
			android:paddingRight="8dip"
			android:drawableRight="@drawable/player_indicator_black"
			style="@style/GameLabel.Player"
			/>

		<com.chess.RoboTextView
			android:id="@+id/timer"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:visibility="gone"
			style="@style/GameLabel"
			/>

		<!--TODO set theme with text Size-->
		<com.chess.RoboTextView
			android:id="@+id/analysisTxt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:visibility="gone"
			android:text="@string/analysis_mode"
			style="@style/GameLabel"
			/>
	</RelativeLayout>

	<!--Game Board and Game Panel-->
	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			>

			<com.chess.ui.views.ChessBoardView
				android:id="@+id/boardview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="visible"/>

			<com.chess.ui.views.GamePanelView
				android:id="@+id/gamePanelView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				/>

		</LinearLayout>

		<!--Move time labels-->
		<!--<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="bottom"
			android:paddingBottom="12dip">

			<com.chess.RoboTextView
				android:id="@+id/whiteClockView"
				android:layout_width="wrap_content"
