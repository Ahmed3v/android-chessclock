<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="fill_parent" android:layout_width="fill_parent" android:background="#444">

	<LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:orientation="vertical">

		<LinearLayout android:layout_height="wrap_content"
		              android:layout_width="fill_parent" android:orientation="vertical" android:paddingBottom="5dip">

			<LinearLayout android:id="@+id/analysis" android:layout_height="wrap_content" android:layout_width="fill_parent" android:visibility="gone" android:orientation="vertical" android:layout_weight="1">
				<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="3dip" android:gravity="center" android:textStyle="bold" android:textSize="16dip" android:textColor="#fff" android:text="@string/analysis"></TextView>
				<ImageView android:layout_width="fill_parent" android:layout_height="5dip" android:background="#00bb00"></ImageView>
			</LinearLayout>

			<LinearLayout android:layout_height="wrap_content"
			              android:layout_width="fill_parent" android:orientation="horizontal" android:layout_weight="1">
				<TextView android:id="@+id/thinking" android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="2dip" android:textColor="#fff" android:textStyle="bold"
				          android:inputType="textImeMultiLine" android:text="@string/Thinking" android:gravity="center" android:visibility="gone"></TextView>
				<TextView android:id="@+id/white" android:layout_height="wrap_content" android:text="Player"
				          android:layout_width="fill_parent" android:layout_weight="1"
				          android:padding="2dip" android:textColor="#fff" android:textSize="12dp"
				          android:inputType="textImeMultiLine"></TextView>
				<TextView android:id="@+id/black" android:layout_height="wrap_content" android:text="Computer"
				          android:layout_width="fill_parent" android:textSize="12dp"
				          android:layout_weight="1" android:padding="2dip" android:textColor="#fff"
				          android:gravity="right" android:inputType="textImeMultiLine"></TextView>
				<TextView android:id="@+id/timer" android:layout_height="wrap_content" android:layout_width="fill_parent"
				          android:layout_weight="1" android:padding="2dip" android:textColor="#fff"
				          android:textStyle="bold" android:drawablePadding="5dip" android:inputType="textImeMultiLine" android:gravity="center" android:visibility="gone"></TextView>
			</LinearLayout>

		</LinearLayout>

		<com.chess.views.BoardView android:id="@+id/boardview" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_weight="1"/>
		<!--
		<ImageView android:id="@+id/boardview" android:layout_height="320px" android:layout_width="320px" android:layout_weight="1"/>
		-->

		<!--<RelativeLayout android:layout_height="wrap_content" android:background="#FF0000"
		              android:layout_width="fill_parent" android:orientation="horizontal">
			<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#fff"
			          android:textStyle="bold" android:id="@+id/whiteClockView" android:padding="2dip"
			          android:drawablePadding="5dip" android:inputType="textImeMultiLine"
			          android:drawableRight="@drawable/whitemove"
			          android:visibility="visible" android:layout_alignParentLeft="true" android:text="white"></TextView>
			<TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#fff"
			          android:textStyle="bold" android:gravity="right" android:id="@+id/blackClockView" android:padding="2dip"
			          android:drawablePadding="5dip" android:inputType="textImeMultiLine"
			          android:visibility="visible" android:layout_alignParentRight="true" android:text="black"></TextView>
		</RelativeLayout>

		<TextView android:id="@+id/endOfGameMessage" android:layout_height="wrap_content" android:layout_width="fill_parent" android:textColor="#ffffcc" android:textStyle="bold"
				  android:gravity="center" android:padding="2dip" android:text="end of game"></TextView>

	--></LinearLayout>
	
	<RelativeLayout android:layout_height="wrap_content"
		              android:layout_width="fill_parent" android:orientation="horizontal" android:layout_gravity="bottom" android:paddingBottom="12dip">
			<TextView android:id="@+id/whiteClockView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#fff"
			          android:textStyle="bold" android:padding="2dip"
			          android:drawablePadding="5dip" android:inputType="textImeMultiLine"
			          android:drawableRight="@drawable/whitemove"
			          android:visibility="visible" android:layout_alignParentLeft="true"></TextView>
			
			<TextView android:id="@+id/blackClockView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#fff"
			          android:textStyle="bold" android:gravity="right" android:padding="2dip"
			          android:drawablePadding="5dip" android:inputType="textImeMultiLine"
			          android:visibility="visible" android:layout_alignParentRight="true"></TextView>
	</RelativeLayout>

	<TextView android:id="@+id/movelist" android:layout_height="wrap_content" android:layout_width="fill_parent"
	          android:textColor="#fff" android:padding="2dip" android:textSize="10dip" android:inputType="textImeMultiLine"
	          android:gravity="right" android:ellipsize="start" android:layout_gravity="bottom"></TextView>

	<LinearLayout android:id="@+id/moveButtons" android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_gravity="bottom" android:visibility="gone" android:paddingBottom="20dip">
		<Button android:id="@+id/submit" android:background="@drawable/defaultbutton" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:textStyle="bold" android:textSize="16dip" android:textColor="#222" android:text="Submit" android:layout_height="45dip"></Button>
		<Button android:id="@+id/cancel" android:layout_width="fill_parent" android:layout_weight="1" android:layout_marginLeft="10dip" android:layout_marginRight="10dip" android:textStyle="bold" android:textSize="16dip" android:textColor="#222" android:text="Cancel" android:layout_height="45dip"></Button>
	</LinearLayout>

	<RelativeLayout android:id="@+id/endOfGameButtons"
		android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_gravity="bottom" android:textColor="#222"
		android:layout_marginLeft="1dip" android:layout_marginRight="1dip" android:visibility="gone" android:paddingBottom="20dip">
    	<Button android:id="@+id/newGame"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:text="New "
		        android:layout_alignParentLeft="true"></Button>

		<TextView android:id="@+id/endOfGameMessage" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#ffffcc" android:textStyle="bold"
				  android:layout_gravity="center" android:padding="2dip" android:layout_centerHorizontal="true"></TextView>

		<Button android:id="@+id/home"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
		        android:text="Home"
		        android:layout_alignParentRight="true"></Button>
    </RelativeLayout>

	<RelativeLayout android:id="@+id/chatPanel"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_gravity="bottom" android:visibility="gone"
		android:paddingBottom="17dip">
		<ImageButton android:id="@+id/chat" android:layout_width="64px"
			android:layout_height="32px" android:src="@drawable/chat_nm"
			android:layout_centerHorizontal="true" android:scaleType="center"
			android:background="@drawable/defaultbutton">
		</ImageButton>
	</RelativeLayout>

