	</LinearLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:orientation="horizontal"
		android:paddingBottom="12dip">

		<TextView
			android:id="@+id/whiteClockView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:drawablePadding="5dip"
			android:drawableRight="@drawable/whitemove"
			android:inputType="textImeMultiLine"
			android:padding="2dip"
			android:textColor="#fff"
			android:textStyle="bold"
			android:visibility="visible"/>

		<TextView
			android:id="@+id/blackClockView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:drawablePadding="5dip"
			android:gravity="right"
			android:inputType="textImeMultiLine"
			android:padding="2dip"
			android:textColor="#fff"
			android:textStyle="bold"
			android:visibility="visible"/>
	</RelativeLayout>

	<TextView
		android:id="@+id/movelist"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:ellipsize="start"
		android:gravity="right"
		android:inputType="textImeMultiLine"
		android:padding="2dip"
		android:textColor="#fff"
		android:textSize="10dip"/>

	<LinearLayout
		android:id="@+id/submitButtonsLay"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:paddingBottom="20dip"
		android:visibility="gone">

		<Button
			android:id="@+id/submit"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_weight="1"
			android:text="@string/submit"/>

		<Button
			android:id="@+id/cancel"
			android:layout_width="fill_parent"
			android:layout_height="45dip"
			android:layout_marginLeft="10dip"
			android:layout_marginRight="10dip"
			android:layout_weight="1"
			android:text="Cancel"
			android:textColor="#222"
			android:textSize="16dip"
			android:textStyle="bold"/>
	</LinearLayout>

	<RelativeLayout
		android:id="@+id/endOfGameButtons"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:layout_marginLeft="1dip"
		android:layout_marginRight="1dip"
		android:paddingBottom="20dip"
		android:textColor="#222"
		android:visibility="gone">

		<Button
			android:id="@+id/newGame"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:text="New "/>

		<TextView
			android:id="@+id/endOfGameMessage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_gravity="center"
			android:padding="2dip"
			android:textColor="#ffffcc"
			android:textStyle="bold"/>

		<Button
			android:id="@+id/home"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:text="Home"/>
	</RelativeLayout>

	<RelativeLayout
		android:id="@+id/chatPanel"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:paddingBottom="17dip"
		android:visibility="visible">

		<ImageButton
			android:id="@+id/chat"
			android:layout_width="64px"
			android:layout_height="32px"
			android:layout_centerHorizontal="true"
			android:background="@drawable/button_orange_selector"
			android:scaleType="center"
			android:src="@drawable/chat_nm"/>
	</RelativeLayout>

