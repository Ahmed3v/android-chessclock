<?xml version="1.0" encoding="utf-8"?>

<com.chess.widgets.LinLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	style="@style/ListItem.Header"
	android:gravity="center_vertical"
	>

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/headerTitleTxt"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		style="@style/HeaderTitle.Dark"
		android:paddingLeft="0dp"
		android:paddingRight="0dp"/>

	<!--Right Icon-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/headerIconTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/ic_up"
		android:textColor="@color/new_light_grey_2"
		style="@style/GlyphIcon.Small" />

</com.chess.widgets.LinLayout>