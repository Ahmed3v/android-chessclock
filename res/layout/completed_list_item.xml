<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:minHeight="@dimen/default_list_item_height"
	android:gravity="center_vertical"
	android:paddingStart="@dimen/default_scr_side_padding"
	android:paddingEnd="@dimen/smaller_scr_side_padding"
	android:paddingLeft="@dimen/default_scr_side_padding"
	android:paddingRight="@dimen/smaller_scr_side_padding"
	android:background="@drawable/transparent_list_item_selector">

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/titleTxt"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textColor="@color/new_text_blue"
		custom:ttf="Bold" />

	<!--Right Icon-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/completedIconTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/ic_check"
		android:textColor="@color/new_light_grey_2"
		style="@style/GlyphIcon.Small" />

</LinearLayout>