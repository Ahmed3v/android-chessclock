<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical"
    android:padding="5dip">


    <RadioGroup android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"
                android:gravity="center">
        <TextView android:layout_height="wrap_content" android:textColor="#fff" android:textStyle="bold"
                  android:textSize="20dip" android:padding="3dip" android:layout_width="75dip"
                  android:text="@string/computerWhite"></TextView>
        <RadioButton android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1"
                     android:id="@+id/wHuman" android:textSize="16dip" android:checked="true"
                     android:text="@string/Human"></RadioButton>
        <RadioButton android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1"
                     android:id="@+id/wComp" android:textSize="16dip" android:text="@string/Computer"></RadioButton>
    </RadioGroup>
    <RadioGroup android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="horizontal"
                android:gravity="center">
        <TextView android:layout_height="wrap_content" android:textColor="#fff" android:textStyle="bold"
                  android:textSize="20dip" android:padding="3dip" android:layout_width="75dip"
                  android:text="@string/computerBlack"></TextView>
        <RadioButton android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1"
                     android:textSize="16dip" android:id="@+id/bHuman" android:text="@string/Human"></RadioButton>
        <RadioButton android:layout_height="wrap_content" android:layout_width="fill_parent" android:layout_weight="1"
                     android:textSize="16dip" android:id="@+id/bComp" android:checked="true"
                     android:text="@string/Computer"></RadioButton>
    </RadioGroup>
    <LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent"
                  android:gravity="center_vertical" android:paddingRight="20dip">
        <TextView android:layout_height="wrap_content" android:textColor="#fff" android:textStyle="bold"
                  android:layout_width="140dip" android:textSize="16dip" android:gravity="center"
                  android:text="@string/strength"></TextView>
        <Spinner android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/PrefStrength"
                 android:entries="@array/Strength"></Spinner>
    </LinearLayout>
    <Button
        android:layout_gravity="center"
        android:id="@+id/start"
        android:text="@string/startNewGameButton"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="3dip"
        android:layout_height="wrap_content"
        />
    <Button
        android:id="@+id/load"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginBottom="3dip"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="@string/load"
        android:visibility="gone"
        />
</LinearLayout>
