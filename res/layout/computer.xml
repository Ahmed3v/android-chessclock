<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@id/mainView"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:paddingTop="@dimen/default_scr_top_padding"
	android:paddingLeft="@dimen/default_scr_side_padding"
	android:paddingRight="@dimen/default_scr_side_padding"
	android:background="@android:color/black">

	<RadioGroup
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal">

		<com.chess.RoboTextView
			android:layout_width="75dip"
			android:layout_height="wrap_content"
			android:text="@string/computerWhite"
			/>

		<com.chess.RoboRadioButton
			android:id="@+id/wHuman"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="true"
			android:text="@string/Human"
			/>

		<com.chess.RoboRadioButton
			android:id="@+id/wComp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/Computer"
			/>

	</RadioGroup>

	<RadioGroup
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		android:orientation="horizontal">

		<com.chess.RoboTextView
			android:layout_width="75dip"
			android:layout_height="wrap_content"
			android:text="@string/computerBlack"

			/>


		<com.chess.RoboRadioButton
			android:id="@+id/bHuman"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/Human"
			/>


		<com.chess.RoboRadioButton
			android:id="@+id/bComp"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:checked="true"
			android:text="@string/Computer"
			/>

	</RadioGroup>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		>

		<com.chess.RoboTextView
			android:layout_width="140dip"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/strength"
			/>


		<Spinner
			android:id="@+id/PrefStrength"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:entries="@array/strength">
		</Spinner>
	</LinearLayout>

	<com.chess.RoboButton
		android:id="@+id/start"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"


		android:text="@string/startNewGameButton"/>

	<com.chess.RoboButton
		android:id="@+id/load"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:text="@string/load"
		android:visibility="gone"/>

</LinearLayout>