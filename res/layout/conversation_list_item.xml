<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="@dimen/new_daily_games_item_height"
	android:paddingTop="10dp"
	android:paddingStart="10dp"
	android:paddingEnd="10dp"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	android:paddingBottom="10dp"
	android:background="@drawable/transparent_list_item_selector">

	<!--Thumbnail-->
	<com.chess.backend.image_load.AvatarView
		android:id="@+id/photoImg"
		android:layout_width="@dimen/message_thumb_size"
		android:layout_height="@dimen/message_thumb_size"
		android:layout_marginEnd="10dp"
		android:layout_marginRight="10dp" />

	<!--Author-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/authorTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/photoImg"
		android:textColor="@color/new_text_blue"
		android:layout_marginTop="-4dp"
		custom:ttf="Bold" />

	<!--Long time ago-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/lastMessageDateTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:textColor="@color/stats_label_light_grey"
		android:textSize="12sp" />

	<!--Last message-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/lastMessageTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/photoImg"
		android:layout_toRightOf="@id/photoImg"
		android:layout_below="@id/authorTxt"
		android:textColor="@color/new_author_dark_grey"
		android:singleLine="true"
		android:ellipsize="end"
		custom:ttf="Bold" />

</RelativeLayout>