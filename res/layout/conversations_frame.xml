<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">

	<com.chess.widgets.RoboTextView
		android:id="@+id/emptyView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:gravity="center"
		android:layout_gravity="center"
		android:textSize="20sp"
		android:textColor="@color/grey_button_1"
		custom:ttf="Bold"
		style="@style/DarkShadowBottom"
		android:visibility="gone" />

	<RelativeLayout
		android:id="@+id/loadingView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="60dp"
		android:visibility="gone">

		<ProgressBar
			android:layout_width="@dimen/pending_progress_bar_size"
			android:layout_height="@dimen/pending_progress_bar_size"
			android:layout_margin="5dp"
			android:layout_centerInParent="true"
			style="?android:attr/progressBarStyle" />

	</RelativeLayout>

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:cacheColorHint="@color/white"
		android:divider="@color/new_friends_list_divider"
		android:dividerHeight="1dp" />

	<com.chess.widgets.LinLayout
		android:id="@+id/replyView"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/ListItem.Header_2"
		android:padding="0dp"
		android:paddingTop="15dp"
		android:paddingBottom="15dp"
		android:layout_alignParentBottom="true"
		android:visibility="gone">

		<com.chess.widgets.RoboEditText
			android:id="@+id/messageBodyEdt"
			android:inputType="textMultiLine"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="100dp"
			android:gravity="top"
			android:minLines="5"
			android:lines="5"
			android:singleLine="false"
			android:background="@drawable/edit_grey_one_default"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:imeActionLabel="@string/post"
			android:hint="@string/write_reply_"
			android:textSize="14sp" />

	</com.chess.widgets.LinLayout>

</RelativeLayout>