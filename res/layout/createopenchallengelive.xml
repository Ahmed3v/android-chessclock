<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">
	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">


		<TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="3dip" android:gravity="center" android:textStyle="bold" android:textSize="16dip" android:textColor="#fff" android:text="@string/createNewChallenge"></TextView><ImageView android:layout_width="fill_parent" android:layout_height="5dip" android:background="#00bb00"></ImageView>
		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="fill_parent" android:orientation="vertical" android:gravity="center">

			<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:layout_gravity="center" android:layout_width="120dip"
					android:textColor="#fff" android:layout_marginLeft="10dip"
					android:textSize="16dip" android:text="@string/initialTime">
				</TextView>
				<AutoCompleteTextView android:id="@+id/initialTime" android:text="" android:layout_width="fill_parent"
					android:layout_weight="1" android:layout_height="wrap_content" android:inputType="number">
				</AutoCompleteTextView>
			</LinearLayout>

			<LinearLayout android:layout_height="wrap_content" android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:layout_gravity="center" android:layout_width="120dip"
					android:textColor="#fff" android:layout_marginLeft="10dip"
					android:textSize="16dip" android:text="@string/bonusTime">
				</TextView>
				<AutoCompleteTextView android:text="" android:layout_width="fill_parent"
					android:layout_weight="1" android:layout_height="wrap_content"
					android:id="@+id/bonusTime" android:inputType="number">
				</AutoCompleteTextView>
			</LinearLayout>

			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:layout_gravity="center" android:layout_width="120dip" android:textSize="16dip" android:textColor="#fff" android:text="@string/RatedGme" android:layout_marginLeft="10dip"></TextView>

				<CheckBox android:layout_height="wrap_content" android:gravity="center"
					android:layout_weight="1" android:layout_width="fill_parent" android:textColor="#fff" android:text="@string/onoff" android:id="@+id/ratedGame"></CheckBox>
			</LinearLayout>

			<!--
			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:layout_gravity="center" android:layout_width="120dip" android:textSize="16dip" android:textColor="#fff" android:text="@string/IplayAs" android:layout_marginLeft="10dip"></TextView>
				<Spinner android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/iplayas" android:entries="@array/playas"></Spinner>
			</LinearLayout>
			-->

			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:layout_gravity="center" android:layout_width="120dip" android:textSize="16dip" android:textColor="#fff" android:layout_marginLeft="10dip" android:text="@string/minrating"></TextView>
				<Spinner android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/minRating" android:entries="@array/minRating"></Spinner>
			</LinearLayout>

			<LinearLayout android:layout_height="wrap_content"
				android:layout_width="fill_parent">
				<TextView android:layout_height="wrap_content"
					android:layout_gravity="center" android:layout_width="120dip" android:textSize="16dip" android:textColor="#fff" android:layout_marginLeft="10dip" android:text="@string/maxrating"></TextView>
				<Spinner android:layout_height="wrap_content"
					android:layout_width="fill_parent" android:layout_weight="1" android:id="@+id/maxRating" android:entries="@array/maxRating"></Spinner>
			</LinearLayout>


			<Button android:layout_width="fill_parent" android:textStyle="bold" android:id="@+id/createchallenge" android:text="@string/ChallengeCreate" android:background="@drawable/defaultbutton" android:layout_margin="25dip" android:textSize="16dip" android:textColor="#222" android:layout_height="45dip"></Button>



		</LinearLayout>

	</LinearLayout>
</ScrollView>
