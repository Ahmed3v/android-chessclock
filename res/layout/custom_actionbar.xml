<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="@dimen/actionbar_compat_height"
	android:orientation="horizontal">

	<com.chess.widgets.RoboTextView
		android:id="@id/actionbar_compat_title"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:gravity="center"
		android:textSize="@dimen/actionbar_title_text_size"
		android:textColor="@color/semitransparent_white_75"
		android:singleLine="true"
		android:ellipsize="marquee"
		android:marqueeRepeatLimit="marquee_forever"
		style="@style/ActionBarTitleTxt"
		custom:ttf="Bold" />

</LinearLayout>