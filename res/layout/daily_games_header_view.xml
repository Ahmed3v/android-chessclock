<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<com.chess.ui.views.chess_boards.ChessBoardDailyView
		android:id="@+id/boardView"
		android:layout_width="match_parent"
		android:layout_height="319dp" />

	<!--Start New Game overlay-->
	<LinearLayout
		android:id="@+id/startOverlayView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="160dp"
		android:background="@drawable/square_flat_border_white_back"
		android:paddingTop="@dimen/start_new_game_overlay_padding_side"
		android:paddingBottom="@dimen/start_new_game_overlay_padding_side"
		style="@style/PaddingSidesDefault"
		android:orientation="vertical"
		android:visibility="invisible">

		<!--New Game-->
		<com.chess.widgets.RoboTextView
			android:id="@+id/startTitleTxt"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:gravity="center_horizontal|top"
			android:textSize="@dimen/popup_title_text_size_big"
			android:textColor="@color/new_subtitle_dark_grey"
			android:text="@string/new_game"
			app:ttf="Bold" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<!--10 days-->
			<com.chess.widgets.RoboButton
				android:id="@+id/timeSelectBtn"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginEnd="5dp"
				android:layout_marginRight="5dp"
				android:minHeight="@dimen/big_orange_button_height"
				style="@style/Button.Glassy.Small"
				android:textSize="@dimen/big_button_text_size"
				android:textColor="@color/text_controls_icons_white" />

			<!--Play! -->
			<com.chess.widgets.RoboButton
				android:id="@+id/gamePlayBtn"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/play"
				style="@style/Button.OrangeNoBorder.Big"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:layout_weight="1" />

		</LinearLayout>

	</LinearLayout>
</RelativeLayout>
