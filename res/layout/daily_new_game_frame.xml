<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/dailyPlayScrollView">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/dailyNewOptionsView"
		android:background="@color/white"
		android:animateLayoutChanges="true">

		<!--New Game-->
		<com.chess.widgets.LinLayout
			android:id="@+id/dailyHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header_2.Light"
			android:paddingStart="@dimen/smaller_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/smaller_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding">

			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_add"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Big" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/dailyChessHeaderTxt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/new_game"
				style="@style/HeaderTitle.Light" />

			<!--Expand Icon-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/dailyExpandIconTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_right"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Small" />

		</com.chess.widgets.LinLayout>


		<com.chess.widgets.RelLayout
			android:id="@+id/liveOptionsView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:paddingStart="@dimen/default_scr_side_padding"
			android:paddingEnd="@dimen/default_scr_side_padding"
			android:paddingLeft="@dimen/default_scr_side_padding"
			android:paddingRight="@dimen/default_scr_side_padding"
			android:animateLayoutChanges="true">

			<LinearLayout
				android:id="@+id/dailyDefaultView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<!--3 days -->
				<com.chess.widgets.RoboButton
					android:id="@+id/dailyTimeSelectBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:minHeight="@dimen/big_orange_button_height"
					android:minWidth="112dp"
					android:layout_marginEnd="5dp"
					android:layout_marginRight="5dp"
					style="@style/Button.Glassy.Small"
					android:textSize="@dimen/big_button_text_size" />

				<!--Play! -->
				<com.chess.widgets.RoboButton
					android:id="@+id/dailyPlayBtn"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:text="@string/play"
					style="@style/Button.OrangeNoBorder.Big"
					android:layout_marginStart="5dp"
					android:layout_marginLeft="5dp"
					android:layout_weight="1" />


			</LinearLayout>

			<!--Daily Time Options-->
			<RelativeLayout
				android:id="@+id/dailyHomeOptionsFrame"
				android:layout_below="@id/dailyDefaultView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

		</com.chess.widgets.RelLayout>

		<!--Friends-->
		<com.chess.widgets.LinLayout
			android:id="@+id/friendsHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header_2.Light"
			android:paddingStart="@dimen/smaller_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/smaller_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding">

			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_board"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Big" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/friendsHeaderTxt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/friends"
				style="@style/HeaderTitle.Light" />


			<!--Expand Icon-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/friendExpandIconTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_right"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Small" />

		</com.chess.widgets.LinLayout>

		<!-- Friend view 1-->
		<com.chess.widgets.LinLayout
			android:id="@+id/inviteFriendView1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="@dimen/default_scr_side_padding"
			android:paddingEnd="@dimen/default_scr_side_padding"
			android:paddingLeft="@dimen/default_scr_side_padding"
			android:paddingRight="@dimen/default_scr_side_padding"
			style="@style/ListItem"
			android:gravity="center_vertical"
			android:visibility="gone">

			<ImageView
				android:layout_width="@dimen/list_item_image_size"
				android:layout_height="@dimen/list_item_image_size"
				android:src="@drawable/img_profile_picture_stub"
				android:layout_marginEnd="12dp"
				android:layout_marginRight="12dp"
				android:contentDescription="@string/profile" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/friendUserName1Txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Joachim"
				android:textColor="@color/new_subtitle_dark_grey" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/friendRealName1Txt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingStart="4dp"
				android:paddingLeft="4dp"
				android:text="(Friend Name)"
				android:textColor="@color/new_subtitle_dark_grey" />

		</com.chess.widgets.LinLayout>

		<!-- Friend view 2-->
		<com.chess.widgets.LinLayout
			android:id="@+id/inviteFriendView2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="@dimen/default_scr_side_padding"
			android:paddingEnd="@dimen/default_scr_side_padding"
			android:paddingLeft="@dimen/default_scr_side_padding"
			android:paddingRight="@dimen/default_scr_side_padding"
			style="@style/ListItem"
			android:gravity="center_vertical">

			<ImageView
				android:layout_width="@dimen/list_item_image_size"
				android:layout_height="@dimen/list_item_image_size"
				android:src="@drawable/img_profile_picture_stub"
				android:layout_marginEnd="12dp"
				android:layout_marginRight="12dp"
				android:contentDescription="@string/image" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/friendUserName2Txt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Joachim"
				android:textColor="@color/new_subtitle_dark_grey" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/friendRealName2Txt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingStart="4dp"
				android:paddingLeft="4dp"
				android:text="(Friend Name)"
				android:textColor="@color/new_subtitle_dark_grey"
				android:visibility="gone" />

		</com.chess.widgets.LinLayout>

		<!--Play Friend!-->
		<com.chess.widgets.LinLayout
			android:id="@+id/playFriendView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingStart="@dimen/default_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/default_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding"
			style="@style/ListItem"
			android:gravity="center_vertical">

			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="@dimen/list_item_image_size"
				android:layout_height="@dimen/list_item_image_size"
				android:text="@string/ic_play_friend"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Square"
				android:background="@color/new_soft_grey2"
				android:padding="0dp" />

			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/challenge_friend"
				android:textColor="@color/new_subtitle_dark_grey"
				android:paddingStart="12dp"
				android:paddingLeft="12dp" />

		</com.chess.widgets.LinLayout>

	</LinearLayout>
</ScrollView>