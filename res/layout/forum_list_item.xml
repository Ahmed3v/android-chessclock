<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="@dimen/list_item_height"
	android:paddingStart="@dimen/default_scr_side_padding"
	android:paddingEnd="@dimen/smaller_scr_side_padding"
	android:paddingLeft="@dimen/default_scr_side_padding"
	android:paddingRight="@dimen/smaller_scr_side_padding"
	android:paddingTop="6dp"
	android:paddingBottom="6dp"
	android:background="@drawable/transparent_list_item_selector">

	<!--New post icon-->
	<ImageView
		android:id="@+id/newPostImg"
		android:contentDescription="@string/image"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerVertical="true"
		android:src="@drawable/ic_new_post_t"
		android:layout_marginEnd="15dp"
		android:layout_marginRight="15dp"
		android:visibility="gone" />

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/titleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/newPostImg"
		android:layout_toRightOf="@id/newPostImg"
		android:textColor="@color/new_text_blue"
		custom:ttf="Bold" />

	<!--Last comment ago-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/lastCommentAgoTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/newPostImg"
		android:layout_toRightOf="@id/newPostImg"
		android:layout_below="@id/titleTxt"
		android:paddingTop="2dp"
		android:textColor="@color/stats_label_light_grey"
		android:textSize="12sp" />

	<!--Last comment ago-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/postsCountTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/titleTxt"
		android:layout_toEndOf="@id/lastCommentAgoTxt"
		android:layout_toRightOf="@id/lastCommentAgoTxt"
		android:paddingTop="2dp"
		android:textColor="@color/stats_label_light_grey"
		android:textSize="12sp" />

</RelativeLayout>