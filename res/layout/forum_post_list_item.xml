<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingTop="15dp"
	android:paddingStart="@dimen/default_scr_side_padding"
	android:paddingEnd="@dimen/default_scr_side_padding"
	android:paddingLeft="@dimen/default_scr_side_padding"
	android:paddingRight="@dimen/default_scr_side_padding"
	android:background="@color/white">

	<com.chess.backend.image_load.ProgressImageView
		android:id="@+id/photoImg"
		android:layout_width="35dp"
		android:layout_height="35dp"
		android:background="@color/new_common_list_thumb_grey"
		android:layout_below="@id/titleTxt"
		android:contentDescription="@string/photo"
		android:layout_marginEnd="11dp"
		android:layout_marginRight="11dp" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/authorTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/photoImg"
		android:layout_toRightOf="@id/photoImg"
		android:layout_marginTop="-4dp"
		android:textColor="@color/new_author_dark_grey"
		android:textSize="14sp"
		custom:ttf="Bold" />

	<ImageView
		android:id="@+id/countryImg"
		android:layout_width="27dp"
		android:layout_height="27dp"
		android:contentDescription="@string/country"
		android:layout_toEndOf="@id/authorTxt"
		android:layout_toRightOf="@id/authorTxt"
		android:layout_alignTop="@id/photoImg"
		android:layout_marginTop="-6dp"
		android:layout_marginStart="7dp" />

	<ImageView
		android:id="@+id/premiumImg"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:contentDescription="@string/image"
		android:layout_toEndOf="@id/countryImg"
		android:layout_toRightOf="@id/countryImg"
		android:src="@drawable/ic_nav_upgrade"
		android:layout_alignTop="@id/photoImg"
		android:layout_marginStart="10dp"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="-3dp"
		android:adjustViewBounds="true"
		android:scaleType="fitXY" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/commentNumberTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:textColor="@color/white"
		android:background="@drawable/button_post_number_back"
		android:paddingStart="6dp"
		android:paddingEnd="6dp"
		android:paddingLeft="6dp"
		android:paddingRight="6dp"
		android:paddingTop="3dp"
		android:paddingBottom="3dp"
		custom:ttf="Bold" />

	<!--12 minutes ago-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/dateTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/photoImg"
		android:layout_toRightOf="@id/photoImg"
		android:layout_below="@id/authorTxt"
		android:textColor="@color/stats_label_light_grey"
		android:textSize="@dimen/default_text_size_small"
		android:paddingTop="6dp" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/quoteTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/dateTxt"
		android:layout_toRightOf="@id/dateTxt"
		android:layout_below="@id/authorTxt"
		android:paddingTop="6dp"
		android:paddingStart="5dp"
		android:paddingLeft="5dp"
		android:textColor="@color/new_text_blue"
		android:textSize="@dimen/default_text_size_small"
		android:text="@string/quote" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/bodyTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/dateTxt"
		android:textColor="@color/new_subtitle_dark_grey"
		android:paddingTop="15dp"
		style="@style/Content" />

</RelativeLayout>