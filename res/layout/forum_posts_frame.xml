<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:divider="@color/new_friends_list_divider"
		android:dividerHeight="1dp"
		android:layout_above="@+id/pageIndicatorLay" />

	<com.chess.widgets.LinLayout
		android:id="@id/pageIndicatorLay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		style="@style/ListItem.Header_2.Light"
		android:layout_above="@+id/bannerUpgradeView"
		android:gravity="center"
		android:minHeight="51dp">

		<com.chess.ui.views.PageIndicatorView
			android:id="@+id/pageIndicatorView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center" />

	</com.chess.widgets.LinLayout>

	<com.chess.widgets.LinLayout
		android:id="@+id/replyView"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/ListItem.Header_2"
		android:padding="0dp"
		android:paddingTop="15dp"
		android:paddingBottom="15dp"
		android:layout_above="@id/bannerUpgradeView"
		android:visibility="gone">

		<com.chess.widgets.RoboEditText
			android:id="@+id/newPostEdt"
			android:inputType="textMultiLine"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="29dp"
			android:gravity="top"
			android:background="@drawable/edit_grey_one_default"
			android:imeActionLabel="@string/post"
			android:hint="@string/write_reply_"
			android:textSize="14sp" />
<!--
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
-->

	</com.chess.widgets.LinLayout>

	<!--Ads-->
	<include
		android:id="@id/bannerUpgradeView"
		layout="@layout/mopub_ad_view"
		android:layout_gravity="center_horizontal"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true" />

</RelativeLayout>