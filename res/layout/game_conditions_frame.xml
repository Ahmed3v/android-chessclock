<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:id="@+id/boardFrame"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.chess.widgets.RoboTextView
		android:id="@+id/predictOpponentsMoveTxt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/ListItem.Header.Dark"
		android:gravity="center_vertical|left"
		android:minHeight="48dp"
		android:textColor="@color/semitransparent_white_65"
		android:textSize="16sp"
		android:paddingStart="8dp"
		android:paddingLeft="8dp" />


	<com.chess.ui.views.chess_boards.ChessBoardAnalysisView
		android:id="@+id/boardview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

	<!--List of predicted moves-->
	<com.chess.widgets.RoboListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content" />

</LinearLayout>