<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chess"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.chess.widgets.LinLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/default_list_item_height"
		android:gravity="center_vertical"
		android:paddingStart="@dimen/new_game_frame_padding_side"
		android:paddingEnd="@dimen/new_game_frame_padding_side"
		android:paddingLeft="@dimen/new_game_frame_padding_side"
		android:paddingRight="@dimen/new_game_frame_padding_side">

		<!--Opponent Title-->
		<com.chess.widgets.RoboTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/opponent_"
			android:textColor="@color/semitransparent_white_65"
			app:themeColor="true" />

		<!--Opponent Name-->
		<com.chess.widgets.RoboTextView
			android:id="@+id/opponentNameTxt"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/random"
			android:gravity="end|right"
			android:textColor="@color/semitransparent_white_65"
			android:paddingEnd="6dp"
			android:paddingRight="6dp"
			app:themeColor="true" />

	</com.chess.widgets.LinLayout>
</LinearLayout>