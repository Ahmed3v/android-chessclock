<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/dailyGameOptionView"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!--Daily Chess-->
		<com.chess.widgets.LinLayout
			android:id="@+id/dailyHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header.Dark"
			android:paddingStart="13dp"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="13dp"
			android:paddingRight="@dimen/smaller_scr_side_padding"
			android:visibility="gone">
			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_daily_game"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Big" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/dailyChessHeaderTxt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/daily_chess"
				style="@style/HeaderTitle.Light" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/dailyRatingTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="@color/new_light_grey_2"
				app:ttf="Bold" />

			<!--Right Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_left"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Small" />

		</com.chess.widgets.LinLayout>

		<!--Opponent-->
		<com.chess.widgets.LinLayout
			android:id="@+id/opponentView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem"
			android:paddingStart="@dimen/new_game_frame_padding_side"
			android:paddingEnd="@dimen/new_game_frame_padding_side"
			android:paddingLeft="@dimen/new_game_frame_padding_side"
			android:paddingRight="@dimen/new_game_frame_padding_side">

			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/opponent_"
				android:textColor="@color/semitransparent_white_65"
				app:themeColor="true" />

			<!--Opponent Name-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/opponentNameTxt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/random"
				android:gravity="end|right"
				android:textColor="@color/semitransparent_white_65"
				android:paddingEnd="6dp"
				android:paddingRight="6dp"
				app:themeColor="true" />

		</com.chess.widgets.LinLayout>

		<!--Days Per Move - Mode-->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/ListItem"
			android:orientation="vertical"
			android:paddingStart="@dimen/new_game_frame_padding_side"
			android:paddingEnd="@dimen/new_game_frame_padding_side"
			android:paddingLeft="@dimen/new_game_frame_padding_side"
			android:paddingRight="@dimen/new_game_frame_padding_side"
			android:paddingTop="13dp">

			<com.chess.widgets.RoboTextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/days_per_move_"
				android:textColor="@color/semitransparent_white_65"
				app:themeColor="true" />

			<GridView
				android:id="@+id/dailyGamesModeGrid"
				android:layout_width="match_parent"
				android:layout_height="90dp"
				android:columnWidth="@dimen/new_daily_grid_button_width"
				android:gravity="center"
				android:verticalSpacing="1dp"
				android:horizontalSpacing="1dp"
				android:numColumns="auto_fit"
				android:stretchMode="columnWidth"
				android:visibility="visible"
				android:background="@android:color/transparent"
				android:paddingTop="6dp"
				android:paddingStart="0dp"
				android:paddingEnd="0dp"
				android:paddingLeft="0dp"
				android:paddingRight="0dp"
				android:paddingBottom="13dp"
				android:listSelector="@android:color/transparent" />

		</com.chess.widgets.LinLayout>

		<!--Rated Game-->
		<com.chess.widgets.LinLayout
			android:id="@+id/ratedGameView"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:gravity="center_vertical"
			style="@style/ListItem"
			android:paddingStart="@dimen/new_game_frame_padding_side"
			android:paddingEnd="@dimen/new_game_frame_padding_side"
			android:paddingLeft="@dimen/new_game_frame_padding_side"
			android:paddingRight="@dimen/new_game_frame_padding_side">

			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/rated_game_"
				android:textColor="@color/semitransparent_white_65"
				app:themeColor="true" />

			<com.chess.widgets.SwitchButton
				android:id="@+id/ratedGameSwitch"
				style="@style/Switch.Dark" />

		</com.chess.widgets.LinLayout>

		<!--Type-->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem"
			android:paddingStart="@dimen/new_game_frame_padding_side"
			android:paddingEnd="@dimen/new_game_frame_padding_side"
			android:paddingLeft="@dimen/new_game_frame_padding_side"
			android:paddingRight="@dimen/new_game_frame_padding_side">

			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/type_"
				android:textColor="@color/semitransparent_white_65"
				app:themeColor="true" />

			<com.chess.widgets.RoboButton
				android:id="@+id/gameTypeBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/standard"
				style="@style/Button.Glassy.Small" />
		</com.chess.widgets.LinLayout>

		<!--Rating View-->
		<com.chess.widgets.RelLayout
			android:id="@+id/ratingView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem"
			android:paddingStart="12dp"
			android:paddingEnd="12dp"
			android:paddingLeft="12dp"
			android:paddingRight="12dp"
			android:paddingTop="12dp"
			android:paddingBottom="7dp"
			android:animateLayoutChanges="true">

			<com.chess.widgets.RoboTextView
				android:id="@+id/minRatingTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/rating_range"
				android:layout_centerHorizontal="true"
				android:textColor="@color/semitransparent_white_65"
				app:themeColor="true" />

			<RelativeLayout
				android:id="@+id/ratingButtonsLay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/minRatingTxt"
				android:gravity="center_vertical"
				android:paddingTop="8dp"
				android:paddingStart="2dp"
				android:paddingEnd="2dp"
				android:paddingLeft="2dp"
				android:paddingRight="2dp">

				<com.chess.widgets.RoboRadioButton
					android:id="@+id/minRatingBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					style="@style/Button.Glassy.Small"
					android:button="@null"
					android:inputType="numberDecimal" />

				<com.chess.widgets.RoboTextView
					android:id="@+id/currentRatingTxt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingTop="9dp"
					style="@style/SettingsListText"
					android:layout_centerInParent="true"
					android:textSize="@dimen/big_button_text_size"
					android:textColor="@color/semitransparent_white_65"
					app:themeColor="true" />

				<com.chess.widgets.RoboRadioButton
					android:id="@+id/maxRatingBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentEnd="true"
					android:layout_alignParentRight="true"
					style="@style/Button.Glassy.Small"
					android:button="@null"
					android:inputType="numberDecimal" />
			</RelativeLayout>

			<SeekBar
				android:id="@+id/ratingSeekBar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/ratingButtonsLay"
				android:paddingStart="@dimen/seek_bar_side_padding"
				android:paddingEnd="@dimen/seek_bar_side_padding"
				android:paddingLeft="@dimen/seek_bar_side_padding"
				android:paddingRight="@dimen/seek_bar_side_padding"
				android:max="20"
				android:progress="10"
				android:layout_marginTop="11dp"
				style="@style/RatingSeekBar" />

		</com.chess.widgets.RelLayout>

		<!--Play Button-->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/new_game_frame_padding_side"
			style="@style/ListItem"
			android:paddingTop="9dp"
			android:paddingBottom="9dp"
			android:paddingStart="15dp"
			android:paddingEnd="15dp"
			android:paddingLeft="15dp"
			android:paddingRight="15dp">

			<com.chess.widgets.RoboButton
				android:id="@+id/playBtn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/play"
				style="@style/Button.OrangeNoBorder" />
		</com.chess.widgets.LinLayout>

	</LinearLayout>
</ScrollView>