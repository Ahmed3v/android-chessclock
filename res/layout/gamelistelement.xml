<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent"
	android:orientation="horizontal">

	<TextView android:id="@+id/info" android:layout_height="wrap_content" android:textColor="#fff"
	          android:textStyle="bold" android:layout_width="fill_parent" android:padding="4dip"
	          android:layout_weight="1" android:textSize="18dip"></TextView>                    
	<TextView android:id="@+id/left" android:layout_height="wrap_content" android:textColor="#fff"
	          android:textStyle="bold" android:gravity="center" android:padding="4dip" android:textSize="18dip"
	          android:layout_width="wrap_content" android:layout_marginRight="5dip"></TextView>
	<ImageView android:id="@+id/directChallenge" android:src="@drawable/flag_blue" android:padding="4dip" 
			   android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>

</LinearLayout>