<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!--Tactics Header-->
		<com.chess.widgets.LinLayout
			android:id="@+id/tacticsHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header_2.Light"
			android:paddingStart="@dimen/smaller_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/smaller_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding">

			<!--Tactics Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_help"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon" />

			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/tactics"
				style="@style/HeaderTitle.Dark" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/tacticsRatingTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="@color/new_normal_grey"
				style="@style/HeaderTitle.Dark" />

			<!--Right Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_right"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Small" />

		</com.chess.widgets.LinLayout>

		<!--Board and info -->
		<com.chess.widgets.RelLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="15dp">

			<!--Board-->
			<RelativeLayout
				android:id="@+id/tacticsBoardView"
				android:layout_width="@dimen/video_thumb_size"
				android:layout_height="@dimen/video_thumb_size"
				android:background="@drawable/img_tactics_board"
				android:layout_marginEnd="15dp"
				android:layout_marginRight="15dp">

				<com.chess.widgets.RoboButton
					android:id="@+id/startTacticsRoundBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="@string/ic_help"
					style="@style/GlyphIcon.RoundBack" />

			</RelativeLayout>

			<!-- Today's attempts: -->
			<com.chess.widgets.RoboTextView
				android:id="@+id/todaysAttemptsLabelTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/todays_attempts"
				android:layout_toEndOf="@id/tacticsBoardView"
				android:layout_toRightOf="@id/tacticsBoardView"
				android:textColor="@color/stats_label_grey"
				android:textSize="@dimen/default_text_size_small"
				android:layout_marginEnd="7dp"
				android:layout_marginRight="7dp"
				android:layout_marginBottom="3dp"
				android:layout_marginTop="-3dp" />

			<!-- Attempts value-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/todaysAttemptsValueTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toEndOf="@id/todaysAttemptsLabelTxt"
				android:layout_toRightOf="@id/todaysAttemptsLabelTxt"
				android:layout_alignBottom="@id/todaysAttemptsLabelTxt"
				android:textColor="@color/new_subtitle_dark_grey"
				android:textSize="@dimen/default_text_size_small"
				custom:ttf="Bold" />

			<!-- Average Score: -->
			<com.chess.widgets.RoboTextView
				android:id="@+id/avgScoreLabelTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/average_score"
				android:layout_toEndOf="@id/tacticsBoardView"
				android:layout_toRightOf="@id/tacticsBoardView"
				android:layout_below="@id/todaysAttemptsLabelTxt"
				android:layout_marginEnd="8dp"
				android:layout_marginRight="8dp"
				android:textColor="@color/stats_label_grey"
				android:textSize="@dimen/default_text_size_small" />

			<!-- Score value-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/avgScoreValueTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toEndOf="@id/avgScoreLabelTxt"
				android:layout_below="@id/todaysAttemptsLabelTxt"
				android:textColor="@color/new_subtitle_dark_grey"
				android:textSize="@dimen/default_text_size_small"
				custom:ttf="Bold" />

			<!--Start Tactics-->
			<com.chess.widgets.RoboButton
				android:id="@+id/startTacticsBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/start"
				android:layout_alignParentEnd="true"
				android:layout_toEndOf="@id/tacticsBoardView"
				android:layout_alignParentRight="true"
				android:layout_toRightOf="@id/tacticsBoardView"
				android:layout_alignBottom="@id/tacticsBoardView"
				style="@style/Button.OrangeNoBorder.Small" />

		</com.chess.widgets.RelLayout>

		<!--Lessons Header-->
		<com.chess.widgets.LinLayout
			android:id="@+id/lessonsHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header_2.Light"
			android:paddingStart="@dimen/smaller_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/smaller_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding">

			<!--Lessons Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_lessons"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon" />

			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/lessons"
				style="@style/HeaderTitle.Dark" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/lessonsRatingTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				android:textColor="@color/new_normal_grey"
				style="@style/HeaderTitle.Dark" />

			<!--Right Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_right"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Small" />

		</com.chess.widgets.LinLayout>

		<!--Board and info -->
		<com.chess.widgets.RelLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="15dp">

			<!--Board-->
			<RelativeLayout
				android:id="@+id/lessonsBoardView"
				android:layout_width="@dimen/video_thumb_size"
				android:layout_height="@dimen/video_thumb_size"
				android:background="@drawable/img_tactics_board"
				android:layout_marginEnd="15dp"
				android:layout_marginRight="15dp">
				<!--Icon-->
				<com.chess.widgets.RoboButton
					android:id="@+id/startLessonsRoundBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:text="@string/ic_lessons"
					style="@style/GlyphIcon.RoundBack" />
			</RelativeLayout>

			<!-- Lessons Title -->
			<com.chess.widgets.RoboTextView
				android:id="@+id/lessonTitleTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_toEndOf="@id/lessonsBoardView"
				android:layout_toRightOf="@id/lessonsBoardView"
				android:textColor="@color/new_text_blue"
				android:textSize="16sp"
				android:layout_marginEnd="7dp"
				android:layout_marginRight="7dp"
				android:layout_marginBottom="5dp"
				android:layout_marginTop="-3dp"
				custom:ttf="Bold" />

			<!--Start Lessons-->
			<com.chess.widgets.RoboButton
				android:id="@+id/startLessonsBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/start"
				android:layout_alignParentEnd="true"
				android:layout_toEndOf="@id/lessonsBoardView"
				android:layout_alignParentRight="true"
				android:layout_toRightOf="@id/lessonsBoardView"
				android:layout_alignBottom="@id/lessonsBoardView"
				style="@style/Button.OrangeNoBorder.Small" />

		</com.chess.widgets.RelLayout>

		<!--Videos Header-->
		<com.chess.widgets.LinLayout
			android:id="@+id/videosHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header_2.Light"
			android:paddingStart="@dimen/smaller_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/smaller_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding">

			<!--Video Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_play"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon" />

			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/videos"
				style="@style/HeaderTitle.Dark" />

			<!--Right Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_right"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Small" />

		</com.chess.widgets.LinLayout>

		<include layout="@layout/videos_thumb_list_item" />

	</LinearLayout>
</ScrollView>