<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/homePlayScrollView">

	<LinearLayout
		android:id="@+id/homePlayLinLay"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:animateLayoutChanges="true">

		<!--Live Chess-->
		<com.chess.widgets.LinLayout
			android:id="@+id/liveHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header_2.Light"
			android:paddingStart="@dimen/smaller_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/smaller_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding">
			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_live_standard"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Big" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/liveChessHeaderTxt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/live_chess"
				style="@style/HeaderTitle.Light" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/liveRatingTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				style="@style/HeaderTitle.Light"
				app:ttf="Bold" />

			<!--Expand Icon-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/liveExpandIconTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_down"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Small" />

		</com.chess.widgets.LinLayout>

		<!--Live Game Full Options View-->
		<FrameLayout
			android:id="@+id/liveOptionsFrame"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" />

		<!--Live Game Quick Options View-->
		<com.chess.widgets.RelLayout
			android:id="@+id/liveOptionsView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingTop="8dp"
			android:paddingBottom="8dp"
			android:paddingStart="@dimen/default_scr_side_padding"
			android:paddingEnd="@dimen/default_scr_side_padding"
			android:paddingLeft="@dimen/default_scr_side_padding"
			android:paddingRight="@dimen/default_scr_side_padding"
			android:animateLayoutChanges="true">

			<!--Time selection | Default time-->
			<com.chess.widgets.RoboButton
				android:id="@+id/liveTimeSelectBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/Button.Glassy.Small" />

			<com.chess.widgets.RoboButton
				android:id="@+id/livePlayBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/play"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true"
				style="@style/Button.OrangeNoBorder.Small" />

			<!--Live Options-->
			<RelativeLayout
				android:id="@+id/liveHomeOptionsFrame"
				android:layout_below="@id/liveTimeSelectBtn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content" />

		</com.chess.widgets.RelLayout>

		<!--Daily Chess-->
		<com.chess.widgets.LinLayout
			android:id="@+id/dailyHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header_2.Light"
			android:paddingStart="@dimen/smaller_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/smaller_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding">

			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_daily_game"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Big" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/dailyChessHeaderTxt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/daily_chess"
				style="@style/HeaderTitle.Light" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/dailyRatingTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_vertical"
				style="@style/HeaderTitle.Light" />

			<!--Expand Icon-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/dailyExpandIconTxt"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_down"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Small" />

		</com.chess.widgets.LinLayout>

		<FrameLayout
			android:id="@+id/dailyOptionsFrame"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical" />

		<!--Daily Game Quick Options View-->
		<com.chess.widgets.LinLayout
			android:id="@+id/dailyGameQuickOptions"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<!--vs Random Opponent-->
			<com.chess.widgets.LinLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/default_scr_side_padding"
				android:paddingEnd="@dimen/default_scr_side_padding"
				android:paddingLeft="@dimen/default_scr_side_padding"
				android:paddingRight="@dimen/default_scr_side_padding"
				style="@style/ListItem"
				android:gravity="center_vertical">

				<!--Icon-->
				<com.chess.widgets.RoboTextView
					android:layout_width="@dimen/list_item_image_size"
					android:layout_height="@dimen/list_item_image_size"
					android:text="@string/ic_vs_random"
					android:textColor="@color/new_light_grey_2"
					style="@style/GlyphIcon.Square"
					android:background="@color/new_soft_grey2"
					android:padding="0dp"
					app:themeColor="true" />

				<com.chess.widgets.RoboTextView
					android:id="@+id/vsRandomTxt"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_centerVertical="true"
					android:text="@string/vs_random_opponent"
					android:paddingStart="12dp"
					android:paddingLeft="12dp"
					android:textColor="@color/semitransparent_white_75"
					app:themeColor="true" />

				<com.chess.widgets.RoboButton
					android:id="@+id/dailyPlayBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/play"
					android:layout_centerVertical="true"
					android:layout_alignParentEnd="true"
					android:layout_alignParentRight="true"
					style="@style/Button.OrangeNoBorder.Small" />

			</com.chess.widgets.LinLayout>

			<!-- Friend view 1-->
			<com.chess.widgets.LinLayout
				android:id="@+id/inviteFriendView1"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/default_scr_side_padding"
				android:paddingEnd="@dimen/default_scr_side_padding"
				android:paddingLeft="@dimen/default_scr_side_padding"
				android:paddingRight="@dimen/default_scr_side_padding"
				style="@style/ListItem"
				android:gravity="center_vertical"
				android:visibility="gone">

				<ImageView
					android:layout_width="@dimen/list_item_image_size"
					android:layout_height="@dimen/list_item_image_size"
					android:src="@drawable/img_profile_picture_stub"
					android:layout_marginEnd="12dp"
					android:layout_marginRight="12dp"
					android:contentDescription="@string/image" />

				<com.chess.widgets.RoboTextView
					android:id="@+id/friendUserName1Txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/semitransparent_white_75"
					app:themeColor="true" />

				<com.chess.widgets.RoboTextView
					android:id="@+id/friendRealName1Txt"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:paddingStart="4dp"
					android:paddingLeft="4dp"
					android:textColor="@color/semitransparent_white_75"
					app:themeColor="true" />

			</com.chess.widgets.LinLayout>

			<!-- Friend view 2-->
			<com.chess.widgets.LinLayout
				android:id="@+id/inviteFriendView2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/default_scr_side_padding"
				android:paddingEnd="@dimen/default_scr_side_padding"
				android:paddingLeft="@dimen/default_scr_side_padding"
				android:paddingRight="@dimen/default_scr_side_padding"
				style="@style/ListItem"
				android:gravity="center_vertical"
				android:visibility="gone">

				<ImageView
					android:layout_width="@dimen/list_item_image_size"
					android:layout_height="@dimen/list_item_image_size"
					android:src="@drawable/img_profile_picture_stub"
					android:layout_marginEnd="12dp"
					android:layout_marginRight="12dp"
					android:contentDescription="@string/image" />

				<com.chess.widgets.RoboTextView
					android:id="@+id/friendUserName2Txt"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/semitransparent_white_75"
					app:themeColor="true" />

				<com.chess.widgets.RoboTextView
					android:id="@+id/friendRealName2Txt"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:paddingStart="4dp"
					android:paddingLeft="4dp"
					android:textColor="@color/semitransparent_white_75"
					app:themeColor="true" />

			</com.chess.widgets.LinLayout>

			<!--Play Friend!-->
			<com.chess.widgets.LinLayout
				android:id="@+id/playFriendView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingStart="@dimen/default_scr_side_padding"
				android:paddingEnd="@dimen/smaller_scr_side_padding"
				android:paddingLeft="@dimen/default_scr_side_padding"
				android:paddingRight="@dimen/smaller_scr_side_padding"
				style="@style/ListItem"
				android:gravity="center_vertical">

				<!--Icon-->
				<com.chess.widgets.RoboTextView
					android:layout_width="@dimen/list_item_image_size"
					android:layout_height="@dimen/list_item_image_size"
					android:text="@string/ic_play_friend"
					android:textColor="@color/new_light_grey_2"
					style="@style/GlyphIcon.Square"
					android:background="@color/new_soft_grey2"
					android:padding="0dp" />

				<com.chess.widgets.RoboTextView
					android:id="@+id/challengeFriendTxt"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/challenge_friend"
					android:textColor="@color/semitransparent_white_65"
					android:paddingStart="12dp"
					android:paddingLeft="12dp"
					app:themeColor="true" />

			</com.chess.widgets.LinLayout>

		</com.chess.widgets.LinLayout>


		<!--vs Computer Header-->
		<com.chess.widgets.LinLayout
			android:id="@+id/vsCompHeaderView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header"
			android:paddingStart="@dimen/smaller_scr_side_padding"
			android:paddingEnd="@dimen/smaller_scr_side_padding"
			android:paddingLeft="@dimen/smaller_scr_side_padding"
			android:paddingRight="@dimen/smaller_scr_side_padding">

			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_comp_game"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Big" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/vsComputerHeaderTxt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/computer"
				style="@style/HeaderTitle.Light" />

		</com.chess.widgets.LinLayout>


	</LinearLayout>
</ScrollView>