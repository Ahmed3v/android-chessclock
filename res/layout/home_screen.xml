<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:cb="http://schemas.android.com/apk/res/com.chess"
	android:id="@id/mainView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<com.chess.ui.views.DashBoardLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.chess.ui.views.CenteredButton
			android:id="@id/playLiveFrame"
			style="@style/DashboardItem"
			cb:buttonDrawable="@drawable/dashboard_play_live_selector"
			android:clickable="true"
			cb:buttonText="@string/dashboard_live"/>

		<com.chess.ui.views.CenteredButton
			android:id="@id/playOnlineFrame"
			style="@style/DashboardItem"
			cb:buttonDrawable="@drawable/dashboard_play_online_selector"
			cb:buttonText="@string/dashboard_online"/>

		<com.chess.ui.views.CenteredButton
			android:id="@id/playComputerFrame"
			style="@style/DashboardItem"
			cb:buttonDrawable="@drawable/dashboard_play_comp_selector"
			cb:buttonText="@string/dashboard_computer"/>

		<com.chess.ui.views.CenteredButton
			android:id="@id/tacticsTrainerFrame"
			style="@style/DashboardItem"
			cb:buttonDrawable="@drawable/dashboard_tactics_selector"
			cb:buttonText="@string/dashboard_tactics"/>

		<com.chess.ui.views.CenteredButton
			android:id="@id/videoLessonsFrame"
			style="@style/DashboardItem"
			cb:buttonDrawable="@drawable/dashboard_video_selector"
			cb:buttonText="@string/dashboard_video"/>

		<com.chess.ui.views.CenteredButton
			android:id="@id/settingsFrame"
			style="@style/DashboardItem"
			cb:buttonDrawable="@drawable/dashboard_settings_selector"
			cb:buttonText="@string/settings"/>
	</com.chess.ui.views.DashBoardLayout>

</LinearLayout>