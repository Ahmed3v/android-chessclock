<?xml version="1.0" encoding="utf-8"?>

<!--<ScrollView

	android:layout_width="match_parent"
	android:layout_height="match_parent"
	>-->
	<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@id/mainView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:paddingTop="@dimen/default_scr_top_padding"
		android:paddingLeft="@dimen/default_scr_side_padding"
		android:paddingRight="@dimen/default_scr_side_padding"

		>

		<include layout="@layout/mopub_ad_view"/>

		<com.chess.RoboButton
			android:id="@+id/currentGame"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/currentGame"
			android:visibility="visible"/>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			style="@style/LinearDescription"
			android:paddingRight="0dip"
			android:layout_marginTop="10dip"
			>

			<com.chess.RoboTextView
				android:id="@+id/startNewGameTitle"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="6"
				android:text="@string/start_new_game"

				android:visibility="visible"/>

			<com.chess.RoboButton
				android:id="@+id/start"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/ChallengeCreate"
				android:visibility="visible"
				android:layout_weight="4"/>

		</LinearLayout>

		<GridView
			android:id="@+id/gridview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:columnWidth="90dp"
			android:gravity="center"
			android:horizontalSpacing="10dp"
			android:numColumns="auto_fit"
			android:stretchMode="columnWidth"
			android:verticalSpacing="10dp"
			android:visibility="visible"
			android:background="@android:color/transparent"
			android:paddingTop="10dip"
			android:paddingLeft="0dip"
			android:paddingRight="0dip"
			android:paddingBottom="10dip"
			android:listSelector="@android:color/transparent"
			/>

		<com.chess.RoboTextView
			android:id="@+id/challengesListTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="left"
			android:text="@string/challenges"
			android:paddingLeft="@dimen/default_linear_left_padding"
			android:visibility="visible"/>

		<ListView
			android:id="@+id/GamesList"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent"/>

	</LinearLayout>
<!--
</ScrollView>-->
