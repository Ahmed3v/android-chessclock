<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:robo="http://schemas.android.com/apk/res/com.chess"
	android:id="@id/mainView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingTop="@dimen/live_scr_top_padding"
	android:paddingLeft="@dimen/default_scr_side_padding"
	android:paddingRight="@dimen/default_scr_side_padding"
	>

	<include layout="@layout/mopub_ad_view"/>

	<com.chess.RoboButton
		android:id="@+id/currentGameBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/currentGame"
		android:visibility="visible"/>

	<RelativeLayout
		android:id="@+id/loadingView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="60dip"
		android:visibility="gone"
		>

		<ProgressBar
			android:layout_width="@dimen/pending_progress_bar_size"
			android:layout_height="@dimen/pending_progress_bar_size"
			android:layout_margin="5dip"
			android:layout_centerVertical="true"
			android:layout_toLeftOf="@+id/pending_list_item_TextView"
			style="?android:attr/progressBarStyle"
			/>

		<com.chess.RoboTextView
			android:id="@id/pending_list_item_TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/loading"
			android:gravity="center"
			android:textSize="20sp"
			android:textColor="@color/grey_button"
			android:paddingLeft="10dip"
			android:layout_centerInParent="true"
			robo:ttf="Bold"
			style="@style/DarkShadowBottom"
			/>

	</RelativeLayout>

	<com.chess.RoboTextView
		android:id="@+id/emptyView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:text="@string/no_network"
		android:gravity="center"
		android:layout_gravity="center"
		android:textSize="20sp"
		android:textColor="@color/grey_button"
		android:paddingLeft="10dip"
		android:layout_centerInParent="true"
		robo:ttf="Bold"
		style="@style/DarkShadowBottom"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		style="@style/LinearDescription"
		android:paddingRight="0dip"
		android:layout_marginTop="@dimen/live_layout_mTop"
		>

		<com.chess.RoboTextView
			android:id="@+id/startNewGameTitle"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="6"
			android:text="@string/start_new_game"
			android:textSize="@dimen/live_challenges_textSize"
			android:visibility="visible"/>

		<com.chess.RoboButton
			android:id="@+id/start"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/ChallengeCreate"
			android:visibility="visible"
			android:layout_weight="4"/>

	</LinearLayout>

	<GridView
		android:id="@+id/gridview"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:columnWidth="90dp"
		android:gravity="center"
		android:horizontalSpacing="@dimen/live_grid_hotizontal_spacing"
		android:numColumns="auto_fit"
		android:stretchMode="columnWidth"
		android:verticalSpacing="10dp"
		android:visibility="visible"
		android:background="@android:color/transparent"
		android:paddingTop="@dimen/live_grid_padding_top"
		android:paddingLeft="0dip"
		android:paddingRight="0dip"
		android:paddingBottom="@dimen/live_grid_padding_bottom"
		android:listSelector="@android:color/transparent"
		/>

</LinearLayout>

