<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="62dp"
	android:paddingTop="10dp"
	style="@style/PaddingSidesDefault"
	android:paddingBottom="10dp"
	android:background="@drawable/transparent_list_item_selector">

	<!--Thumbnail-->
	<com.chess.backend.image_load.AvatarView
		android:id="@+id/photoImg"
		android:layout_width="@dimen/message_thumb_size"
		android:layout_height="@dimen/message_thumb_size"
		/>

	<!--Author-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/authorTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/photoImg"
		android:layout_toRightOf="@id/photoImg"
		android:layout_alignTop="@id/photoImg"
		style="@style/AuthorName" />

	<!--Long time ago-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/messageDateTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignTop="@id/photoImg"
		android:layout_marginTop="-2dp"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:textColor="@color/stats_label_light_grey"
		android:textSize="12sp" />

	<!--Last message-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/messageTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/photoImg"
		android:layout_toRightOf="@id/photoImg"
		android:layout_below="@id/authorTxt"
		style="@style/PaddingLeftSmall"
		android:textColor="@color/new_subtitle_dark_grey" />

</RelativeLayout>