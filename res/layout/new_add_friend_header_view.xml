<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Facebook Friends-->
    <com.chess.LinLayout
        android:id="@+id/facebookFriendsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dip"
        android:paddingRight="10dip"
        style="@style/ListItem"
        android:gravity="center_vertical">

        <!--Icon-->
        <com.chess.RoboTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_facebook"
            android:textColor="@color/new_light_grey_2"
            style="@style/GlyphIcon.Big" />

        <com.chess.RoboTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/invite_facebook_friend"
            android:textColor="@color/new_light_grey" />

    </com.chess.LinLayout>

    <!--Your Contacts-->
    <com.chess.LinLayout
        android:id="@+id/yourContactsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dip"
        android:paddingRight="10dip"
        style="@style/ListItem"
        android:gravity="center_vertical">

        <!--Icon-->
        <com.chess.RoboTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_contacts"
            android:textColor="@color/new_light_grey_2"
            style="@style/GlyphIcon.Big" />

        <com.chess.RoboTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/invite_from_contacts"
            android:textColor="@color/new_light_grey" />

    </com.chess.LinLayout>

    <!--Email-->
    <com.chess.LinLayout
        android:id="@+id/yourEmailView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dip"
        android:paddingRight="10dip"
        style="@style/ListItem"
        android:gravity="center_vertical">

        <!--Icon-->
        <com.chess.RoboTextView
            android:id="@+id/emailIconTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_email_dark"
            android:textColor="@color/new_light_grey_2"
            style="@style/GlyphIcon.Big" />

        <com.chess.RoboTextView
            android:id="@+id/emailTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/invite_by_email"
            android:textColor="@color/new_light_grey" />

        <com.chess.EditButton
            android:id="@+id/emailEditBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/invite_by_email"
            style="@style/EditButton"
            android:layout_marginRight="10dip"
            android:visibility="gone"
            />

        <com.chess.RoboButton
            android:id="@+id/addEmailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            style="@style/Button.OrangeNoBorder.Small"
            android:visibility="gone"
            />

    </com.chess.LinLayout>

    <!--Chess.com Username Play!-->
    <com.chess.LinLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="9dip"
        android:paddingRight="10dip"
        style="@style/ListItem"
        android:gravity="center_vertical">

        <com.chess.EditButton
            android:id="@+id/usernameEditBtn"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/chess_com_username"
            style="@style/EditButton"
            android:layout_marginRight="10dip"
            />

        <com.chess.RoboButton
            android:id="@+id/addFriendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add"
            style="@style/Button.OrangeNoBorder.Small" />

    </com.chess.LinLayout>


    <!--Recent Opponents Header-->
    <com.chess.LinLayout
        android:id="@+id/tacticsHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        style="@style/ListItem.Header.Dark"
        android:paddingLeft="13dip"
        android:paddingRight="8dip">

        <!--Recent Icon-->
        <com.chess.RoboTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_recent"
            android:textColor="@color/new_light_grey_2"
            android:textSize="26dip"
            style="@style/GlyphIcon" />

        <com.chess.RoboTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/recent_opponents"
            style="@style/HeaderTitle.Light" />

    </com.chess.LinLayout>

</LinearLayout>