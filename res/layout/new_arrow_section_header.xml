<?xml version="1.0" encoding="utf-8"?>

<com.chess.LinLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="46dip"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/default_scr_side_padding"
    android:paddingRight="8dip"
    style="@style/ListItem.Header_2.Light"
    >
	<com.chess.RoboTextView
		android:id="@+id/headerTitle"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
        android:layout_weight="1"
        style="@style/HeaderTitle.Dark"
		/>

    <!--Right Icon-->
    <com.chess.RoboTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ic_right"
        android:textColor="@color/new_light_grey_2"
        style="@style/GlyphIcon.Small"
        />

</com.chess.LinLayout>
