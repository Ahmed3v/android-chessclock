<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/baseView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_main_back"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/statusBarLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        >

        <com.chess.RoboTextView
            android:id="@+id/thinking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            style="@style/GameLabel"
            />

        <com.chess.RoboTextView
            android:id="@+id/whiteLabelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="2dip"
            android:paddingLeft="8dip"
            style="@style/GameLabel.Player"
            />

        <com.chess.RoboTextView
            android:id="@+id/blackLabelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="2dip"
            android:paddingRight="8dip"
            style="@style/GameLabel.Player"
            />

        <com.chess.RoboTextView
            android:id="@+id/analysisTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:text="@string/analysis_mode"
            style="@style/GameLabel"
            />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.chess.ui.views.NotationView
                android:id="@+id/notationsView"
                android:layout_width="match_parent"
                android:layout_height="36dip"
                android:visibility="visible"
                android:gravity="center_vertical"
                android:paddingLeft="7dip"
                android:paddingTop="7dip"
                android:paddingRight="7dip"
                android:background="@color/notations_back"
                />

            <com.chess.ui.views.PanelInfoGameView
                android:id="@+id/topPanelView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.chess.ui.views.ChessBoardDailyView
                android:id="@+id/boardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />


            <com.chess.ui.views.PanelInfoGameView
                android:id="@+id/bottomPanelView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <com.chess.ui.views.ControlsNetworkView
                android:id="@+id/controlsNetworkView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <!--Submit buttons layout-->
        <LinearLayout
            android:id="@+id/submitButtonsLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/game_end_layout_padding_side"
            android:paddingRight="@dimen/game_end_layout_padding_side"
            android:paddingBottom="@dimen/game_end_layout_padding_bottom"
            android:visibility="invisible">

            <com.chess.RoboButton
                android:id="@+id/submitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_weight="1"
                style="@style/Text.Button"
                android:text="@string/submit"/>

            <com.chess.RoboButton
                android:id="@+id/cancelBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Text.Button.Grey"
                android:layout_marginLeft="10dip"
                android:layout_weight="1"
                android:text="@string/cancel"
                />
        </LinearLayout>

	</FrameLayout>
</LinearLayout>