<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:id="@+id/baseView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_main_back"
    android:orientation="vertical"
    >

    <com.chess.ui.views.NotationView
        android:id="@+id/notationsView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/notations_view_height"
        style="@style/NotationsStyle"
        />

    <com.chess.ui.views.PanelInfoGameView
        android:id="@+id/topPanelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:oneLine="@bool/one_line_for_board"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--Top Border-->
        <FrameLayout
            android:id="@+id/topBorder"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/game_board_divider"
            />

        <com.chess.ui.views.ChessBoardDailyView
            android:id="@+id/boardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBorder"
            android:layout_marginTop="-1px"
            />
        <!--Bottom Border-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boardview"
            android:background="@drawable/game_board_divider"
            android:layout_marginTop="-1px"
            />

        <ProgressBar
            android:id="@+id/loadingView"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyle"
            android:visibility="gone"
            />

    </RelativeLayout>

    <com.chess.ui.views.PanelInfoGameView
        android:id="@+id/bottomPanelView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:oneLine="@bool/one_line_for_board"
        />

    <com.chess.ui.views.ControlsNetworkView
        android:id="@+id/controlsNetworkView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>