<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <!--Header-->
    <com.chess.LinLayout
        android:id="@+id/challengeFriendHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        style="@style/ListItem.Header.Dark"
        android:paddingLeft="14dip"
        android:paddingRight="10dip"
        >
        <!--Icon-->
        <com.chess.RoboTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_play_friend"
            android:textColor="@color/new_light_grey_2"
            style="@style/GlyphIcon.Big"
            />

        <com.chess.RoboTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="8dip"
            android:text="@string/challenge_friend"
            android:textColor="@color/new_list_header_text"
            android:gravity="center_vertical"
            />

    </com.chess.LinLayout>

    <!--Recent opponents list-->
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>