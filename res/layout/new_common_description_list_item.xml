<?xml version="1.0" encoding="utf-8"?>

<!--Top Video frame-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:id="@+id/commonDescriptionListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="61dip"
    android:paddingTop="11dip"
    android:paddingBottom="8dip"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:background="@drawable/white_list_item_selector"
    >

    <ImageView
        android:id="@+id/thumbnailImg"
        android:layout_width="@dimen/common_list_thumb_size"
        android:layout_height="@dimen/common_list_thumb_size"
        android:background="@color/new_common_list_thumb_grey"
        android:contentDescription="@string/image"
        android:layout_marginRight="10dip"
        />

    <!--Title-->
    <com.chess.RoboTextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test title"
        android:layout_toRightOf="@id/thumbnailImg"
        android:layout_marginTop="-3dip"
        android:paddingBottom="2dip"
        android:textColor="@color/new_text_blue"
        android:textSize="15sp"
        custom:ttf="Bold"
        />

    <!--by-->
    <com.chess.RoboTextView
        android:id="@+id/byTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/by"
        android:layout_toRightOf="@id/thumbnailImg"
        android:layout_below="@id/titleTxt"
        android:textColor="@color/new_author_dark_grey"
        android:textSize="14sp"
        />

    <!--Author-->
    <com.chess.RoboTextView
        android:id="@+id/authorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/byTxt"
        android:layout_below="@id/titleTxt"
        android:text="Test author"
        android:layout_toRightOf="@id/byTxt"
        android:paddingLeft="3dip"
        android:textColor="@color/new_author_dark_grey"
        android:textSize="13sp"
        custom:ttf="Bold"
        />

    <!--Duration-->
    <com.chess.RoboTextView
        android:id="@+id/durationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/byTxt"
        android:layout_below="@id/titleTxt"
        android:text="| 27 min"
        android:layout_toRightOf="@id/authorTxt"
        android:paddingTop="2dip"
        android:paddingLeft="3dip"
        android:textColor="@color/stats_label_light_grey"
        android:textSize="12sp"
        />

    <!--Right Icon-->
    <com.chess.RoboTextView
        android:id="@+id/completedIconTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/ic_check"
        android:textColor="@color/new_light_grey_2"
        style="@style/GlyphIcon"
        />

</RelativeLayout>

