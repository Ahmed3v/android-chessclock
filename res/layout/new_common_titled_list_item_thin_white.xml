<?xml version="1.0" encoding="utf-8"?>

<com.chess.widgets.LinLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	style="@style/ListItem.Tablet"
	android:gravity="center_vertical"
	android:paddingLeft="@dimen/default_scr_side_padding"
	android:paddingRight="8dip">

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/headerTitleTxt"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:textColor="@color/semitransparent_white_75" />

	<!--Right Icon-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/headerIconTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/ic_up"
		android:textColor="@color/new_light_grey_2"
		style="@style/GlyphIcon.Small"
		android:visibility="gone" />

</com.chess.widgets.LinLayout>