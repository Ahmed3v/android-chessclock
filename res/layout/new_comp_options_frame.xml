<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true">

	<LinearLayout
		android:id="@+id/gameOptionsLiveLinLay"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:animateLayoutChanges="true">

		<!--Comp Game-->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem.Header.Dark"
			android:paddingLeft="13dip"
			android:paddingRight="8dip">

			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/ic_comp_game"
				android:textColor="@color/new_light_grey_2"
				style="@style/GlyphIcon.Big" />

			<com.chess.widgets.RoboTextView
				android:id="@+id/compHeaderTxt"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/vs_computer"
				style="@style/HeaderTitle.Light" />

		</com.chess.widgets.LinLayout>

		<!--White Player or Comp-->
		<com.chess.widgets.LinLayout
			android:id="@+id/whiteSideView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem"
			android:paddingLeft="@dimen/new_game_frame_padding_side"
			android:paddingRight="@dimen/new_game_frame_padding_side">

			<com.chess.widgets.RoboTextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/white"
				style="@style/SettingsListText" />

			<RadioGroup
				android:id="@+id/whiteRadioGroup"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingTop="6dip"
				android:paddingBottom="6dip">

				<!--Player-->
				<com.chess.widgets.RoboRadioButton
					android:id="@+id/whitePlayerBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/semitransparent_white_75"
					android:textSize="@dimen/glyph_icon_big"
					android:text="@string/ic_profile"
					android:layout_marginRight="5dip"
					android:minHeight="@dimen/big_button_height"
					style="@style/Button.White.30"
					custom:ttf="Icon"
					android:button="@null" />

				<!--Comp-->
				<com.chess.widgets.RoboRadioButton
					android:id="@+id/whiteCompBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/ic_comp_game"
					android:minHeight="@dimen/big_button_height"
					android:minWidth="@dimen/button_min_width"
					android:textColor="@color/semitransparent_white_75"
					android:textSize="@dimen/glyph_icon_big"
					android:gravity="center"
					custom:ttf="Icon"
					android:button="@null" />
				<!--style="@style/Button"-->

			</RadioGroup>

		</com.chess.widgets.LinLayout>

		<!--Black Player or Comp-->
		<com.chess.widgets.LinLayout
			android:id="@+id/blackSideView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			style="@style/ListItem"
			android:paddingLeft="@dimen/new_game_frame_padding_side"
			android:paddingRight="@dimen/new_game_frame_padding_side">

			<com.chess.widgets.RoboTextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:text="@string/black"
				style="@style/SettingsListText" />

			<RadioGroup
				android:id="@+id/blackRadioGroup"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:paddingTop="6dip"
				android:paddingBottom="6dip">

				<!--Player-->
				<com.chess.widgets.RoboRadioButton
					android:id="@+id/blackPlayerBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/semitransparent_white_65"
					android:textSize="@dimen/glyph_icon_big"
					android:text="@string/ic_profile"
					android:layout_marginRight="5dip"
					android:minWidth="@dimen/button_min_width"
					android:minHeight="@dimen/big_button_height"
					android:gravity="center"
					custom:ttf="Icon"
					android:button="@null" />

				<!--Comp-->
				<com.chess.widgets.RoboRadioButton
					android:id="@+id/blackCompBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/ic_comp_game"
					android:minHeight="@dimen/big_button_height"
					android:textColor="@color/semitransparent_white_65"
					android:textSize="@dimen/glyph_icon_big"
					style="@style/Button.Black.65"
					custom:ttf="Icon"
					android:button="@null" />

			</RadioGroup>

		</com.chess.widgets.LinLayout>

		<!--Comp Level View-->
		<com.chess.widgets.LinLayout
			android:id="@+id/compLevelView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			style="@style/ListItem"
			android:paddingLeft="@dimen/new_game_frame_padding_side"
			android:paddingRight="@dimen/new_game_frame_padding_side"
			android:paddingTop="12dip"
			android:paddingBottom="7dip"
			android:animateLayoutChanges="true">

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">

				<com.chess.widgets.RoboTextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text="@string/difficulty"
					style="@style/SettingsListText" />

				<com.chess.widgets.RoboButton
					android:id="@+id/compLevelValueBtn"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					style="@style/Button.Glassy.Small"
					android:textSize="15sp"

					/>
			</RelativeLayout>

			<SeekBar
				android:id="@+id/strengthBar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="@dimen/seek_bar_side_padding"
				android:paddingRight="@dimen/seek_bar_side_padding"
				android:max="9"
				android:progress="2"
				android:layout_marginTop="5dip"
				style="@style/RatingSeekBar" />

		</com.chess.widgets.LinLayout>

		<!--Auto-flip-->
		<com.chess.widgets.LinLayout
			android:id="@+id/autoFlipView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/LinearListItem"
			android:paddingRight="10dip"
			android:background="@drawable/transparent_list_item_selector"
			android:visibility="gone">

			<!--Label-->
			<com.chess.widgets.RoboTextView
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:text="@string/auto_flip"
				android:layout_weight="1"
				style="@style/SettingsListText" />

			<com.chess.widgets.SwitchButton
				android:id="@+id/autoFlipSwitch"
				style="@style/Switch.Default" />
		</com.chess.widgets.LinLayout>

		<!--Play Button-->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/new_game_frame_padding_side"
			style="@style/ListItem"
			android:paddingTop="9dip"
			android:paddingBottom="9dip"
			android:paddingLeft="15dip"
			android:paddingRight="15dip">

			<com.chess.widgets.RoboButton
				android:id="@+id/playBtn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/play"
				style="@style/Button.OrangeNoBorder" />

		</com.chess.widgets.LinLayout>
	</LinearLayout>
</ScrollView>

