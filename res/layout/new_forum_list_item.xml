<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/list_item_height"
    >

    <!--Title-->
    <com.chess.RoboTextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/new_text_blue"
        custom:ttf="Bold"
        />

    <!--Last comment ago-->
    <com.chess.RoboTextView
        android:id="@+id/lastCommentAgoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/byTxt"
        android:layout_below="@id/titleTxt"
        android:text="13 min ago *"
        android:paddingTop="2dip"
        android:paddingLeft="3dip"
        android:textColor="@color/stats_label_light_grey"
        android:textSize="12sp"
        custom:ttf="Italic"
        />

    <!--Last comment ago-->
    <com.chess.RoboTextView
        android:id="@+id/postsCountTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/byTxt"
        android:layout_below="@id/titleTxt"
        android:text="14 Posts"
        android:layout_toRightOf="@id/lastCommentAgoTxt"
        android:paddingTop="2dip"
        android:paddingLeft="3dip"
        android:textColor="@color/new_subtitle_dark_grey"
        android:textSize="12sp"
        />

</RelativeLayout>