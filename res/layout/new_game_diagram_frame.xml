<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/boardFrame"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:animateLayoutChanges="true"
	>

	<com.chess.RoboTextView
		android:id="@+id/moveResultTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/correct_move_puzzle_height"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:textSize="19sp"
		android:textColor="@color/white"
		custom:ttf="Bold"
		/>

	<RelativeLayout
		android:id="@+id/boardContainerView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/moveResultTxt"
		>
		<!--Top Border-->
		<FrameLayout
			android:id="@+id/topBorder"
			android:layout_width="match_parent"
			android:layout_height="3px"
			android:background="@drawable/game_board_divider"
			/>

		<com.chess.ui.views.chess_boards.ChessBoardDiagramView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/topBorder"
			android:layout_marginTop="-1px"
			/>
		<!--Bottom Border-->
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/boardview"
			android:background="@drawable/game_board_divider"
			android:layout_marginTop="-1px"
			/>

	</RelativeLayout>

	<com.chess.ui.views.NotationView
		android:id="@+id/notationsView"
		android:layout_width="match_parent"
		android:layout_height="@dimen/notations_view_height"
		android:layout_below="@id/boardContainerView"
		style="@style/NotationsDiagramStyle"
		android:visibility="gone"
		/>

	<com.chess.RoboTextView
		android:id="@+id/notationCommentTxt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/notations_view_height"
		android:maxLines="2"
		android:ellipsize="end"
		android:layout_below="@id/notationsView"
		android:gravity="center"
		style="@style/ListItem.Header.Notations"
		android:visibility="gone"
		android:padding="2dip"
		android:textColor="@color/controls_icon"
		/>

	<com.chess.ui.views.game_controls.ControlsDiagramView
		android:id="@+id/controlsDiagramView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		/>

</RelativeLayout>