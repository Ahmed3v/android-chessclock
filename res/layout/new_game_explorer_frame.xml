<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.chess.RoboTextView
		android:id="@+id/moveVariationTxt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		style="@style/ListItem.Header.Dark"
		android:gravity="center"
		android:minHeight="42dip"
		android:textColor="@color/semitransparent_white_65"
		android:textSize="15sp"
		/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		>
		<!--Top Border-->
		<FrameLayout
			android:id="@+id/topBorder"
			android:layout_width="match_parent"
			android:layout_height="3px"
			android:background="@drawable/game_board_divider" />

		<com.chess.ui.views.chess_boards.ChessBoardExplorerView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/topBorder"
			android:layout_marginTop="-1px" />

		<!--Bottom Border-->
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/boardview"
			android:background="@drawable/game_board_divider"
			android:layout_marginTop="-1px" />

	</RelativeLayout>

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>

</LinearLayout>