<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/dailyGameOptionView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <!--Daily Chess-->
        <com.chess.LinLayout
            android:id="@+id/dailyHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/ListItem.Header.Dark"
            android:paddingLeft="13dip"
            android:paddingRight="8dip"
            >

            <!--Icon-->
            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_daily_game"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon"
                />

            <com.chess.RoboTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/daily_chess"
                android:textColor="@color/new_list_header_text"
                android:gravity="center_vertical"
                />

            <!--Right Icon-->
            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_left"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Small"
                />

        </com.chess.LinLayout>

        <!--Opponent-->
        <com.chess.RoboSpinner
            android:id="@+id/opponentSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/default_list_item_height"
            style="@style/ListItem"
            />

