        <!--Days Per Move - Mode-->
        <com.chess.LinLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/ListItem"
            android:orientation="vertical"
            android:paddingLeft="@dimen/new_game_frame_padding_side"
            android:paddingRight="@dimen/new_game_frame_padding_side"
            android:paddingTop="13dip"
            >

            <com.chess.RoboTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/days_per_move_"
                android:textColor="@color/semitransparent_white_65"
                />

            <GridView
                android:id="@+id/dailyGamesModeGrid"
                android:layout_width="match_parent"
                android:layout_height="90dip"
                android:columnWidth="@dimen/new_daily_grid_button_width"
                android:gravity="center"
                android:verticalSpacing="1dp"
                android:horizontalSpacing="1dip"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:visibility="visible"
                android:background="@android:color/transparent"
                android:paddingTop="6dip"
                android:paddingLeft="0dip"
                android:paddingRight="0dip"
                android:paddingBottom="13dip"
                android:listSelector="@android:color/transparent"
                />

        </com.chess.LinLayout>

        <!--I Play As-->
        <com.chess.LinLayout
            android:id="@+id/iPlayLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/ListItem"
            android:paddingLeft="@dimen/new_game_frame_padding_side"
            android:paddingRight="@dimen/new_game_frame_padding_side"
            >

            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/i_play_as_"
                android:textColor="@color/semitransparent_white_65"
                />

            <com.chess.RoboButton
                android:id="@+id/myColorBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/random"
                style="@style/Button.Glassy.Small"
                />
        </com.chess.LinLayout>

        <!--Rated Game-->
        <com.chess.LinLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center_vertical"
            style="@style/ListItem"
            android:paddingLeft="@dimen/new_game_frame_padding_side"
            android:paddingRight="@dimen/new_game_frame_padding_side"
            >

            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/rated_game_"
                android:textColor="@color/semitransparent_white_65"
                />

            <com.chess.SwitchButton
                android:id="@+id/ratedGameSwitch"
                style="@style/Switch.Dark"
                />

        </com.chess.LinLayout>

        <!--Type-->
        <com.chess.LinLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/ListItem"
            android:paddingLeft="@dimen/new_game_frame_padding_side"
            android:paddingRight="@dimen/new_game_frame_padding_side"
            >

            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/type_"
                android:textColor="@color/semitransparent_white_65"
                />

            <com.chess.RoboButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/normal"
                style="@style/Button.Glassy.Small"
                />
        </com.chess.LinLayout>

        <!--Rating View-->
        <com.chess.RelLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/ListItem"
            android:paddingLeft="@dimen/new_game_frame_padding_side"
            android:paddingRight="@dimen/new_game_frame_padding_side"
            android:paddingTop="12dip"
            android:paddingBottom="7dip"
            >

            <com.chess.RoboTextView
                android:id="@+id/minRatingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/min_rating"
                android:paddingLeft="18dip"
                android:textColor="@color/semitransparent_white_65"
                />

            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/max_rating"
                android:layout_alignParentRight="true"
                android:paddingRight="19dip"
                android:textColor="@color/semitransparent_white_65"
                />

            <RelativeLayout
                android:id="@+id/ratingButtonsLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/minRatingTxt"
                android:gravity="center_vertical"
                android:paddingTop="8dip"
                android:paddingLeft="17dip"
                android:paddingRight="17dip"

                >

                <com.chess.RoboRadioButton
                    android:id="@+id/minRatingBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Button.Glassy.Small"
                    android:button="@null"
                    android:inputType="numberDecimal"
                    />

                <com.chess.RoboTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    android:paddingTop="9dip"
                    android:layout_centerInParent="true"
                    android:textColor="@color/semitransparent_white_65"
                    />

                <com.chess.RoboRadioButton
                    android:id="@+id/maxRatingBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    style="@style/Button.Glassy.Small"
                    android:button="@null"
                    android:inputType="numberDecimal"
                    />
            </RelativeLayout>

            <SeekBar
                android:id="@+id/ratingBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ratingButtonsLay"
                android:max="100"
                android:progress="50"
                android:layout_marginTop="11dip"
                style="@style/RatingSeekBar"
                />
        </com.chess.RelLayout>

        <!--Play Button-->
        <com.chess.LinLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/new_game_frame_padding_side"
            style="@style/ListItem"
            android:paddingTop="9dip"
            android:paddingBottom="9dip"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            >

            <com.chess.RoboButton
                android:id="@+id/playBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/play"
                style="@style/Button.OrangeNoBorder"
                />
        </com.chess.LinLayout>

    </LinearLayout>
</ScrollView>