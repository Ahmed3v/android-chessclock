<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dip"
        >
        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_live_game"
            android:contentDescription="@string/image"
            />
        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_live_blitz"
            android:contentDescription="@string/image"
            />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_live_bullet"
            android:contentDescription="@string/image"
            />
    </LinearLayout>

    <GridView
        android:id="@+id/liveModeGrid"
        android:layout_width="match_parent"
        android:layout_height="134dip"
        android:columnWidth="90dp"
        android:gravity="center"
        android:verticalSpacing="1dip"
        android:horizontalSpacing="1dip"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:visibility="visible"
        android:background="@android:color/transparent"
        android:paddingTop="6dip"
        android:paddingLeft="@dimen/new_game_frame_padding_side"
        android:paddingRight="@dimen/new_game_frame_padding_side"
        android:paddingBottom="6dip"
        android:listSelector="@android:color/transparent"
        />

</LinearLayout>