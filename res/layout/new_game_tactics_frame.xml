<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:animateLayoutChanges="true"
    >

	<com.chess.RoboTextView
		android:id="@+id/moveResultTxt"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_above="@+id/boardLayout"
		android:gravity="center"
		android:textSize="23sp"
		android:textColor="@color/white"
		custom:ttf="Bold"
		android:visibility="gone"
		/>

    <RelativeLayout
        android:id="@id/boardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/topPanelView"
        >

        <!--Top Border-->
        <FrameLayout
            android:id="@+id/topBorder"
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:background="@drawable/game_board_divider"
            />

        <com.chess.ui.views.chess_boards.ChessBoardTacticsView
            android:id="@+id/boardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBorder"
            android:layout_marginTop="-1px"
            />

        <!--Bottom Border-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/boardview"
            android:background="@drawable/game_board_divider"
            android:layout_marginTop="-1px"
            />

		<!--Ready overlay-->
		<RelativeLayout
			android:id="@+id/readyOverlay"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="160dip"
			android:background="@drawable/popup_white_back"
			android:paddingTop="@dimen/invite_overlay_padding_top"
			android:paddingBottom="@dimen/invite_overlay_padding_bottom"
			android:visibility="gone"
			>

			<!--Ready Title-->
			<com.chess.RoboTextView
				android:id="@+id/readyTitleTxt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:maxWidth="@dimen/popup_dialog_text_max_width"
				android:layout_centerInParent="true"
				android:gravity="center"
				android:textSize="26sp"
				android:textColor="@color/new_subtitle_dark_grey"
				android:text="@string/ready_"
				custom:ttf="Bold"
				/>
			<!--android:paddingBottom="@dimen/invite_overlay_padding_title_bottom"-->



		</RelativeLayout>

    </RelativeLayout>

    <com.chess.ui.views.PanelInfoTacticsView
        android:id="@id/topPanelView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/new_tactics_panel_info_height"
        android:layout_above="@+id/controlsTacticsView"
        />

    <com.chess.ui.views.game_controls.ControlsTacticsView
        android:id="@+id/controlsTacticsView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>