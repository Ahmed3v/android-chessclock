<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/dailyGamesBaseView"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/semitransparent_white_90">

	<com.chess.widgets.RoboTextView
		android:id="@+id/emptyView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:text="@string/no_network"
		android:gravity="center"
		android:layout_gravity="center"
		android:textSize="20sp"
		android:textColor="@color/grey_button_1"
		android:paddingLeft="10dip"
		custom:ttf="Bold"
		style="@style/DarkShadowBottom"
		android:visibility="gone"
		android:layout_centerInParent="true" />

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/startNewGameBtn"
		android:background="@color/transparent"
		android:dividerHeight="0px"
		android:divider="@null" />

	<!--Start New Game-->
	<com.chess.widgets.RoboButton
		android:id="@id/startNewGameBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/bannerUpgradeView"
		android:minHeight="@dimen/big_button_height"
		android:text="@string/new_game"
		android:textSize="@dimen/game_controls_text_size"
		android:textColor="@color/white"
		style="@style/Rect.Bottom.Right.Orange"
		android:shadowColor="@color/transparent"
		android:visibility="gone" />

	<!--Ads-->
	<include
		android:id="@id/bannerUpgradeView"
		layout="@layout/mopub_ad_view"
		android:layout_gravity="center_horizontal"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		/>

</RelativeLayout>