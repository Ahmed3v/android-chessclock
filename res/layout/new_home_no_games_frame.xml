<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.chess.widgets.RelLayout
		android:id="@+id/boardLinLay"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:layout_marginTop="@dimen/notations_view_height"
		>

<!--
	android:layout_marginTop="@dimen/tablet_board_margin_bottom"
	android:layout_marginLeft="@dimen/tablet_board_margin_left"
	android:layout_marginRight="@dimen/tablet_board_margin"
	android:layout_marginBottom="@dimen/tablet_board_margin_bottom"

	-->

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			<!--Top Border-->
			<FrameLayout
				android:id="@+id/topBorder"
				android:layout_width="match_parent"
				android:layout_height="3px"
				android:background="@drawable/game_board_divider"
				/>

			<com.chess.ui.views.chess_boards.ChessBoardLiveView
				android:id="@+id/boardview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/topBorder"
				android:layout_marginTop="-1px"
				/>

			<!--Bottom Border-->
			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/boardview"
				android:background="@drawable/game_board_divider"
				android:layout_marginTop="-1px"
				/>

		</RelativeLayout>

		<!--New Game overlay-->
		<LinearLayout
			android:id="@+id/startOverlayView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="160dip"
			android:background="@drawable/rounded_border_white_back"
			android:padding="@dimen/start_new_game_overlay_padding_top"
			android:paddingLeft="@dimen/start_new_game_overlay_padding_side"
			android:paddingRight="@dimen/start_new_game_overlay_padding_side"
			android:paddingBottom="@dimen/start_new_game_overlay_padding_side"
			android:orientation="vertical"
			android:layout_centerInParent="true"
			>

			<!--New Game-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/startTitleTxt"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="top|center_horizontal"
				android:textSize="@dimen/popup_title_text_size_big"
				android:textColor="@color/new_subtitle_dark_grey"
				android:text="@string/new_game"
				custom:ttf="Bold" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="bottom">

				<!--10|5-->
				<com.chess.widgets.RoboButton
					android:id="@+id/timeSelectBtn"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:minHeight="@dimen/big_orange_button_height"
					android:layout_marginRight="5dip"
					style="@style/Button.Glassy.Small"
					android:textSize="@dimen/big_button_text_size"
					android:textColor="@color/text_controls_icons_white" />

				<!--Play-->
				<com.chess.widgets.RoboButton
					android:id="@+id/gamePlayBtn"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:text="@string/play"
					style="@style/Button.OrangeNoBorder.Big"
					android:layout_marginLeft="5dip"
					/>

			</LinearLayout>

		</LinearLayout>

	</com.chess.widgets.RelLayout>

	<!--Shadow-->
	<ImageView
		android:layout_width="10dp"
		android:layout_height="match_parent"
		android:src="@drawable/defaultshadow"
		android:contentDescription="@string/image"
		android:layout_toLeftOf="@+id/optionsFragmentContainerView"
		android:visibility="gone"/>


	<!--Right quick access side panel-->
	<FrameLayout
		android:id="@id/optionsFragmentContainerView"
		android:layout_width="@dimen/tablet_side_menu_width"
		android:layout_height="match_parent"
		android:layout_alignParentRight="true"
		android:visibility="gone">

		<FrameLayout
			android:id="@+id/optionsFragmentContainer"
			android:layout_width="match_parent"
			android:layout_height="match_parent" />

		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/sliding_menu_overlay" />

	</FrameLayout>

</RelativeLayout>