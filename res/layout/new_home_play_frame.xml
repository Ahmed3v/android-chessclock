<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homePlayScrollView"
    >

    <LinearLayout
        android:id="@+id/homePlayLinLay"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        >
        <!--Live Chess-->
        <com.chess.LinLayout
            android:id="@+id/liveHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/ListItem.Header_2.Light"
            android:paddingLeft="13dip"
            android:paddingRight="8dip"
            >
            <!--Icon-->
            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_live_standard"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Big"
                />

            <com.chess.RoboTextView
                android:id="@+id/liveChessHeaderTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/live_chess"
                style="@style/HeaderTitle.Light"
                />

            <com.chess.RoboTextView
                android:id="@+id/liveRatingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/new_light_grey_2"
                custom:ttf="Bold"
                />

            <!--Right Icon-->
            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_right"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Small"
                />

        </com.chess.LinLayout>

        <com.chess.RelLayout
            android:id="@+id/liveOptionsView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dip"
            android:paddingBottom="8dip"
            android:paddingLeft="@dimen/default_scr_side_padding"
            android:paddingRight="@dimen/default_scr_side_padding"
            android:animateLayoutChanges="true"
            >

            <!--Time selection | Default time-->
            <com.chess.RoboButton
                android:id="@+id/liveTimeSelectBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Button.Glassy.Small"
                />

            <com.chess.RoboButton
                android:id="@+id/livePlayBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_play_ex"
                android:layout_alignParentRight="true"
                style="@style/Button.OrangeNoBorder.Small"
                />

            <!--Live Options-->
            <RelativeLayout
                android:id="@+id/liveHomeOptionsFrame"
                android:layout_below="@id/liveTimeSelectBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.chess.RelLayout>

        <!--Daily Chess-->
        <com.chess.LinLayout
            android:id="@+id/dailyHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/ListItem.Header_2.Light"
            android:paddingLeft="13dip"
            android:paddingRight="8dip"
            >

            <!--Icon-->
            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_daily_game"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Big"
                />

            <com.chess.RoboTextView
                android:id="@+id/dailyChessHeaderTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/daily_chess"
                style="@style/HeaderTitle.Light"
                />

            <com.chess.RoboTextView
                android:id="@+id/dailyRatingTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/new_light_grey_2"
                custom:ttf="Bold"
                />

            <!--Right Icon-->
            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_right"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Small"
                />

        </com.chess.LinLayout>

        <!--vs Random Opponent-->
        <com.chess.LinLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_scr_side_padding"
            android:paddingRight="@dimen/default_scr_side_padding"
            style="@style/ListItem"
            android:gravity="center_vertical"
            >

            <!--Icon-->
            <com.chess.RoboTextView
                android:layout_width="@dimen/list_item_image_size"
                android:layout_height="@dimen/list_item_image_size"
                android:text="@string/ic_vs_random"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Square"
                android:background="@color/new_soft_grey2"
                android:padding="0dip"
                />

            <com.chess.RoboTextView
                android:id="@+id/vsRandomTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:text="@string/vs_random_opponent"
                android:paddingLeft="12dip"
                android:textColor="@color/semitransparent_white_65"
                />

            <com.chess.RoboButton
                android:id="@+id/dailyPlayBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_play_ex"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                style="@style/Button.OrangeNoBorder.Small"
                />

        </com.chess.LinLayout>

        <!-- Friend view 1-->
        <com.chess.LinLayout
            android:id="@+id/inviteFriendView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_scr_side_padding"
            android:paddingRight="@dimen/default_scr_side_padding"
            style="@style/ListItem"
            android:gravity="center_vertical"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/list_item_image_size"
                android:layout_height="@dimen/list_item_image_size"
                android:src="@drawable/img_profile_picture_stub"
                android:layout_marginRight="12dip"
                android:contentDescription="@string/image"
                />

            <com.chess.RoboTextView
                android:id="@+id/friendUserName1Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/semitransparent_white_65"
                />

            <com.chess.RoboTextView
                android:id="@+id/friendRealName1Txt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="4dip"
                android:textColor="@color/semitransparent_white_65"
                />

        </com.chess.LinLayout>

        <!-- Friend view 2-->
        <com.chess.LinLayout
            android:id="@+id/inviteFriendView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_scr_side_padding"
            android:paddingRight="@dimen/default_scr_side_padding"
            style="@style/ListItem"
            android:gravity="center_vertical"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="@dimen/list_item_image_size"
                android:layout_height="@dimen/list_item_image_size"
                android:src="@drawable/img_profile_picture_stub"
                android:layout_marginRight="12dip"
                android:contentDescription="@string/image"
                />

            <com.chess.RoboTextView
                android:id="@+id/friendUserName2Txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/semitransparent_white_65"
                />

            <com.chess.RoboTextView
                android:id="@+id/friendRealName2Txt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="4dip"
                android:textColor="@color/semitransparent_white_65"
                />

        </com.chess.LinLayout>

        <!--Play Friend!-->
        <com.chess.LinLayout
            android:id="@+id/playFriendView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/default_scr_side_padding"
            android:paddingRight="8dip"
            style="@style/ListItem"
            android:gravity="center_vertical"
            >

            <!--Icon-->
            <com.chess.RoboTextView
                android:layout_width="@dimen/list_item_image_size"
                android:layout_height="@dimen/list_item_image_size"
                android:text="@string/ic_play_friend"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Square"
                android:background="@color/new_soft_grey2"
                android:padding="0dip"
                />

            <com.chess.RoboTextView
                android:id="@+id/challengeFriendTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/challenge_friend"
                android:textColor="@color/semitransparent_white_65"
                android:paddingLeft="12dip"
                />

        </com.chess.LinLayout>

        <!--vs Computer-->
        <com.chess.LinLayout
            android:id="@+id/vsCompHeaderView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            style="@style/ListItem.Header"
            android:paddingLeft="13dip"
            android:paddingRight="8dip"
            >

            <!--Icon-->
            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_comp_game"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Big"
                />

            <com.chess.RoboTextView
                android:id="@+id/vsComputerHeaderTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/vs_computer"
                style="@style/HeaderTitle.Light"
                />

            <!--Right Icon-->
            <com.chess.RoboTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_right"
                android:textColor="@color/new_light_grey_2"
                style="@style/GlyphIcon.Small"
                />

        </com.chess.LinLayout>

    </LinearLayout>
</ScrollView>