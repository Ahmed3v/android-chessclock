<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/signin_scr_top_padding"
    android:paddingBottom="@dimen/signin_scr_bottom_padding"
    android:paddingLeft="@dimen/signin_scr_side_padding"
    android:paddingRight="@dimen/signin_scr_side_padding"
    android:background="@color/main_menu_back_top"
    >
    <!--android:gravity="center"-->

    <!--TODO invent image with shadowed board-->
    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/signin_logo_margin_top"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/img_new_logo"
        android:contentDescription="@string/image"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/new_invite_main_margin_top"
        android:orientation="vertical">

        <com.chess.RoboTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="or, Sign Up without using Facebook:"
            android:textColor="@color/grey_button_1"
            android:textSize="14sp"
            android:gravity="center"
            android:padding="6dip"
            />

        <com.chess.FacebookButton
            android:id="@+id/inviteFacebookBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_invite_facebook"
            style="@style/FacebookButton"
            />


        <com.chess.LeftImageButton
            android:id="@+id/inviteContactBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_invite_contact"
            style="@style/GreyImageButton"
            custom:leftImage="@drawable/ic_invite_contact"
            />

        <com.chess.LeftImageButton
            android:id="@+id/inviteEmailBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_invite_contact"
            style="@style/GreyImageButton"
            custom:leftImage="@drawable/ic_invite_by_email"
            />

        <com.chess.RoboButton
            android:id="@+id/createProfileBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_start_playing"
            custom:ttf="Bold"
            />

        <com.chess.RoboTextView
            android:id="@+id/skipBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_skip_this_step"
            android:gravity="center"
            android:drawableRight="@drawable/ic_action_send"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</RelativeLayout>

