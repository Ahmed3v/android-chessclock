<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/white"
	android:orientation="vertical"
	>

	<com.chess.widgets.RoboTextView
		android:id="@+id/emptyView"
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:text="@string/error"
		android:gravity="center"
		android:layout_gravity="center"
		android:textSize="20sp"
		android:textColor="@color/grey_button_1"
		android:paddingLeft="10dip"
		custom:ttf="Bold"
		style="@style/DarkShadowBottom"
		android:visibility="gone"
		/>


	<RelativeLayout
		android:id="@+id/loadingView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:minHeight="60dip"
		android:visibility="gone"
		>

		<ProgressBar
			android:layout_width="@dimen/pending_progress_bar_size"
			android:layout_height="@dimen/pending_progress_bar_size"
			android:layout_margin="5dip"
			android:layout_centerInParent="true"
			style="?android:attr/progressBarStyle"
			/>

	</RelativeLayout>

	<ListView
		android:id="@+id/listView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/upgradeLessonsBtn"
		android:background="@color/white"
		android:cacheColorHint="@color/white"
		android:divider="@color/new_friends_list_divider"
		android:dividerHeight="1dip"
		/>

	<com.chess.widgets.RoboButton
		android:id="@id/upgradeLessonsBtn"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:minHeight="@dimen/big_button_height"
		android:text="@string/upgrade"
		android:textSize="@dimen/game_controls_text_size"
		android:textColor="@color/white"
		style="@style/Rect.Bottom.Right.Blue"
		android:visibility="gone"
		android:shadowColor="@color/transparent"
		/>

</RelativeLayout>