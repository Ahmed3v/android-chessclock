<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<include layout="@layout/new_lessons_upgrade_view" />

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/courseTitleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textSize="21sp"
		android:textColor="@color/new_subtitle_dark_grey"
		android:paddingTop="9dip"
		android:paddingLeft="15dip"
		android:paddingRight="15dip"
		android:paddingBottom="8dip"
		custom:ttf="Bold" />

	<!--Description-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/courseDescriptionTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/new_subtitle_dark_grey"
		android:paddingLeft="15dip"
		android:paddingRight="15dip"
		android:paddingBottom="15dip" />

</LinearLayout>