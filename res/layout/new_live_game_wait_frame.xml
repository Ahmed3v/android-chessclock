<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center_horizontal">

	<!--Stub view to make the same height-->
	<FrameLayout
		android:id="@+id/stubView"
		android:layout_width="match_parent"
		android:layout_height="@dimen/notations_view_height" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/centerTxt"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:gravity="center"
		android:text="@string/waiting_for_opponent"
		android:textSize="19sp"
		android:padding="5dip"
		android:textColor="@color/white"
		custom:ttf="Bold" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!--Top Border-->
		<FrameLayout
			android:id="@+id/topBorder"
			android:layout_width="match_parent"
			android:layout_height="3px"
			android:background="@drawable/game_board_divider" />

		<com.chess.ui.views.chess_boards.ChessBoardLiveView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/topBorder"
			android:layout_marginTop="-1px" />

		<!--Bottom Border-->
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/boardview"
			android:background="@drawable/game_board_divider"
			android:layout_marginTop="-1px" />

		<ProgressBar
			android:id="@+id/loadingView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			style="?android:attr/progressBarStyle"
			android:visibility="gone" />

	</RelativeLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1">

		<com.chess.widgets.RoboButton
			android:id="@+id/cancelLiveBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/cancel"
			style="@style/Button.Glassy"
			android:layout_marginLeft="15dip"
			android:layout_marginRight="15dip"
			android:layout_marginBottom="15dip"
			android:layout_centerInParent="true" />

	</RelativeLayout>

	<FrameLayout
		android:id="@+id/stubControls"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:minHeight="@dimen/game_controls_button_height" />

</LinearLayout>

