<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/mainLinView"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        >

        <com.chess.ui.views.NewGameDailyView
            android:id="@+id/dailyGamesSetupView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.chess.ui.views.NewGameLiveView
            android:id="@+id/liveGamesSetupView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <com.chess.ui.views.NewGameCompView
            android:id="@+id/compGamesSetupView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</ScrollView>
