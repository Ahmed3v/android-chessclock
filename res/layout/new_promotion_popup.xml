<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:background="@drawable/rounded_white_back"
	android:padding="2dp"
	>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<com.chess.widgets.RoboImageButton
			android:id="@+id/queenBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@null"
			android:background="@drawable/transparent_list_item_selector"
			/>

		<com.chess.widgets.RoboImageButton
			android:id="@+id/rookBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@null"
			android:background="@drawable/transparent_list_item_selector"
			/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">

		<com.chess.widgets.RoboImageButton
			android:id="@+id/bishopBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@null"
			android:background="@drawable/transparent_list_item_selector"
			/>

		<com.chess.widgets.RoboImageButton
			android:id="@+id/knightBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:button="@null"
			android:background="@drawable/transparent_list_item_selector"
			/>

	</LinearLayout>

</LinearLayout>