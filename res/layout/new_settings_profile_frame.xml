<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        >
        <requestFocus />

        <!--First Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LinearListItem"
            >

            <!--Label-->
            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/first_name"
                style="@style/SettingsListText"
                />

            <!--First Name Edit-->
            <com.chess.RoboEditText
                android:id="@+id/firstNameValueEdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/first_name"
                android:textColor="@color/new_subtitle_dark_grey"
                android:textSize="14sp"
                android:padding="0dip"
                android:singleLine="true"
                android:imeOptions="actionDone"
                />

            <!--Clear Btn-->
            <com.chess.RoboTextView
                android:id="@+id/firstNameClearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glyph_clear"
                android:textColor="@color/hint_text"
                style="@style/GlyphIcon"
                android:paddingLeft="11dip"
                />

        </LinearLayout>

        <!--Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/new_friends_list_divider"
            />

        <!--Last Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LinearListItem"
            >

            <!--Label-->
            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/last_name"
                style="@style/SettingsListText"
                />

            <!--Last Name Edit-->
            <com.chess.RoboEditText
                android:id="@+id/lastNameValueEdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/last_name"
                android:textColor="@color/new_subtitle_dark_grey"
                android:textSize="14sp"
                android:padding="0dip"
                android:singleLine="true"
                android:imeOptions="actionDone"
                />

            <!--Clear Btn-->
            <com.chess.RoboTextView
                android:id="@+id/lastNameClearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glyph_clear"
                android:textColor="@color/hint_text"
                style="@style/GlyphIcon"
                android:paddingLeft="11dip"
                />

        </LinearLayout>

        <!--Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/new_friends_list_divider"
            />

        <!--Location-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LinearListItem"
            >

            <!--Label-->
            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/location"
                style="@style/SettingsListText"
                />

            <!--Location Edit-->
            <com.chess.RoboEditText
                android:id="@+id/locationValueEdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/location"
                android:textColor="@color/new_subtitle_dark_grey"
                android:textSize="14sp"
                android:padding="0dip"
                android:singleLine="true"
                android:imeOptions="actionDone"
                />

            <!--Clear Btn-->
            <com.chess.RoboTextView
                android:id="@+id/locationClearBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glyph_clear"
                android:textColor="@color/hint_text"
                style="@style/GlyphIcon"
                android:paddingLeft="11dip"
                />

        </LinearLayout>

        <!--Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/new_friends_list_divider"
            />

        <!--Country-->
        <LinearLayout
            android:id="@+id/countryLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LinearListItem"
            android:background="@drawable/white_list_item_selector"
            >

            <!--Label-->
            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/country"
                style="@style/SettingsListText"
                />

            <!--Country-->
            <com.chess.RoboTextView
                android:id="@+id/countryValueTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Country"
                android:textColor="@color/new_subtitle_dark_grey"
                android:paddingRight="11dip"
                />

            <!--Country Flag-->
            <ImageView
                android:id="@+id/flagImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:contentDescription="@string/image"
                android:src="@drawable/ic_country"
                />

            <!--Right Icon-->
            <com.chess.RoboTextView
                android:id="@+id/countryArrowIconTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/glyph_arrow_right"
                android:textColor="@color/hint_text"
                style="@style/GlyphIcon.Small"
                />

        </LinearLayout>

        <!--Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/new_friends_list_divider"
            />

        <!--Profile Picture-->
        <LinearLayout
            android:id="@+id/userPhotoLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LinearListItem"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="10dip"
            android:paddingBottom="10dip"
            android:background="@drawable/white_list_item_selector"
            >

            <!--Label-->
            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_picture"
                style="@style/SettingsListText"
                />

            <!--Profile image-->
            <FrameLayout
                android:id="@+id/userPhotoImg"
                android:layout_width="@dimen/img_profile_size_big"
                android:layout_height="@dimen/img_profile_size_big"
                />

        </LinearLayout>

        <!--Blue Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/light_blue_1"
            />

        <!--Membership renew-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LinearListItem"
            android:background="@color/upgrade_diamond_button"
            android:padding="15dip"
            >

            <!--Label-->
            <com.chess.RoboTextView
                android:id="@+id/cancelMembershipTxt"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_membership_renew_cancel"
                style="@style/SettingsListText"
                android:paddingRight="30dip"
                />

            <!--Upgrade Button-->
            <com.chess.RoboButton
                android:id="@+id/upgradeBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Button.Upgrade"
                android:text="@string/upgrade"
                />

        </LinearLayout>

        <!--Blue Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/light_blue_1"
            />

        <!--Invite Friends-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LinearListItem"
            android:padding="15dip"
            >

            <!--Label-->
            <com.chess.RoboTextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/invite_friends_profile_message"
                android:paddingRight="30dip"
                style="@style/SettingsListText"
                />

            <!--Share Button-->
            <com.chess.RoboButton
                android:id="@+id/shareBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Button.Share"
                android:text="@string/share"
                />

        </LinearLayout>

        <!--Divider-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/new_friends_list_divider"
            />

        <!--Terms-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/LinearListItem"
            >
            <!--Label-->
            <com.chess.RoboTextView
                android:id="@+id/termsLinkTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:gravity="center"
                android:layout_centerInParent="true"
                style="@style/SettingsListText"
                />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>