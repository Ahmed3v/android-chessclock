<?xml version="1.0" encoding="utf-8"?>
<com.chess.RelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:layout_width="match_parent"
    android:layout_height="@dimen/theme_back_preview_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <com.chess.backend.image_load.ProgressImageView
        android:id="@+id/backImg"
		android:layout_width="360dip"
		android:layout_height="@dimen/theme_back_preview_height"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:contentDescription="@string/image"
        />

    <com.chess.LinLayout
        style="@style/ListItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.chess.RoboTextView
        android:id="@+id/rowTitleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        custom:ttf="Bold"
        android:textSize="27sp"
        android:textColor="@color/white"
        android:text="Game Room"
        android:paddingTop="14dip"
        android:paddingLeft="@dimen/default_scr_side_padding"
        />

    <!--Icon-->
    <com.chess.RoboTextView
        android:id="@+id/iconTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rowTitleTxt"
        android:textColor="@color/white"
        android:text="@string/ic_check"
        style="@style/GlyphIcon"
        android:layout_marginTop="14dip"
        android:paddingTop="14dip"
        android:textSize="26dip"
        android:layout_marginLeft="10dip"
        />
    <!--android:layout_alignBottom="@id/rowTitleTxt"-->

	<com.chess.backend.image_load.ProgressImageView
		android:id="@+id/boardPreviewImg"
        android:layout_width="90dip"
        android:layout_height="90dip"
        android:src="@drawable/img_board_theme_sample"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/image"
        android:layout_margin="14dip"
        />

</com.chess.RelLayout>