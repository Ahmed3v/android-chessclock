<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:id="@id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.chess.LinLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Rect.Top.Middle"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_new_logo_bar"
            android:contentDescription="@string/image"
            />

    </com.chess.LinLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/signin_scr_top_padding"
        android:paddingLeft="@dimen/signin_scr_side_padding"
        android:paddingRight="@dimen/signin_scr_side_padding"
        android:layout_centerInParent="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

            <com.facebook.widget.LoginButton
                android:id="@+id/fb_connect"
                style="@style/Button.Facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_with_facebook"
                android:layout_marginBottom="@dimen/new_signup_facebook_margin_bottom"
                android:paddingLeft="5dip"
                />

            <com.chess.RoboTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/new_signup_without_facebook"
                style="@style/SetupSmallFont"
                />

            <com.chess.LeftImageEditText
                android:id="@+id/usernameEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/username"
                android:inputType="textPersonName"
                style="@style/WhiteGrayEditText.Top"
                custom:leftImage="@string/ic_profile"
                android:imeOptions="actionNext"
                android:layout_marginTop="@dimen/new_signup_field_margin_top"
                />

            <com.chess.LeftImageEditText
                android:id="@+id/emailEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                style="@style/WhiteGrayEditText.Middle"
                custom:leftImage="@string/ic_email_light"
                android:imeOptions="actionNext"
                />

            <com.chess.LeftImageEditText
                android:id="@+id/passwordEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:password="true"
                style="@style/WhiteGrayEditText.Middle"
                custom:leftImage="@string/ic_password"
                android:imeOptions="actionNext"
                />

            <com.chess.LeftImageEditText
                android:id="@+id/passwordRetypeEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/retype_password"
                android:inputType="textPassword"
                android:password="true"
                style="@style/WhiteGrayEditText.Bottom"
                custom:leftImage="@string/ic_password"
                android:imeOptions="actionDone"
                />

            <com.chess.RoboButton
                android:id="@+id/completeSignUpBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/complete_sing_up"
                style="@style/Button.Orange2"
                android:layout_marginTop="@dimen/common_main_hit_button_margin_top"
                />

            <com.chess.RoboTextView
                android:id="@+id/termsLinkTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/SetupSmallFont"
                android:paddingTop="10dip"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

