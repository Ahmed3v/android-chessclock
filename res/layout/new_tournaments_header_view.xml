<?xml version="1.0" encoding="utf-8"?>

<com.chess.widgets.LinLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/tournamentsView"
	android:layout_width="0dp"
	android:layout_height="wrap_content"
	android:layout_weight="1"
	style="@style/ListItem.Header_2.Light"
	android:gravity="center_vertical"
	android:paddingLeft="7dip"
	android:paddingRight="15dip">

	<!--Icon-->
	<com.chess.widgets.RoboTextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/ic_tournaments"
		android:textColor="@color/new_light_grey_2"
		style="@style/GlyphIcon.Big" />

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:text="@string/tournaments"
		android:paddingLeft="8dip"
		style="@style/HeaderTitle.Dark"
		app:ttf="Regular" />

</com.chess.widgets.LinLayout>