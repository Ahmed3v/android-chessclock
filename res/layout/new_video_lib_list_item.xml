<?xml version="1.0" encoding="utf-8"?>

<!--Top Video frame-->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:id="@+id/commonDescriptionListView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="61dip"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    android:paddingLeft="@dimen/default_scr_side_padding"
    android:paddingRight="@dimen/default_scr_side_padding"
    android:background="@drawable/white_list_item_selector"
    >

    <!--Title-->
    <com.chess.RoboTextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/completedIconTxt"
        android:paddingBottom="1dip"
        android:text="Test title"
        android:textColor="@color/new_text_blue"
        android:textSize="15sp"
        custom:ttf="Bold"
        />

    <!--Author-->
    <com.chess.RoboTextView
        android:id="@+id/authorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTxt"
        android:text="Test author"
        android:textColor="@color/new_author_dark_grey"
        android:textSize="13sp"
        custom:ttf="Bold"
        />

    <!--Duration-->
    <com.chess.RoboTextView
        android:id="@+id/durationTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/authorTxt"
        android:layout_below="@id/titleTxt"
        android:text="| 27 min"
        android:layout_toRightOf="@id/authorTxt"
        android:paddingTop="2dip"
        android:textColor="@color/stats_label_light_grey"
        android:textSize="12sp"
        />

    <!--Right Icon-->
    <com.chess.RoboTextView
        android:id="@id/completedIconTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/ic_check"
        android:textColor="@color/new_light_grey_2"
        style="@style/GlyphIcon"
        android:layout_marginLeft="6dip"
        />

</RelativeLayout>

