<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.chess"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <com.chess.RoboTextView
        android:id="@+id/emptyView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/no_network"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:textColor="@color/grey_button_1"
        android:paddingLeft="10dip"
        custom:ttf="Bold"
        style="@style/DarkShadowBottom"
        android:visibility="gone"
        />

    <RelativeLayout
        android:id="@+id/loadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="60dip"
        android:visibility="gone"
        >

        <ProgressBar
            android:layout_width="@dimen/pending_progress_bar_size"
            android:layout_height="@dimen/pending_progress_bar_size"
            android:layout_margin="5dip"
            android:layout_centerInParent="true"
            style="?android:attr/progressBarStyle"
            />

    </RelativeLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dip"
        android:background="@android:color/transparent"
        android:visibility="gone"
        />

    <ExpandableListView
        android:id="@+id/expListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:dividerHeight="0dip"
        android:background="@android:color/transparent"
        />


    <!--TODO remove this quickly!-->
    <com.chess.LinLayout
        android:id="@+id/tempCurriculumHeader"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ListItem.Header.Light"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/default_scr_side_padding"
        android:paddingRight="8dip"
        >

        <!--Title-->
        <com.chess.RoboTextView
            android:id="@+id/headerTitleTxt"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Video Curriculum"
            style="@style/HeaderTitle.Dark"
            />

        <!--Right Icon-->
        <com.chess.RoboTextView
            android:id="@+id/headerIconTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ic_up"
            android:textColor="@color/new_light_grey_2"
            style="@style/GlyphIcon.Small"
            />

    </com.chess.LinLayout >

</LinearLayout>