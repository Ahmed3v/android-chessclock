<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@id/mainView"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:paddingTop="@dimen/default_scr_top_padding"
	android:paddingLeft="@dimen/default_scr_side_padding"
	android:paddingRight="@dimen/default_scr_side_padding"

	>

	<!--
		  <com.mopub.mobileads.MoPubView
			  android:id="@+id/adview"
			  android:layout_width="fill_parent"
			  android:layout_height="50dp"
			  android:visibility="visible"
		  />
		-->
	<com.chess.RoboButton
		android:id="@+id/upgradeBtn"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="@style/Text.Button.Upgrade"
		android:text="@string/preferencesUpgrade"
		/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		style="@style/LinearDescription"
		>
		<com.chess.RoboButton
			android:id="@+id/tournaments"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="4"
			android:drawableLeft="@drawable/ic_tournament"
			android:text="@string/tournaments"
			style="@style/Text.Button.Grey"
			/>

		<com.chess.RoboButton
			android:id="@+id/stats"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="6"
			android:drawableLeft="@drawable/ic_chartbar"
			android:text="@string/stats"
			style="@style/Text.Button.Grey"
			/>
	</LinearLayout>

	<com.chess.RoboButton
		android:id="@+id/currentGame"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/currentGame"
		android:visibility="gone"/>

	<com.chess.RoboTextView
		android:id="@+id/startNewGameTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:drawablePadding="10px"
		android:gravity="left"
		android:padding="5px"
		android:text="@string/start_new_game"
		android:visibility="gone"
		/>

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
		style="@style/LinearDescription"
		>

		<Spinner
			android:id="@+id/gamestypes"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_weight="4"
			android:entries="@array/onlineSpinner"
			/>

		<com.chess.RoboButton
			android:id="@+id/start"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="6"
			/>

	</LinearLayout>

	<com.chess.RoboTextView
		android:id="@+id/challengesListTitle"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_weight="1"
		android:drawablePadding="10px"
		android:gravity="left"
		android:padding="5px"
		android:text="Challenges:"

		android:visibility="visible"/>

	<ListView
		android:id="@+id/GamesList"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1"
		/>

</LinearLayout>