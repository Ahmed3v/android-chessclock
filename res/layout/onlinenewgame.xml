<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">

    <TextView android:layout_height="wrap_content"
              android:layout_width="fill_parent" android:id="@+id/removeAds"
              android:text="@string/removeAds" android:background="#ffffcd"
              android:textColor="#0066cc" android:textStyle="bold"
              android:drawableLeft="@drawable/star" android:padding="7dp"
              android:drawablePadding="10dp" android:visibility="gone"
              android:textSize="17dip" android:gravity="left">
    </TextView>

    <LinearLayout
        android:id="@+id/adview_wrapper"
        android:layout_height="50dip"
        android:layout_width="320dip"
        android:visibility="gone"
        android:layout_gravity="center"/>

    <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:padding="3dip"
              android:gravity="center" android:textStyle="bold" android:textSize="16dip" android:textColor="#fff"
              android:text="@string/onlineNewGametitle"></TextView>
    <ImageView android:layout_width="fill_parent" android:layout_height="5dip" android:background="#00bb00"></ImageView>

    <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:orientation="vertical">
        <Button
            android:id="@+id/friendchallenge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="@string/challengeFriend"
            />
        <Button
            android:id="@+id/challengecreate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:text="@string/createNewChallenge"
            />
        <Button
            android:id="@+id/currentGame"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:text="@string/currentGame"
            android:visibility="gone"
            />

        <TextView android:layout_height="wrap_content" android:layout_width="fill_parent" android:paddingBottom="5dip"
                  android:paddingLeft="20dip" android:paddingTop="5dip" android:textColor="#fff"
                  android:textSize="16dip" android:text="@string/onlineChallenges"></TextView>
        <ListView android:layout_width="fill_parent" android:layout_height="fill_parent"
                  android:id="@+id/openChallenges"></ListView>
    </LinearLayout>

</LinearLayout>
