<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/removeAds"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffcd"
        android:drawableLeft="@drawable/star"
        android:drawablePadding="10dp"
        android:gravity="left"
        android:padding="7dp"
        android:text="@string/removeAds"
        android:textColor="#0066cc"
        android:textSize="17dip"
        android:textStyle="bold"
        android:visibility="gone" >
    </TextView>

    <LinearLayout
        android:id="@+id/adview_wrapper"
        android:layout_width="320dip"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:visibility="gone" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dip"
        android:text="@string/onlineNewGametitle"
        android:textColor="#fff"
        android:textSize="16dip"
        android:textStyle="bold" >
    </TextView>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="#00bb00" >
    </ImageView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/friendchallenge"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:text="@string/challengeFriend" />

        <Button
            android:id="@+id/challengecreate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:text="@string/createNewChallenge" />

        <Button
            android:id="@+id/currentGame"
            android:layout_width="fill_parent"
            android:layout_height="45dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:text="@string/currentGame"
            android:visibility="gone" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dip"
            android:paddingLeft="20dip"
            android:paddingTop="5dip"
            android:text="@string/onlineChallenges"
            android:textColor="#fff"
            android:textSize="16dip" >
        </TextView>

        <ListView
            android:id="@+id/openChallenges"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </ListView>
    </LinearLayout>

</LinearLayout>