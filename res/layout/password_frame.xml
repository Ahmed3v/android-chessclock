<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.chess.widgets.LinLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<!-- Old Password -->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/LinearListItem">
			<!--Label-->
			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/old_password"
				android:layout_weight="1"
				style="@style/SettingsListText" />

			<!--Keywords edit-->
			<com.chess.widgets.RoboEditText
				android:id="@+id/oldPasswordEdt"
				android:inputType="text"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:minHeight="26dp"
				android:gravity="center_vertical"
				android:background="@drawable/edit_grey_one_default"
				android:paddingTop="@dimen/smaller_scr_side_padding"
				android:paddingBottom="@dimen/smaller_scr_side_padding"
				android:password="true"
				android:imeOptions="actionNext" />

		</com.chess.widgets.LinLayout>

		<!-- New Password -->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/LinearListItem">
			<!--Label-->
			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/new_password"
				android:layout_weight="1"
				style="@style/SettingsListText" />

			<!--Keywords edit-->
			<com.chess.widgets.RoboEditText
				android:id="@+id/newPasswordEdt"
				android:inputType="text"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:minHeight="26dp"
				android:gravity="center_vertical"
				android:background="@drawable/edit_grey_one_default"
				android:paddingTop="@dimen/smaller_scr_side_padding"
				android:paddingBottom="@dimen/smaller_scr_side_padding"
				android:password="true"
				android:imeOptions="actionNext" />

		</com.chess.widgets.LinLayout>
		<!-- Re-type Password -->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/LinearListItem">
			<!--Label-->
			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/retype_password"
				android:layout_weight="1"
				style="@style/SettingsListText" />

			<!--Keywords edit-->
			<com.chess.widgets.RoboEditText
				android:id="@+id/retypePasswordEdt"
				android:inputType="text"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:minHeight="26dp"
				android:gravity="center_vertical"
				android:background="@drawable/edit_grey_one_default"
				android:paddingTop="@dimen/smaller_scr_side_padding"
				android:paddingBottom="@dimen/smaller_scr_side_padding"
				android:password="true"
				android:imeOptions="actionSend"
				android:imeActionLabel="@string/send" />

		</com.chess.widgets.LinLayout>

		<!--Change Password Button-->
		<com.chess.widgets.LinLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/ListItem"
			android:paddingTop="@dimen/default_scr_bottom_padding"
			android:paddingBottom="@dimen/default_scr_bottom_padding"
			>

			<com.chess.widgets.RoboButton
				android:id="@+id/changePasswordBtn"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="@string/change_password"
				style="@style/Button.OrangeNoBorder" />

		</com.chess.widgets.LinLayout>

	</com.chess.widgets.LinLayout>
</ScrollView>