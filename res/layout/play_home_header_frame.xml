<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<!--Game Board and Game Panel-->
	<com.chess.ui.views.NotationsView
		android:id="@+id/notationsView"
		android:layout_width="match_parent"
		android:layout_height="@dimen/notations_view_height"
		style="@style/NotationsStyle"
		android:visibility="gone" />

	<!--New Game-->
	<com.chess.widgets.LinLayout
		android:id="@+id/newGameHeaderView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		style="@style/ListItem.Header_2.Dark"
		android:layout_marginTop="2dp">

		<!--Icon-->
		<com.chess.widgets.RoboTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ic_add"
			android:textColor="@color/new_light_grey_2"
			style="@style/GlyphIcon.Big" />

		<com.chess.widgets.RoboTextView
			android:id="@+id/liveChessHeaderTxt"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/new_game"
			style="@style/HeaderTitle.Light" />

		<com.chess.widgets.RoboTextView
			android:id="@+id/liveRatingTxt"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center_vertical"
			android:textColor="@color/new_light_grey_2"
			custom:ttf="Bold" />

	</com.chess.widgets.LinLayout>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.chess.ui.views.chess_boards.ChessBoardLiveView
			android:id="@+id/boardview"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />

		<!--Start New Game overlay-->
		<LinearLayout
			android:id="@+id/startOverlayView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="160dp"
			android:background="@drawable/square_flat_border_white_back"
			android:paddingTop="@dimen/start_new_game_overlay_padding_top"
			android:paddingLeft="@dimen/start_new_game_overlay_padding_side"
			android:paddingRight="@dimen/start_new_game_overlay_padding_side"
			android:paddingBottom="@dimen/start_new_game_overlay_padding_side"
			android:orientation="vertical"
			android:visibility="invisible">

			<!--New Game-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/startTitleTxt"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:textSize="@dimen/popup_title_text_size_big"
				android:textColor="@color/new_subtitle_dark_grey"
				android:text="@string/new_game"
				custom:ttf="Bold" />

			<!--Players online count-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/onlinePlayersCntTxt"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				android:gravity="center"
				android:textSize="@dimen/popup_title_text_size_medium"
				android:textColor="@color/new_author_dark_grey" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<!--10|5-->
				<com.chess.widgets.RoboButton
					android:id="@+id/timeSelectBtn"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="0.8"
					android:minHeight="@dimen/big_orange_button_height"
					android:layout_marginEnd="5dp"
					android:layout_marginRight="5dp"
					style="@style/Button.Glassy.Small"
					android:textSize="@dimen/big_button_text_size"
					android:textColor="@color/text_controls_icons_white" />

				<!--Play! -->
				<com.chess.widgets.RoboButton
					android:id="@+id/gamePlayBtn"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:text="@string/play"
					style="@style/Button.OrangeNoBorder.Big"
					android:layout_marginStart="5dp"
					android:layout_marginLeft="5dp"
					android:layout_weight="1.2" />

			</LinearLayout>

		</LinearLayout>

	</RelativeLayout>

</LinearLayout>

