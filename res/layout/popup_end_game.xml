<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="0dp"
	>
	<!--End game title-->
	<com.chess.RoboTextView
		android:id="@+id/endGameTitleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		custom:ttf="Bold"
		android:textSize="@dimen/game_end_popup_text_size"
        android:textColor="@color/new_dark_green"
		/>

	<!--Wins reason-->
	<com.chess.RoboTextView
		android:id="@+id/endGameReasonTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/new_author_dark_grey"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
		/>

	<!--Rating title-->
	<com.chess.RoboTextView
		android:id="@+id/ratingTitleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/new_author_dark_grey"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
		/>

	<!--Rating-->
	<com.chess.RoboTextView
		android:id="@+id/yourRatingTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		custom:ttf="Bold"
        android:textColor="@color/new_dark_green"
        android:textSize="21sp"
        android:paddingBottom="6dip"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		>
		<!--New Game -->

		<com.chess.RoboButton
			android:id="@+id/newGamePopupBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/new_game"
			style="@style/Button.OrangeNoBorder"
			/>

		<!--Rematch -->
		<com.chess.RoboButton
			android:id="@+id/rematchPopupBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/rematch"
			style="@style/Button.OrangeNoBorder"
			/>

		<!--Review-->
		<com.chess.RoboButton
			android:id="@+id/reviewPopupBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/review"
			style="@style/Button.Grey2Solid.NoBorder.Light"
			/>

		<!--Home-->
		<com.chess.RoboButton
			android:id="@+id/homePopupBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/home"
			style="@style/Button.Grey2Solid.NoBorder.Light"/>

        <!--Link text-->
        <com.chess.RoboTextView
            android:id="@+id/rulesLinkTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorLink="@color/white"
            android:text="@string/fair_play_policy_link"
            android:gravity="center"
            android:padding="5dip"
            android:visibility="gone"
            />

        <!--Share-->
        <com.chess.RoboButton
            android:id="@+id/shareBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button.Facebook"
            android:text="@string/share_game"
            android:drawableLeft="@null"
            android:paddingLeft="20dip"
            />
	</LinearLayout>

</LinearLayout>