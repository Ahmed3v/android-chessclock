<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
    android:paddingTop="30dip"
	>

	<!--End game title-->
	<com.chess.RoboTextView
		android:id="@+id/endGameTitleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		custom:ttf="Bold"
		android:textSize="@dimen/game_end_popup_text_size"
        android:textColor="@color/new_subtitle_dark_grey"
        android:text="Title"
		/>

	<!--Wins reason-->
	<com.chess.RoboTextView
		android:id="@+id/endGameReasonTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/new_author_dark_grey"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
        android:text="Reason"
		/>

	<!--Rating title-->
	<com.chess.RoboTextView
		android:id="@+id/ratingTitleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/new_author_dark_grey"
        android:paddingTop="6dip"
        android:paddingBottom="6dip"
        android:text="New Rating"
		/>

	<!--Rating-->
	<com.chess.RoboTextView
		android:id="@+id/yourRatingTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		custom:ttf="Bold"
        android:textColor="@color/new_subtitle_dark_grey"
        android:textSize="21sp"
        android:text="Rating"
		/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:paddingLeft="33dip"
        android:paddingTop="20dip"
        android:paddingRight="33dip"
        android:paddingBottom="20dip"
		>
        <!--Rematch -->
        <com.chess.RoboButton
            android:id="@+id/rematchPopupBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/rematch"
            style="@style/Button.OrangeNoBorder"
            android:layout_marginRight="5dip"
            />

        <!--New Game -->
		<com.chess.RoboButton
			android:id="@+id/newGamePopupBtn"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:text="@string/new_game"
			style="@style/Button.OrangeNoBorder"
            android:layout_marginLeft="5dip"
			/>

	</LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_button_overlay_p"
        android:paddingLeft="33dip"
        android:paddingTop="20dip"
        android:paddingRight="33dip"
        android:paddingBottom="20dip"
        >

        <!--Share-->
        <com.chess.RoboButton
            android:id="@+id/shareBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Button.Facebook"
            android:text="@string/share_game"
            android:drawableLeft="@null"
            android:paddingLeft="20dip"
            />
    </FrameLayout>

</LinearLayout>