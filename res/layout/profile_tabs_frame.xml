<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res/com.chess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_above="@+id/bannerUpgradeView"
            >

        <include
                layout="@layout/profiles_header_view"
                android:layout_gravity="left|start"/>

        <!--Tabs-->
        <RadioGroup
                android:id="@+id/tabRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <!--		<RoboRadioButton
                        android:id="@+id/leftTabBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/Rect.Tab.Left"
                        app:themeColor="true"
                        />-->
            <com.chess.widgets.RoboRadioButton
                    android:id="@+id/centerTabBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Rect.Tab.Middle"
                    app:themeColor="true"/>

            <com.chess.widgets.RoboRadioButton
                    android:id="@+id/rightTabBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    style="@style/Rect.Tab.Right"
                    app:themeColor="true"/>

        </RadioGroup>

        <FrameLayout
                android:id="@+id/tab_content_frame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


    </LinearLayout>

    <!--Ads-->
    <include
            android:id="@id/bannerUpgradeView"
            layout="@layout/mopub_ad_view"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

</RelativeLayout>