<?xml version="1.0" encoding="utf-8"?>
<com.chess.widgets.LinLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="@dimen/welcome_result_list_item_height"
	android:orientation="horizontal"
	style="@style/ListItem"
	android:gravity="center_vertical"
	android:paddingStart="@dimen/default_scr_side_padding"
	android:paddingLeft="@dimen/default_scr_side_padding">

	<!--Icon-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/iconTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/white"
		android:textSize="33dp"
		android:layout_marginEnd="9dp"
		android:layout_marginRight="9dp"
		style="@style/GlyphIcon"
		android:shadowColor="@color/back_shadows_chess"
		android:shadowRadius="1.0"
		android:shadowDx="0"
		android:shadowDy="0" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/rowTitleTxt"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="1"
		style="@style/SettingsListText"
		custom:ttf="Bold"
		android:textSize="20sp"
		android:paddingStart="10dp"
		android:paddingLeft="10dp" />

</com.chess.widgets.LinLayout>