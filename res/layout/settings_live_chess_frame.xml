<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<com.chess.widgets.LinLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<!--Show Submit button-->
		<com.chess.widgets.LinLayout
			android:id="@+id/showSubmitView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/LinearListItem"
			android:background="@drawable/transparent_list_item_selector">

			<!--Label-->
			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/show_submit_button"
				android:layout_weight="1"
				style="@style/SettingsListText" />

			<com.chess.widgets.SwitchButton
				android:id="@+id/showSubmitSwitch"
				style="@style/Switch.Default.Yes" />
		</com.chess.widgets.LinLayout>

		<!--Auto-queen pawn promotion-->
		<com.chess.widgets.LinLayout
			android:id="@+id/autoQueenView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/LinearListItem"
			android:background="@drawable/transparent_list_item_selector">

			<!--Label-->
			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/auto_queen"
				android:layout_weight="1"
				style="@style/SettingsListText" />

			<com.chess.widgets.SwitchButton
				android:id="@+id/autoQueenSwitch"
				style="@style/Switch.Default.Yes" />
		</com.chess.widgets.LinLayout>

		<!--General-->
		<com.chess.widgets.LinLayout
			android:id="@+id/generalView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			style="@style/LinearListItem"
			android:background="@drawable/transparent_list_item_selector"
			android:visibility="gone">

			<!--Label-->
			<com.chess.widgets.RoboTextView
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:text="@string/general"
				android:layout_weight="1"
				style="@style/SettingsListText" />

		</com.chess.widgets.LinLayout>

	</com.chess.widgets.LinLayout>

</ScrollView>