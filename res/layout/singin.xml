<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:robo="http://schemas.android.com/apk/res/com.chess"
    android:id="@+id/mainView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:padding="20dip" >


    <ImageView
        android:id="@+id/logoImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/signin_logo_margin_top"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/logo" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoImg"
        android:layout_marginTop="@dimen/signin_main_margin_top"
        android:orientation="vertical" >

        <com.chess.RoboEditText
            android:id="@+id/username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/singinUsername"
            robo:ttf="Regular"
            />

        <com.chess.RoboEditText
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/singinPassword"
            android:inputType="textPersonName"
            android:password="true"
            android:singleLine="true"
            robo:ttf="Regular"
            />

        <com.chess.RoboButton
            android:id="@+id/singin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/singinButton"
            robo:ttf="Regular"
            />

        <com.facebook.android.LoginButton
            android:id="@+id/fb_connect"
            style="@style/f_button_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/facebook_icon"

            />

        <com.chess.RoboButton
            android:id="@+id/singup"
            style="@style/button_green"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/singupButton"
            robo:ttf="Regular"

            />

        <com.chess.RoboButton
            android:id="@+id/guestplay"
            style="@style/button_grey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/singinPlayguest"
            robo:ttf="Regular"

             />
    </LinearLayout>

