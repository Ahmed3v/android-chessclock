<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" android:layout_width="fill_parent">
	<LinearLayout android:layout_height="fill_parent"
		android:layout_width="fill_parent" android:orientation="vertical"
		android:padding="5dip">
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:id="@+id/Upgrade"
			android:text="@string/videoUpgrade" android:background="#ffffcd"
			android:textColor="#0066cc" android:textStyle="bold"
			android:drawableLeft="@drawable/star" android:padding="5px"
			android:drawablePadding="10dp" android:visibility="gone"
			android:textSize="16dip" android:gravity="left"></TextView>

		<LinearLayout
		    android:layout_height="wrap_content"
		    android:id="@+id/recent"
		    android:layout_width="fill_parent"
		    android:orientation="vertical"
		    android:visibility="gone">
		    <TextView
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:padding="5dip"
		        android:textStyle="bold"
		        android:textSize="16dip"
		        android:textColor="#fff"
		        android:id="@+id/title"
		        android:layout_marginLeft="30dip"
		        />
		    <TextView
		        android:layout_height="wrap_content"
		        android:layout_width="fill_parent"
		        android:padding="5dip"
		        android:textColor="#fff"
		        android:maxLines="4"
		        android:id="@+id/desc"
		        />
		    <Button
		        android:id="@+id/play"
		        android:layout_height="wrap_content"
		        android:layout_width="100dip"
		        android:text="@string/play"
		        />
		</LinearLayout>


		<TextView android:layout_height="wrap_content" android:text="@string/skill"
			android:layout_width="fill_parent" android:padding="5dip"
			android:textStyle="bold" android:textSize="16dip" android:textColor="#fff"></TextView>
		<Spinner android:layout_height="wrap_content" android:id="@+id/skills"
			android:entries="@array/skill" android:layout_width="fill_parent"></Spinner>
		<TextView android:layout_height="wrap_content"
			android:layout_width="fill_parent" android:padding="5dip"
			android:text="@string/category" android:textStyle="bold"
			android:textSize="16dip" android:textColor="#fff"></TextView>
		<Spinner android:layout_height="wrap_content" android:entries="@array/category"
			android:layout_width="fill_parent" android:id="@+id/categories"></Spinner>
		<Button
			android:id="@+id/start"
			android:layout_height="wrap_content"
			android:layout_width="100dip"
			android:text="@string/search"
			/>

</LinearLayout>
</ScrollView>
