<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/mainView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/default_scr_top_padding"
        android:paddingLeft="@dimen/default_scr_side_padding"
        android:paddingRight="@dimen/default_scr_side_padding"
        >

        <TextView
            android:id="@+id/Upgrade"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffcd"
            android:drawableLeft="@drawable/star"
            android:drawablePadding="10dp"
            android:gravity="left"
            android:padding="5px"
            android:text="@string/videoUpgrade"
            android:textColor="#0066cc"
            android:textSize="16dip"
            android:textStyle="bold"
            android:visibility="gone" >
        </TextView>

        <LinearLayout
            android:id="@+id/recent"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:padding="5dip"
                android:textColor="#fff"
                android:textSize="16dip"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:padding="5dip"
                android:textColor="#fff" />

            <Button
                android:id="@+id/play"
                android:layout_width="100dip"
                android:layout_height="wrap_content"
                android:text="@string/play" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="@string/skill"
            android:textColor="#fff"
            android:textSize="16dip"
            android:textStyle="bold" >
        </TextView>

        <Spinner
            android:id="@+id/skills"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/skill" >
        </Spinner>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="@string/category"
            android:textColor="#fff"
            android:textSize="16dip"
            android:textStyle="bold" >
        </TextView>

        <Spinner
            android:id="@+id/categories"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:entries="@array/category" >
        </Spinner>

        <Button
            android:id="@+id/start"
            android:layout_width="100dip"
            android:layout_height="wrap_content"
            android:text="@string/search" />
    </LinearLayout>

</ScrollView>