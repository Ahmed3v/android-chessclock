<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<!--Video Thumbnail-->
	<FrameLayout
		android:id="@+id/thumbnailImg"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp">

		<VideoView
			android:id="@+id/videoView"
			android:layout_width="match_parent"
			android:layout_height="240dp"
			android:layout_gravity="center"
			android:visibility="invisible" />

		<com.chess.backend.image_load.ProgressImageView
			android:id="@+id/videoBackImg"
			android:layout_width="match_parent"
			android:layout_height="240dp"
			android:layout_gravity="center"
			android:adjustViewBounds="true"
			android:scaleType="fitXY"
			android:contentDescription="@string/image"
			android:background="@drawable/video_thumb_back" />

		<ProgressBar
			android:id="@+id/videoProgress"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:visibility="invisible" />

		<!--Back round for icon-->
		<FrameLayout
			android:id="@+id/playBtnBackView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:gravity="fill"
			android:background="@drawable/video_play_btn_back_big_selector">

			<!--Icon-->
			<com.chess.widgets.RoboTextView
				android:id="@+id/playBtn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:text="@string/ic_play"
				style="@style/GlyphIcon.RoundBack.Play"
				android:textSize="@dimen/glyph_icon_round_back_big"
				android:layout_marginStart="5dp"
				android:layout_marginLeft="5dp"
				android:gravity="fill" />

		</FrameLayout>

		<!--FullScrBtn-->
		<com.chess.widgets.RoboTextView
			android:id="@+id/fullScrBtn"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/ic_extend"
			style="@style/GlyphIcon.Big"
			android:layout_gravity="right"
			android:layout_margin="8dp" />

	</FrameLayout>

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/titleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/thumbnailImg"
		style="@style/Title"
		android:paddingBottom="9dp"
		/>

	<com.chess.backend.image_load.ProgressImageView
		android:id="@+id/thumbnailAuthorImg"
		android:layout_width="35dp"
		android:layout_height="35dp"
		style="@style/AuthorImage"
		android:layout_below="@id/titleTxt"
		android:layout_marginBottom="13dp" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/authorTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/thumbnailAuthorImg"
		android:layout_toRightOf="@id/thumbnailAuthorImg"
		android:layout_below="@id/titleTxt"
		style="@style/AuthorName"
		/>

	<ImageView
		android:id="@+id/countryImg"
		android:layout_width="20dp"
		android:layout_height="20dp"
		android:contentDescription="@string/country"
		android:layout_toEndOf="@id/authorTxt"
		android:layout_toRightOf="@id/authorTxt"
		android:layout_below="@id/titleTxt"
		android:layout_marginTop="-6dp"
		style="@style/PaddingLeftSmall"/>


	<com.chess.widgets.RoboTextView
		android:id="@+id/dateTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toEndOf="@id/thumbnailAuthorImg"
		android:layout_toRightOf="@id/thumbnailAuthorImg"
		android:layout_below="@id/authorTxt"
		style="@style/PaddingLeftSmall"
		android:textColor="@color/new_subtitle_light_grey"
		android:textSize="@dimen/default_text_size_small" />

	<com.chess.widgets.RoboTextView
		android:id="@+id/contentTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingBottom="10dp"
		android:layout_below="@id/thumbnailAuthorImg"
		style="@style/Content.Selectable" />

	<ProgressBar
		android:id="@+id/loadingCommentsView"
		android:layout_width="@dimen/pending_progress_bar_size"
		android:layout_height="@dimen/pending_progress_bar_size"
		android:layout_below="@id/contentTxt"
		android:layout_margin="10dp"
		android:layout_centerInParent="true"
		style="?android:attr/progressBarStyle"
		android:visibility="gone" />

</RelativeLayout>
