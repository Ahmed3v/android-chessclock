<?xml version="1.0" encoding="utf-8"?>

<!--Top Video frame-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:custom="http://schemas.android.com/apk/res/com.chess"
	android:id="@+id/commonDescriptionListView"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:minHeight="61dp"
	android:paddingTop="10dp"
	android:paddingBottom="10dp"
	style="@style/PaddingSidesDefault"
	android:background="@drawable/transparent_list_item_selector">

	<!--Title-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/titleTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_toStartOf="@+id/completedIconTxt"
		android:layout_alignParentLeft="true"
		android:layout_toLeftOf="@+id/completedIconTxt"
		android:paddingBottom="1dp"
		android:text="Test title"
		android:textColor="@color/new_text_blue"
		android:textSize="15sp"
		custom:ttf="Bold" />

	<!--Author-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/authorTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/titleTxt"
		android:text="Test author"
		android:textColor="@color/new_author_dark_grey"
		android:textSize="@dimen/default_text_size_small"
		custom:ttf="Bold" />

	<!--Duration-->
	<com.chess.widgets.RoboTextView
		android:id="@+id/durationTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@id/authorTxt"
		android:layout_below="@id/titleTxt"
		android:text="| 27 min"
		android:layout_toEndOf="@id/authorTxt"
		android:layout_toRightOf="@id/authorTxt"
		android:paddingTop="2dp"
		android:textColor="@color/stats_label_light_grey"
		android:textSize="12sp" />

	<!--Right Icon-->
	<com.chess.widgets.RoboTextView
		android:id="@id/completedIconTxt"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentEnd="true"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:text="@string/ic_check"
		android:textColor="@color/new_light_grey_2"
		style="@style/GlyphIcon"
		android:layout_marginStart="6dp"
		android:layout_marginLeft="6dp" />

</RelativeLayout>

