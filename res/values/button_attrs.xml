    <declare-styleable name="RoboButton">
        <attr name="btn_radius" format="reference|dimension" />      <!--Common button radius-->
        <attr name="btn_is_solid" format="reference|boolean" />
        <attr name="btn_gradient_angle" format="reference|integer" />
        <attr name="btn_padding" format="reference|dimension" />
        <attr name="btn_bevel_lvl" format="reference|integer" />
        <attr name="btn_bevel_inset" format="reference|dimension" />

        <!--Default colors-->
        <attr name="btn_outer_border" format="reference|color" />    <!--Outer border color-->
        <attr name="btn_top" format="reference|color" /> <!--Top line bevel-->
        <attr name="btn_left" format="reference|color" /> <!--Left line bevel-->
        <attr name="btn_right" format="reference|color" /> <!--Right line bevel-->
        <attr name="btn_bottom" format="reference|color" /> <!--Bottom line bevel-->
            <!--Level 2-->
        <attr name="btn_top_2" format="reference|color" />
        <attr name="btn_left_2" format="reference|color" />
        <attr name="btn_right_2" format="reference|color" />
        <attr name="btn_bottom_2" format="reference|color" />

        <attr name="btn_solid" format="reference|color" /> <!--Button main solid-->
        <attr name="btn_gradient_start" format="reference|color" />  <!--Button main gradient-->
        <attr name="btn_gradient_center" format="reference|color" />
        <attr name="btn_gradient_end" format="reference|color" />

        <!--Pressed colors-->
        <attr name="btn_top_p" format="reference|color" />
        <attr name="btn_left_p" format="reference|color" />
        <attr name="btn_right_p" format="reference|color" />
        <attr name="btn_bottom_p" format="reference|color" />

            <!--Level 2-->
        <attr name="btn_top_2_p" format="reference|color" />
        <attr name="btn_left_2_p" format="reference|color" />
        <attr name="btn_right_2_p" format="reference|color" />
        <attr name="btn_bottom_2_p" format="reference|color" />

        <attr name="btn_solid_p" format="reference|color" /> <!--Button main solid pressed-->
        <attr name="btn_gradient_start_p" format="reference|color" /> <!--Button main gradient-->
        <attr name="btn_gradient_center_p" format="reference|color" />
        <attr name="btn_gradient_end_p" format="reference|color" />

        <!--Disabled colors-->
        <attr name="btn_top_d" format="reference|color" />
        <attr name="btn_left_d" format="reference|color" />
        <attr name="btn_right_d" format="reference|color" />
        <attr name="btn_bottom_d" format="reference|color" />

        <attr name="btn_solid_d" format="reference|color" /> <!--Button main solid pressed-->
        <attr name="btn_gradient_start_d" format="reference|color" /> <!--Button main gradient-->
        <attr name="btn_gradient_center_d" format="reference|color" />
        <attr name="btn_gradient_end_d" format="reference|color" />

    </declare-styleable>


